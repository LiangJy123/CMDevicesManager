<controls:MicaWindow  x:Class="CMDevicesManager.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CMDevicesManager"
        xmlns:controls="clr-namespace:MicaWPF.Controls;assembly=MicaWPF"
        mc:Ignorable="d"
        Height="800" Width="1200"
        SystemBackdropType="Acrylic"
        ResizeMode="CanResize"
        MinWidth="1500" MinHeight="800"
        WindowStartupLocation="CenterScreen"
        Title=" " 
        FontFamily="{DynamicResource AppFontFamily}"
        TitleBarType="WinUI" 
        Loaded="Window_Loaded" >

    <!-- ✅ 资源必须先定义 -->
    <controls:MicaWindow.Resources>
        <!-- ✅ 全新配色方案 - 深蓝紫渐变 + 青色强调 -->

        <!-- 标题栏按钮样式 -->
        <Style x:Key="TitleBarButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#E0FFFFFF"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="Normal"/>
            <Setter Property="Padding" Value="0"/>

            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="BorderElement"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                SnapsToDevicePixels="True"
                                UseLayoutRounding="True">

                            <Grid Background="Transparent">
                                <ContentPresenter 
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    Margin="0"
                                    RecognizesAccessKey="True"/>
                            </Grid>
                        </Border>

                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="BorderElement" 
                                        Property="Background" 
                                        Value="#40FFFFFF"/>
                            </Trigger>

                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="BorderElement" 
                                        Property="Background" 
                                        Value="#60FFFFFF"/>
                            </Trigger>

                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Opacity" Value="0.5"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- 导航项容器样式 - 深蓝紫科技风 -->
        <Style x:Key="NavItemContainerStyle" TargetType="ListBoxItem">
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Margin" Value="0,10,0,10"/>
            <Setter Property="Padding" Value="14,10"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="SnapsToDevicePixels" Value="True"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ListBoxItem">
                        <Grid>
                            <!-- 左侧指示条 - 改为青色 -->
                            <Border x:Name="SelectionBar"
                                    Width="4"
                                    CornerRadius="2"
                                    HorizontalAlignment="Left"
                                    Margin="0"
                                    Opacity="0"
                                    Background="#00D9FF"/>
                            <!-- 主容器 -->
                            <Border x:Name="Bd"
                                    Background="Transparent"
                                    CornerRadius="8"
                                    Padding="0"
                                    RenderTransformOrigin="0.5,0.5">
                                <Border.RenderTransform>
                                    <ScaleTransform x:Name="Scale" ScaleX="1" ScaleY="1"/>
                                </Border.RenderTransform>
                                <ContentPresenter HorizontalAlignment="Center"
                                                  VerticalAlignment="Center"/>
                            </Border>
                        </Grid>

                        <ControlTemplate.Resources>
                            <!-- Hover 放大 -->
                            <Storyboard x:Key="HoverInStoryboard">
                                <DoubleAnimation Storyboard.TargetName="Scale"
                                                 Storyboard.TargetProperty="ScaleX"
                                                 To="1.08" Duration="0:0:0.12" FillBehavior="HoldEnd"/>
                                <DoubleAnimation Storyboard.TargetName="Scale"
                                                 Storyboard.TargetProperty="ScaleY"
                                                 To="1.08" Duration="0:0:0.12" FillBehavior="HoldEnd"/>
                            </Storyboard>
                            <Storyboard x:Key="HoverOutStoryboard">
                                <DoubleAnimation Storyboard.TargetName="Scale"
                                                 Storyboard.TargetProperty="ScaleX"
                                                 To="1" Duration="0:0:0.15"/>
                                <DoubleAnimation Storyboard.TargetName="Scale"
                                                 Storyboard.TargetProperty="ScaleY"
                                                 To="1" Duration="0:0:0.15"/>
                            </Storyboard>
                        </ControlTemplate.Resources>

                        <ControlTemplate.Triggers>
                            <!-- 悬浮 - 蓝紫色光晕 -->
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Bd" Property="Background">
                                    <Setter.Value>
                                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1" Opacity="0.4">
                                            <GradientStop Color="#5B7FFF" Offset="0.0"/>
                                            <GradientStop Color="#7B8FFF" Offset="1.0"/>
                                        </LinearGradientBrush>
                                    </Setter.Value>
                                </Setter>
                                <Setter TargetName="SelectionBar" Property="Opacity" Value="0.7"/>
                                <Setter Property="Foreground" Value="White"/>
                            </Trigger>

                            <!-- 选中 - 青色高亮 -->
                            <Trigger Property="IsSelected" Value="True">
                                <Setter TargetName="Bd" Property="Background">
                                    <Setter.Value>
                                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1" Opacity="0.5">
                                            <GradientStop Color="#5B7FFF" Offset="0.0"/>
                                            <GradientStop Color="#00D9FF" Offset="1.0"/>
                                        </LinearGradientBrush>
                                    </Setter.Value>
                                </Setter>
                                <Setter TargetName="SelectionBar" Property="Opacity" Value="1"/>
                                <Setter Property="Foreground" Value="White"/>
                            </Trigger>

                            <!-- 禁用 -->
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Opacity" Value="0.45"/>
                            </Trigger>

                            <!-- Hover 动画事件 -->
                            <EventTrigger RoutedEvent="MouseEnter">
                                <BeginStoryboard Storyboard="{StaticResource HoverInStoryboard}"/>
                            </EventTrigger>
                            <EventTrigger RoutedEvent="MouseLeave">
                                <BeginStoryboard Storyboard="{StaticResource HoverOutStoryboard}"/>
                            </EventTrigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </controls:MicaWindow.Resources>

    <!-- ✅ 标题栏 - 改为青色到紫色渐变 -->
    <controls:MicaWindow.TitleBarContent>
        <StackPanel Orientation="Horizontal" 
                    VerticalAlignment="Center" 
                    HorizontalAlignment="Left"
                    Margin="-20,0,0,0">
            <TextBlock Text="{DynamicResource AppTitle}"
                       FontWeight="Bold"
                       FontSize="20"
                       VerticalAlignment="Center">
                <TextBlock.Foreground>
                    <LinearGradientBrush x:Name="ShinyBrush" StartPoint="0,1" EndPoint="1,0">
                        <GradientStop Color="#00D9FF" Offset="0.0"/>
                        <GradientStop Color="White" Offset="0.3"/>
                        <GradientStop Color="#5B7FFF" Offset="0.6"/>
                    </LinearGradientBrush>
                </TextBlock.Foreground>
                <TextBlock.Effect>
                    <DropShadowEffect Color="#00D9FF" 
                                      ShadowDepth="0" 
                                      BlurRadius="12" 
                                      Opacity="0.6"/>
                </TextBlock.Effect>
            </TextBlock>
        </StackPanel>
    </controls:MicaWindow.TitleBarContent>

    <Grid>

        <Border x:Name="RootOuterBorder" Background="Transparent" BorderThickness="0" CornerRadius="0">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- 主体 -->
                <Grid Grid.Row="0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- ✅ 左侧导航栏 - 卡片式圆角边框 -->
                    <Border Grid.Column="0" 
                            CornerRadius="16"
                            BorderThickness="1.5"
                            Margin="12,12,8,12"
                            SnapsToDevicePixels="True">
                        <Border.Background>
                            <LinearGradientBrush StartPoint="0,0" EndPoint="0,1" Opacity="0.75">
                                <GradientStop Color="#1A1F3A" Offset="0.0"/>
                                <GradientStop Color="#2D1B3D" Offset="1.0"/>
                            </LinearGradientBrush>
                        </Border.Background>
                        <Border.BorderBrush>
                            <SolidColorBrush Color="#5B7FFF" Opacity="0.35"/>
                        </Border.BorderBrush>
                        <Border.Effect>
                            <DropShadowEffect Color="#6B4FFF" 
                                              Direction="270" 
                                              ShadowDepth="4" 
                                              Opacity="0.3" 
                                              BlurRadius="16"/>
                        </Border.Effect>

                        <Grid Width="90">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <!-- 导航 -->
                            <ListBox x:Name="NavList"  Grid.Row="0"
                                     SelectionChanged="NavList_SelectionChanged"
                                     Background="Transparent"
                                     Foreground="White"
                                     BorderThickness="0"
                                     Margin="4,8,4,8"
                                     ItemContainerStyle="{StaticResource NavItemContainerStyle}">
                                <ListBoxItem Tag="Pages/HomePage.xaml">
                                    <StackPanel Orientation="Vertical">
                                        <TextBlock FontFamily="Segoe MDL2 Assets" Text="&#xE80F;" FontSize="22" TextAlignment="Center" HorizontalAlignment="Center"/>
                                        <TextBlock Text="{DynamicResource HomeText}" Margin="0,8,0,0" FontSize="14" TextAlignment="Center" HorizontalAlignment="Center"/>
                                    </StackPanel>
                                </ListBoxItem>
                                <ListBoxItem Tag="Pages/DevicePage.xaml">
                                    <StackPanel Orientation="Vertical">
                                        <TextBlock FontFamily="Segoe MDL2 Assets" Text="&#xE770;" FontSize="22" TextAlignment="Center" HorizontalAlignment="Center"/>
                                        <TextBlock Text="{DynamicResource DeviceText}" Margin="0,8,0,0" FontSize="14" TextAlignment="Center" HorizontalAlignment="Center"/>
                                    </StackPanel>
                                </ListBoxItem>
                                <ListBoxItem  x:Name="ConfigNavItem" Tag="Pages/DeviceConfigPage.xaml">
                                    <StackPanel Orientation="Vertical">
                                        <TextBlock FontFamily="Segoe MDL2 Assets"
                            Text="&#xE8D7;"  FontSize="22"
                            TextAlignment="Center" HorizontalAlignment="Center"/>
                                        <TextBlock Text="Config"
                            Margin="0,8,0,0" FontSize="14"
                            TextAlignment="Center" HorizontalAlignment="Center"/>
                                    </StackPanel>
                                </ListBoxItem>
                                <ListBoxItem x:Name="DemoNavItem" Tag="Pages/DevicePageDemo.xaml">
                                    <StackPanel Orientation="Vertical">
                                        <TextBlock FontFamily="Segoe MDL2 Assets" Text="&#xE770;" FontSize="22" TextAlignment="Center" HorizontalAlignment="Center"/>
                                        <TextBlock Text="Demo" Margin="0,8,0,0" FontSize="14" TextAlignment="Center" HorizontalAlignment="Center"/>
                                    </StackPanel>
                                </ListBoxItem>
                                <ListBoxItem x:Name="RenderNavItem" Tag="Pages/RenderDemoPage.xaml">
                                    <StackPanel Orientation="Vertical">
                                        <TextBlock FontFamily="Segoe MDL2 Assets" Text="&#xE770;" FontSize="22" TextAlignment="Center" HorizontalAlignment="Center"/>
                                        <TextBlock Text="Render" Margin="0,8,0,0" FontSize="14" TextAlignment="Center" HorizontalAlignment="Center"/>
                                    </StackPanel>
                                </ListBoxItem>
                                <ListBoxItem x:Name="PlaymodeNavItem" Tag="Pages/DevicePlayModePage.xaml">
                                    <StackPanel Orientation="Vertical">
                                        <TextBlock FontFamily="Segoe MDL2 Assets" Text="&#xE770;" FontSize="22" TextAlignment="Center" HorizontalAlignment="Center"/>
                                        <TextBlock Text="Playmode" Margin="0,8,0,0" FontSize="14" TextAlignment="Center" HorizontalAlignment="Center"/>
                                    </StackPanel>
                                </ListBoxItem>

                                <ListBoxItem x:Name="SaveImageItem"  Tag="__MirrorSaveImage">
                                    <StackPanel Orientation="Vertical">
                                        <TextBlock FontFamily="Segoe MDL2 Assets" Text="&#xE74E;" FontSize="22" TextAlignment="Center" HorizontalAlignment="Center"/>
                                        <TextBlock Text="Save" Margin="0,8,0,0" FontSize="14" TextAlignment="Center" HorizontalAlignment="Center"/>
                                    </StackPanel>
                                </ListBoxItem>
                                <ListBoxItem x:Name="MirrorToggleItem" Tag="__MirrorToggle">
                                    <StackPanel Orientation="Vertical">
                                        <TextBlock FontFamily="Segoe MDL2 Assets"
                           Text="&#xE771;"  
                           FontSize="22"
                           TextAlignment="Center"
                           HorizontalAlignment="Center"/>
                                        <TextBlock Text="Mirror"
                           Margin="0,8,0,0"
                           FontSize="14"
                           TextAlignment="Center"
                           HorizontalAlignment="Center"/>
                                    </StackPanel>
                                </ListBoxItem>
                                <ListBoxItem Tag="Pages/SettingsPage.xaml" VerticalAlignment="Bottom">
                                    <StackPanel Orientation="Vertical">
                                        <TextBlock FontFamily="Segoe MDL2 Assets" Text="&#xE713;" FontSize="22" TextAlignment="Center" HorizontalAlignment="Center"/>
                                        <TextBlock Text="{DynamicResource SettingsText}" Margin="0,8,0,0" FontSize="14" TextAlignment="Center" HorizontalAlignment="Center"/>
                                    </StackPanel>
                                </ListBoxItem>
                            </ListBox>

                            <!-- VERSION / BUILD LABEL - 青色光晕 -->
                            <TextBlock Grid.Row="1"
                       Text="未公开版本，仅用于内部测试-beta0.0.6"
                       FontSize="10"
                       Foreground="#B8C5FF"
                       TextAlignment="Center"
                       TextWrapping="Wrap"
                       Margin="6,0,6,12"
                       Opacity="0.9" Visibility="Collapsed" />
                        </Grid>
                    </Border>

                    <!-- 内容区域 -->
                    <Grid Grid.Column="1" Margin="4,12,12,12">
                        <Frame x:Name="MainFrame" NavigationUIVisibility="Hidden" Background="Transparent"/>
                      
                        <Grid x:Name="GlobalMirrorHost"
                        Visibility="Hidden" 
                        Opacity="1"
                        IsHitTestVisible="False"  Panel.ZIndex="9">


                            <!-- 关键修改 3 -->

                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="32"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>

                                <DockPanel Grid.Row="0">
                                    <TextBlock Text="Mirror Preview (512x512)" 
                     Foreground="White"
                     FontSize="14"
                     FontWeight="SemiBold"
                     VerticalAlignment="Center"/>
                                    <Button Content="✕"
                  Width="32"
                  Height="24"
                  HorizontalAlignment="Right"
                  DockPanel.Dock="Right"
                  Margin="4,0,0,0"
                  Click="CloseMirrorPreview_Click"
                  Style="{StaticResource TitleBarButtonStyle}"/>
                                </DockPanel>

                                <Grid Grid.Row="1" 
            HorizontalAlignment="Center" 
            VerticalAlignment="Center">

                                    <Grid x:Name="MirrorRoot" 
      Width="512" 
      Height="512"
      Opacity="1"  
      UseLayoutRounding="True"
      SnapsToDevicePixels="True"
      RenderOptions.BitmapScalingMode="HighQuality"
      RenderOptions.EdgeMode="Aliased">
                                        <!-- ❌ 移除所有 TextOptions 设置！ -->

                                        <Grid>
                                            <Rectangle x:Name="MirrorBgRect"
                   UseLayoutRounding="True"
                   SnapsToDevicePixels="True"/>

                                            <Image x:Name="MirrorBgImage" 
               Stretch="UniformToFill"
               UseLayoutRounding="True"
               SnapsToDevicePixels="True"
               RenderOptions.BitmapScalingMode="HighQuality"/>
                                        </Grid>

                                        <Canvas x:Name="MirrorDesignCanvas"
            Width="512"
            Height="512"
            Background="Transparent"
            ClipToBounds="True"
            Panel.ZIndex="1"
            UseLayoutRounding="True"
            SnapsToDevicePixels="True"
            RenderOptions.BitmapScalingMode="HighQuality"
            RenderOptions.EdgeMode="Aliased">
                                            <!-- ❌ 移除 TextFormattingMode/TextRenderingMode/TextHintingMode！ -->

                                            <!-- ✅ 只保留通用的渲染优化 -->
                                            <Canvas.Resources>
                                                <Style TargetType="TextBlock">
                                                    <Setter Property="UseLayoutRounding" Value="True"/>
                                                    <Setter Property="SnapsToDevicePixels" Value="True"/>
                                                    <Setter Property="RenderOptions.BitmapScalingMode" Value="HighQuality"/>
                                                    <Setter Property="RenderOptions.EdgeMode" Value="Aliased"/>
                                                </Style>

                                                <Style TargetType="Border">
                                                    <Setter Property="UseLayoutRounding" Value="True"/>
                                                    <Setter Property="SnapsToDevicePixels" Value="True"/>
                                                    <Setter Property="RenderOptions.BitmapScalingMode" Value="HighQuality"/>
                                                    <Setter Property="RenderOptions.EdgeMode" Value="Aliased"/>
                                                </Style>

                                                <Style TargetType="Shape">
                                                    <Setter Property="UseLayoutRounding" Value="True"/>
                                                    <Setter Property="SnapsToDevicePixels" Value="True"/>
                                                    <Setter Property="RenderOptions.EdgeMode" Value="Aliased"/>
                                                </Style>

                                                <Style TargetType="Image">
                                                    <Setter Property="UseLayoutRounding" Value="True"/>
                                                    <Setter Property="SnapsToDevicePixels" Value="True"/>
                                                    <Setter Property="RenderOptions.BitmapScalingMode" Value="HighQuality"/>
                                                </Style>
                                            </Canvas.Resources>
                                        </Canvas>
                                    </Grid>
                                </Grid>
                            </Grid>

                        </Grid>
                    </Grid>
                </Grid>
            </Grid>
        </Border>


    </Grid>

    <!-- 动画 - 改为青色到蓝紫色流动 -->
    <controls:MicaWindow.Triggers>
        <EventTrigger RoutedEvent="Window.Loaded">
            <BeginStoryboard>
                <Storyboard RepeatBehavior="Forever">
                    <DoubleAnimation Storyboard.TargetName="ShinyBrush"
                                     Storyboard.TargetProperty="GradientStops[1].Offset"
                                     From="0" To="1" Duration="0:0:2.5" />
                    <DoubleAnimation Storyboard.TargetName="ShinyBrush"
                                     Storyboard.TargetProperty="GradientStops[2].Offset"
                                     From="0.3" To="1.3" Duration="0:0:2.5" />
                </Storyboard>
            </BeginStoryboard>
        </EventTrigger>
    </controls:MicaWindow.Triggers>

</controls:MicaWindow>