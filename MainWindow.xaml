<controls:MicaWindow  x:Class="CMDevicesManager.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CMDevicesManager"
        xmlns:controls="clr-namespace:MicaWPF.Controls;assembly=MicaWPF"
        mc:Ignorable="d"
        Height="800" Width="1200"
        WindowStyle="None"
        AllowsTransparency="True"
        ResizeMode="CanResize"
        MinWidth="1500" MinHeight="800"
        WindowStartupLocation="CenterScreen"
        Title="{DynamicResource AppTitle}" 
        FontFamily="{DynamicResource AppFontFamily}"
        Background="{DynamicResource MaterialDesignPaper}"
        Loaded="Window_Loaded" >
    
    <controls:MicaWindow.Resources>
        <!-- 标题栏按钮样式 -->
        <Style x:Key="TitleBarButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Width" Value="40"/>
            <Setter Property="Height" Value="30"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="LightGray" Direction="320" ShadowDepth="2" Opacity="0.5" BlurRadius="4"/>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#33FFFFFF"/>
                    <Setter Property="Effect">
                        <Setter.Value>
                            <DropShadowEffect Color="White" Direction="320" ShadowDepth="3" Opacity="0.7" BlurRadius="6"/>
                        </Setter.Value>
                    </Setter>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- 导航项容器样式（加宽间距 + 悬浮/选中反馈 + 轻微缩放） -->
        <Style x:Key="NavItemContainerStyle" TargetType="ListBoxItem">
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Margin" Value="0,10,0,10"/>
            <Setter Property="Padding" Value="14,10"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="SnapsToDevicePixels" Value="True"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ListBoxItem">
                        <Grid>
                            <!-- 左侧指示条 -->
                            <Border x:Name="SelectionBar"
                                    Width="4"
                                    CornerRadius="2"
                                    HorizontalAlignment="Left"
                                    Margin="0"
                                    Opacity="0"
                                    Background="#FFBC41E9"/>
                            <!-- 主容器 -->
                            <Border x:Name="Bd"
                                    Background="Transparent"
                                    CornerRadius="8"
                                    Padding="0"
                                    RenderTransformOrigin="0.5,0.5">
                                <Border.RenderTransform>
                                    <ScaleTransform x:Name="Scale" ScaleX="1" ScaleY="1"/>
                                </Border.RenderTransform>
                                <ContentPresenter HorizontalAlignment="Center"
                                                  VerticalAlignment="Center"/>
                            </Border>
                        </Grid>

                        <ControlTemplate.Resources>
                            <!-- Hover 放大 -->
                            <Storyboard x:Key="HoverInStoryboard">
                                <DoubleAnimation Storyboard.TargetName="Scale"
                                                 Storyboard.TargetProperty="ScaleX"
                                                 To="1.08" Duration="0:0:0.12" FillBehavior="HoldEnd"/>
                                <DoubleAnimation Storyboard.TargetName="Scale"
                                                 Storyboard.TargetProperty="ScaleY"
                                                 To="1.08" Duration="0:0:0.12" FillBehavior="HoldEnd"/>
                            </Storyboard>
                            <Storyboard x:Key="HoverOutStoryboard">
                                <DoubleAnimation Storyboard.TargetName="Scale"
                                                 Storyboard.TargetProperty="ScaleX"
                                                 To="1" Duration="0:0:0.15"/>
                                <DoubleAnimation Storyboard.TargetName="Scale"
                                                 Storyboard.TargetProperty="ScaleY"
                                                 To="1" Duration="0:0:0.15"/>
                            </Storyboard>
                        </ControlTemplate.Resources>

                        <ControlTemplate.Triggers>
                            <!-- 悬浮 -->
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Bd" Property="Background" Value="#1AFFFFFF"/>
                                <Setter TargetName="SelectionBar" Property="Opacity" Value="0.45"/>
                                <Setter Property="Foreground" Value="White"/>
                            </Trigger>

                            <!-- 选中 -->
                            <Trigger Property="IsSelected" Value="True">
                                <Setter TargetName="Bd" Property="Background" Value="#33222222"/>
                                <Setter TargetName="SelectionBar" Property="Opacity" Value="1"/>
                                <Setter Property="Foreground" Value="White"/>
                            </Trigger>

                            <!-- 禁用 -->
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Opacity" Value="0.45"/>
                            </Trigger>

                            <!-- Hover 动画事件 -->
                            <EventTrigger RoutedEvent="MouseEnter">
                                <BeginStoryboard Storyboard="{StaticResource HoverInStoryboard}"/>
                            </EventTrigger>
                            <EventTrigger RoutedEvent="MouseLeave">
                                <BeginStoryboard Storyboard="{StaticResource HoverOutStoryboard}"/>
                            </EventTrigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </controls:MicaWindow.Resources>
    
    <Grid>
       
        <Border Background="#FF111114" BorderBrush="#FF111114" BorderThickness="5" CornerRadius="8">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="35"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- 标题栏 -->
                <Grid Grid.Row="0" Background="Black" MouseLeftButtonDown="TitleBar_MouseLeftButtonDown">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="10,0,0,0">
                        <TextBlock Text="{DynamicResource AppTitle}"
                                   FontWeight="Bold"
                                   FontSize="20"
                                   VerticalAlignment="Center"
                                   Margin="5,0,0,0">
                            <TextBlock.Foreground>
                                <LinearGradientBrush x:Name="ShinyBrush" StartPoint="0,1" EndPoint="1,0">
                                    <GradientStop Color="#FFBC41E9" Offset="0.0"/>
                                    <GradientStop Color="White" Offset="0.3"/>
                                    <GradientStop Color="#FFBC41E9" Offset="0.6"/>
                                </LinearGradientBrush>
                            </TextBlock.Foreground>
                        </TextBlock>
                    </StackPanel>
                    <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                        <Button Content="—" Style="{StaticResource TitleBarButtonStyle}" Click="Minimize_Click"/>
                        <Button Content="▢" Style="{StaticResource TitleBarButtonStyle}" Click="Maximize_Click"/>
                        <Button Content="✕" Style="{StaticResource TitleBarButtonStyle}" Click="Close_Click"/>
                    </StackPanel>
                </Grid>

                <!-- 主体 -->
                <Grid Grid.Row="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="90"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid Grid.Column="0" Background="#FF1E1E1E">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <!-- 导航 -->
                    <ListBox x:Name="NavList"  Grid.Row="0"
                             SelectionChanged="NavList_SelectionChanged"
                             Background="#FF1E1E1E"
                             Foreground="White"
                             BorderThickness="0"
                             ItemContainerStyle="{StaticResource NavItemContainerStyle}">
                        <ListBoxItem Tag="Pages/HomePage.xaml">
                            <StackPanel Orientation="Vertical">
                                <TextBlock FontFamily="Segoe MDL2 Assets" Text="&#xE80F;" FontSize="22" TextAlignment="Center" HorizontalAlignment="Center"/>
                                <TextBlock Text="{DynamicResource HomeText}" Margin="0,8,0,0" FontSize="14" TextAlignment="Center" HorizontalAlignment="Center"/>
                            </StackPanel>
                        </ListBoxItem>
                        <ListBoxItem Tag="Pages/DevicePage.xaml">
                            <StackPanel Orientation="Vertical">
                                <TextBlock FontFamily="Segoe MDL2 Assets" Text="&#xE770;" FontSize="22" TextAlignment="Center" HorizontalAlignment="Center"/>
                                <TextBlock Text="{DynamicResource DeviceText}" Margin="0,8,0,0" FontSize="14" TextAlignment="Center" HorizontalAlignment="Center"/>
                            </StackPanel>
                        </ListBoxItem>
                        <ListBoxItem  x:Name="ConfigNavItem" Tag="Pages/DeviceConfigPage.xaml">
                            <StackPanel Orientation="Vertical">
                                <TextBlock FontFamily="Segoe MDL2 Assets"
                    Text="&#xE8D7;"  FontSize="22"
                    TextAlignment="Center" HorizontalAlignment="Center"/>
                                <TextBlock Text="Config"
                    Margin="0,8,0,0" FontSize="14"
                    TextAlignment="Center" HorizontalAlignment="Center"/>
                            </StackPanel>
                        </ListBoxItem>
                        <ListBoxItem x:Name="DemoNavItem" Tag="Pages/DevicePageDemo.xaml">
                            <StackPanel Orientation="Vertical">
                                <TextBlock FontFamily="Segoe MDL2 Assets" Text="&#xE770;" FontSize="22" TextAlignment="Center" HorizontalAlignment="Center"/>
                                <TextBlock Text="Demo" Margin="0,8,0,0" FontSize="14" TextAlignment="Center" HorizontalAlignment="Center"/>
                            </StackPanel>
                        </ListBoxItem>
                        <ListBoxItem x:Name="RenderNavItem" Tag="Pages/RenderDemoPage.xaml">
                            <StackPanel Orientation="Vertical">
                                <TextBlock FontFamily="Segoe MDL2 Assets" Text="&#xE770;" FontSize="22" TextAlignment="Center" HorizontalAlignment="Center"/>
                                <TextBlock Text="Render" Margin="0,8,0,0" FontSize="14" TextAlignment="Center" HorizontalAlignment="Center"/>
                            </StackPanel>
                        </ListBoxItem>
                        <ListBoxItem x:Name="PlaymodeNavItem" Tag="Pages/DevicePlayModePage.xaml">
                            <StackPanel Orientation="Vertical">
                                <TextBlock FontFamily="Segoe MDL2 Assets" Text="&#xE770;" FontSize="22" TextAlignment="Center" HorizontalAlignment="Center"/>
                                <TextBlock Text="Playmode" Margin="0,8,0,0" FontSize="14" TextAlignment="Center" HorizontalAlignment="Center"/>
                            </StackPanel>
                        </ListBoxItem>

                        <ListBoxItem x:Name="SaveImageItem"  Tag="__MirrorSaveImage">
                            <StackPanel Orientation="Vertical">
                                <TextBlock FontFamily="Segoe MDL2 Assets" Text="&#xE74E;" FontSize="22" TextAlignment="Center" HorizontalAlignment="Center"/>
                                <TextBlock Text="Save" Margin="0,8,0,0" FontSize="14" TextAlignment="Center" HorizontalAlignment="Center"/>
                            </StackPanel>
                        </ListBoxItem>
                        <ListBoxItem x:Name="MirrorToggleItem" Tag="__MirrorToggle">
                            <StackPanel Orientation="Vertical">
                                <TextBlock FontFamily="Segoe MDL2 Assets"
                   Text="&#xE771;"  
                   FontSize="22"
                   TextAlignment="Center"
                   HorizontalAlignment="Center"/>
        <TextBlock Text="Mirror"
                   Margin="0,8,0,0"
                   FontSize="14"
                   TextAlignment="Center"
                   HorizontalAlignment="Center"/>
    </StackPanel>
                        </ListBoxItem>
                        <ListBoxItem Tag="Pages/SettingsPage.xaml" VerticalAlignment="Bottom">
                            <StackPanel Orientation="Vertical">
                                <TextBlock FontFamily="Segoe MDL2 Assets" Text="&#xE713;" FontSize="22" TextAlignment="Center" HorizontalAlignment="Center"/>
                                <TextBlock Text="{DynamicResource SettingsText}" Margin="0,8,0,0" FontSize="14" TextAlignment="Center" HorizontalAlignment="Center"/>
                            </StackPanel>
                        </ListBoxItem>
                    </ListBox>
                        <!-- VERSION / BUILD LABEL -->
                        <TextBlock Grid.Row="1"
               Text="未公开版本，仅用于内部测试-beta0.0.1"
               FontSize="10"
               Foreground="#66FFFFFF"
               TextAlignment="Center"
               TextWrapping="Wrap"
               Margin="6,0,6,8"
               Opacity="0.85"/>
                    </Grid>
                    <!-- 内容 -->
                    <Grid Grid.Column="1">
                        <Frame x:Name="MainFrame" NavigationUIVisibility="Hidden" Background="Transparent"/>
                    </Grid>
                </Grid>
            </Grid>
        </Border>
       
        <Grid x:Name="GlobalMirrorHost"
      Visibility="Hidden"
      Opacity="0"
      IsHitTestVisible="False">
            <!-- 半透明遮罩可取消，如果不想暗背景可删除 Background -->
            <!--<Border Background="#66000000"/>-->
            <Border Width="560"
            Height="560"
            Background="#FF1E1E1E"
            CornerRadius="12"
            BorderBrush="#444"
            BorderThickness="1"
            Padding="12"
            HorizontalAlignment="Right"
            VerticalAlignment="Top"
            Margin="0,42,16,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="28"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <DockPanel Grid.Row="0">
                        <TextBlock Text="Mirror Preview (512x512)" 
                           Foreground="White"
                           FontSize="13"
                           FontWeight="SemiBold"
                           VerticalAlignment="Center"/>
                        <Button Content="✕"
                        Width="28"
                        Height="22"
                        HorizontalAlignment="Right"
                        DockPanel.Dock="Right"
                        Margin="4,0,0,0"
                        Click="CloseMirrorPreview_Click"
                        Style="{StaticResource TitleBarButtonStyle}"/>
                    </DockPanel>

                    <!-- 原来的镜像根容器 -->
                    <Grid Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Center">
                        <Border BorderBrush="#333" BorderThickness="1" CornerRadius="4" Background="White">
                            <Grid x:Name="MirrorRoot" Width="512" Height="512">
                                <Rectangle x:Name="MirrorBgRect"/>
                                <Image x:Name="MirrorBgImage" Stretch="UniformToFill"/>
                                <Canvas x:Name="MirrorDesignCanvas"
                                Width="512"
                                Height="512"
                                Background="White"
                                ClipToBounds="True"/>
                            </Grid>
                        </Border>
                    </Grid>
                </Grid>
            </Border>
        </Grid>
    </Grid>
    
    <!-- 动画 -->
    <controls:MicaWindow.Triggers>
        <EventTrigger RoutedEvent="Window.Loaded">
            <BeginStoryboard>
                <Storyboard RepeatBehavior="Forever">
                    <DoubleAnimation Storyboard.TargetName="ShinyBrush"
                                     Storyboard.TargetProperty="GradientStops[1].Offset"
                                     From="0" To="1" Duration="0:0:2" />
                    <DoubleAnimation Storyboard.TargetName="ShinyBrush"
                                     Storyboard.TargetProperty="GradientStops[2].Offset"
                                     From="0.3" To="1.3" Duration="0:0:2" />
                </Storyboard>
            </BeginStoryboard>
        </EventTrigger>
    </controls:MicaWindow.Triggers>
    
</controls:MicaWindow>
