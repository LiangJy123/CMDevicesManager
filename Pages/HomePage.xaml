<Page x:Class="CMDevicesManager.Pages.HomePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:m="clr-namespace:CMDevicesManager.Models"
      xmlns:vm="clr-namespace:CMDevicesManager.ViewModels"
      xmlns:ctrl="clr-namespace:CMDevicesManager.Controls"
      mc:Ignorable="d"
      Background="Transparent"
      d:DataContext="{d:DesignInstance vm:HomeViewModel}"
      ScrollViewer.VerticalScrollBarVisibility="Disabled"
      ScrollViewer.HorizontalScrollBarVisibility="Disabled">

    <Page.Resources>
        <!-- Remove Page’s built-in ScrollViewer -->
        <Style x:Key="NoScrollPageStyle" TargetType="Page">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Page">
                        <Border Background="{TemplateBinding Background}">
                            <ContentPresenter/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Colors -->
        <SolidColorBrush x:Key="CardBg" Color="#232834"/>
        <SolidColorBrush x:Key="CardBgAlt" Color="#1B202B"/>
        <SolidColorBrush x:Key="CardBorder" Color="#2E3747"/>
        <SolidColorBrush x:Key="TitleBrush" Color="#FFFFFF"/>
        <SolidColorBrush x:Key="SubtitleBrush" Color="#B8C0CC"/>
        <SolidColorBrush x:Key="ValueBrush" Color="#FFFFFF"/>
        <SolidColorBrush x:Key="AccentDown" Color="#38D6BD"/>
        <SolidColorBrush x:Key="AccentUp" Color="#F45B89"/>

        <!-- Fixed-size card style (scaled from previous design by 1.5x) -->
        <Style x:Key="CardBorderStyle" TargetType="Border">
            <Setter Property="CornerRadius" Value="15"/>
            <Setter Property="Background" Value="{StaticResource CardBg}"/>
            <Setter Property="BorderBrush" Value="{StaticResource CardBorder}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Margin" Value="18"/>
            <Setter Property="MinWidth" Value="420"/>
            <Setter Property="MaxWidth" Value="630"/>
            <Setter Property="Padding" Value="24"/>
            <Setter Property="SnapsToDevicePixels" Value="True"/>
        </Style>

        <!-- Sensor card template (unit bottom-aligned with number) -->
        <DataTemplate DataType="{x:Type m:SensorCard}">
            <Border>
                <Border.Style>
                    <Style TargetType="Border" BasedOn="{StaticResource CardBorderStyle}"/>
                </Border.Style>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Header -->
                    <DockPanel>
                        <TextBlock Text="{Binding Name}"
                                   FontSize="24" FontWeight="SemiBold"
                                   Foreground="{StaticResource TitleBrush}"/>
                        <TextBlock Text="{Binding IconGlyph}"
                                   DockPanel.Dock="Right"
                                   FontFamily="Segoe MDL2 Assets"
                                   Foreground="#F45B89"
                                   FontSize="27"/>
                    </DockPanel>

                    <!-- SubTitle -->
                    <TextBlock Grid.Row="1"
                               Text="{Binding SubTitle}"
                               Margin="0,9,0,0"
                               FontSize="18"
                               Foreground="{StaticResource SubtitleBrush}"/>

                    <!-- Content: normal value or ring for % -->
                    <Grid Grid.Row="2">
                        <!-- Numeric value (non-percent) with bottom-aligned unit -->
                        <Grid x:Name="ValueGrid" VerticalAlignment="Bottom">
                            <Grid.Style>
                                <Style TargetType="Grid">
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding Unit}" Value="%">
                                            <Setter Property="Visibility" Value="Collapsed"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Grid.Style>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock Grid.Column="0"
                                       Text="{Binding Value, StringFormat={}{0:F0}}"
                                       FontSize="42" FontWeight="SemiBold"
                                       Foreground="{StaticResource ValueBrush}"
                                       VerticalAlignment="Bottom"/>
                            <TextBlock Grid.Column="1"
                                       Text="{Binding Unit}"
                                       Margin="6,0,0,2"
                                       FontSize="18"
                                       Foreground="{StaticResource SubtitleBrush}"
                                       VerticalAlignment="Bottom"/>
                        </Grid>

                        <!-- Ring progress (for %) -->
                        <ctrl:RingProgressBar x:Name="RingPanel"
                                              Width="96" Height="96"
                                              Value="{Binding Value}"
                                              Thickness="8"
                                              TrackBrush="{StaticResource CardBorder}"
                                              Foreground="#38D6BD"
                                              HorizontalAlignment="Left"
                                              VerticalAlignment="Bottom">
                            <ctrl:RingProgressBar.Style>
                                <Style TargetType="ctrl:RingProgressBar">
                                    <Setter Property="Visibility" Value="Collapsed"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding Unit}" Value="%">
                                            <Setter Property="Visibility" Value="Visible"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </ctrl:RingProgressBar.Style>
                        </ctrl:RingProgressBar>
                    </Grid>
                </Grid>
            </Border>
        </DataTemplate>

        <!-- Section header -->
        <Style x:Key="SectionHeader" TargetType="TextBlock">
            <Setter Property="FontSize" Value="33"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="{StaticResource TitleBrush}"/>
            <Setter Property="Margin" Value="0,24,0,6"/>
        </Style>
    </Page.Resources>

    <Page.Style>
        <StaticResource ResourceKey="NoScrollPageStyle"/>
    </Page.Style>

    <!-- No ScrollViewer: no right scrollbar -->
    <Grid Margin="10,10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>


        <!-- Cooling -->
        <TextBlock Grid.Row="1" Text="Cooling" Style="{StaticResource SectionHeader}" />
        <ItemsControl Grid.Row="2" ItemsSource="{Binding CoolingCards}">
            <ItemsControl.ItemsPanel>
                <ItemsPanelTemplate>
                    <WrapPanel IsItemsHost="True"/>
                </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>
        </ItemsControl>

        <!-- Power -->
        <TextBlock Grid.Row="3" Text="Power" Style="{StaticResource SectionHeader}" />
        <ItemsControl Grid.Row="4" ItemsSource="{Binding PowerCards}">
            <ItemsControl.ItemsPanel>
                <ItemsPanelTemplate>
                    <WrapPanel IsItemsHost="True"/>
                </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>
        </ItemsControl>

        <!-- System -->
        <TextBlock Grid.Row="5" Text="System" Style="{StaticResource SectionHeader}" />
        <ItemsControl Grid.Row="6" ItemsSource="{Binding SystemCards}">
            <ItemsControl.ItemsPanel>
                <ItemsPanelTemplate>
                    <WrapPanel IsItemsHost="True"/>
                </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>
        </ItemsControl>

        <!-- Network -->
        <TextBlock Grid.Row="7" Text="Network" Style="{StaticResource SectionHeader}" />
        <Border Grid.Row="8" Style="{StaticResource CardBorderStyle}" HorizontalAlignment="Left">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <TextBlock Text="NETWORK"
                           Foreground="{StaticResource SubtitleBrush}"
                           FontWeight="SemiBold" FontSize="14"
                           Margin="0,0,0,10"/>

                <Grid Grid.Row="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="18"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Download tile -->
                    <Border Grid.Column="0" Background="{StaticResource CardBgAlt}" CornerRadius="12" Padding="16">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            <StackPanel Orientation="Horizontal">
                                <Ellipse Width="22" Height="22" Fill="{StaticResource AccentDown}" Opacity="0.9"/>
                                <TextBlock Text="Download" Margin="8,2,0,0"
                                           Foreground="{StaticResource SubtitleBrush}" FontSize="14"/>
                            </StackPanel>

                            <!-- bottom-aligned value + unit -->
                            <Grid Grid.Row="1" VerticalAlignment="Bottom">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Column="0"
                                           Text="{Binding NetworkCards[0].Value, StringFormat={}{0:F0}}"
                                           Foreground="{StaticResource ValueBrush}"
                                           FontSize="28" FontWeight="SemiBold"
                                           VerticalAlignment="Bottom"/>
                                <TextBlock Grid.Column="1" Text=" KB/s"
                                           Foreground="{StaticResource SubtitleBrush}" FontSize="12"
                                           Margin="6,0,0,2" VerticalAlignment="Bottom"/>
                            </Grid>
                        </Grid>
                    </Border>

                    <!-- Upload tile -->
                    <Border Grid.Column="2" Background="{StaticResource CardBgAlt}" CornerRadius="12" Padding="16">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            <StackPanel Orientation="Horizontal">
                                <Ellipse Width="22" Height="22" Fill="{StaticResource AccentUp}" Opacity="0.9"/>
                                <TextBlock Text="Upload" Margin="8,2,0,0"
                                           Foreground="{StaticResource SubtitleBrush}" FontSize="14"/>
                            </StackPanel>

                            <!-- bottom-aligned value + unit -->
                            <Grid Grid.Row="1" VerticalAlignment="Bottom">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Column="0"
                                           Text="{Binding NetworkCards[1].Value, StringFormat={}{0:F0}}"
                                           Foreground="{StaticResource ValueBrush}"
                                           FontSize="28" FontWeight="SemiBold"
                                           VerticalAlignment="Bottom"/>
                                <TextBlock Grid.Column="1" Text=" KB/s"
                                           Foreground="{StaticResource SubtitleBrush}" FontSize="12"
                                           Margin="6,0,0,2" VerticalAlignment="Bottom"/>
                            </Grid>
                        </Grid>
                    </Border>
                </Grid>
            </Grid>
        </Border>
    </Grid>
</Page>
