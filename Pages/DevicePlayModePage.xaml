                                                    FontSize="10"/>
                                            </StackPanel>
                                        </Button>
                                    </StackPanel>
                                </StackPanel>
                            </Grid>
                        </Border>

                        <!-- Hidden legacy list (compatibility) -->
                        <ListBox x:Name="DevicesListBox"
                            Visibility="Collapsed"
                            Height="0"
                            Width="0"/>
                    </Grid>
                </DockPanel>
            </Border>

            <!-- LOWER CARD: Screen Toggle + Display Settings -->
            <Border Grid.Row="1" Style="{StaticResource CardBorderStyle}" Padding="10" Height="280">
                <StackPanel>
                    <!-- Screen Toggle Section -->
                    <DockPanel Margin="0,0,0,12">
                        <TextBlock Text="{DynamicResource PlayMode_ScreenControl}" 
                            Style="{StaticResource SectionTitle}" 
                            Margin="0,0,0,0"
                            DockPanel.Dock="Left"/>
                        <ToggleButton x:Name="ScreenToggle"
                            Width="170"
                            Height="34"
                            HorizontalAlignment="Right"
                            Margin="0,0,0,0"
                            Click="ScreenToggle_Click"
                            Style="{StaticResource ScreenToggleStyle}"
                            ToolTipService.ToolTip="{DynamicResource PlayMode_ScreenToggleTooltip}"
                            ToolTipService.InitialShowDelay="150"/>
                    </DockPanel>

                    <!-- Display Settings Expander -->
                    <Expander Header="{DynamicResource PlayMode_DisplaySettings}" 
                        Style="{StaticResource ExpanderStyleMini}" 
                        IsExpanded="True">
                        <StackPanel Margin="0,4,0,0">
                            <TextBlock Text="{DynamicResource PlayMode_Rotation}" 
                                FontSize="12" 
                                Foreground="{StaticResource SubtitleBrush}" 
                                Margin="0,0,0,4"/>
                            <UniformGrid Columns="4" Margin="0,0,0,8">
                                <Button x:Name="Rotation0Button" Content="0°" Tag="0" Click="RotationButton_Click" Style="{StaticResource MiniButton}"/>
                                <Button x:Name="Rotation90Button" Content="90°" Tag="90" Click="RotationButton_Click" Style="{StaticResource MiniButton}"/>
                                <Button x:Name="Rotation180Button" Content="180°" Tag="180" Click="RotationButton_Click" Style="{StaticResource MiniButton}"/>
                                <Button x:Name="Rotation270Button" Content="270°" Tag="270" Click="RotationButton_Click" Style="{StaticResource MiniButton}"/>
                            </UniformGrid>
                            <TextBlock x:Name="CurrentRotationText" Text="Current: 0°" FontSize="11"
                                Foreground="{StaticResource SubtitleBrush}" Margin="0,0,0,10"/>
                            <TextBlock Text="{DynamicResource PlayMode_Brightness}" FontSize="12" Foreground="{StaticResource SubtitleBrush}" Margin="0,0,0,4"/>
                            <Slider x:Name="BrightnessSlider" Minimum="0" Maximum="100" Value="80"
                                TickFrequency="10" IsSnapToTickEnabled="True"
                                Margin="0,0,0,6"
                                ValueChanged="BrightnessSlider_ValueChanged"/>
                            <DockPanel LastChildFill="False" Margin="0,0,0,4">
                                <TextBlock x:Name="BrightnessValueText"
                                    Text="80%"
                                    FontSize="11"
                                    FontWeight="Medium"
                                    Foreground="{StaticResource TitleBrush}"
                                    Margin="0,0,8,0"
                                    VerticalAlignment="Center"/>
                                <StackPanel Orientation="Horizontal">
                                    <Button Content="25%" Tag="25" Width="40" Style="{StaticResource MiniButton}" Click="QuickBrightnessButton_Click"/>
                                    <Button Content="50%" Tag="50" Width="40" Style="{StaticResource MiniButton}" Click="QuickBrightnessButton_Click"/>
                                    <Button Content="100%" Tag="100" Width="50" Style="{StaticResource MiniButton}" Click="QuickBrightnessButton_Click"/>
                                </StackPanel>
                            </DockPanel>
                        </StackPanel>
                    </Expander>
                </StackPanel>
            </Border>
        </Grid>

        <!-- RIGHT: Canvas View -->
        <Border  x:Name="LivePreviewContainer" Grid.Row="1" Grid.Column="2" Style="{StaticResource CardBorderStyle}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <DockPanel Grid.Row="0" Margin="0,0,0,10">
                    <TextBlock Text="{DynamicResource PlayMode_LivePreviewTitle}"  FontSize="18" FontWeight="SemiBold"
                               Foreground="{StaticResource TitleBrush}" DockPanel.Dock="Left"/>
                    <Border x:Name="StreamingStatusIndicator"
                            Background="#5B7FFF"
                            Visibility="Collapsed"
                            CornerRadius="10"
                            Padding="6,2"
                            Margin="12,0,0,0"
                            DockPanel.Dock="Left">
                        <TextBlock Text="{DynamicResource PlayMode_LiveTag}" FontSize="10" FontWeight="Bold" Foreground="White"/>
                    </Border>
                    <StackPanel Orientation="Horizontal" DockPanel.Dock="Right" Visibility="Collapsed">
                        <Button x:Name="SaveCanvasButton"
        Content="{DynamicResource PlayMode_Save}"
        Style="{StaticResource MiniButton}"
        Margin="0,0,8,0"
        Click="SaveCanvasButton_Click"/>
                        <TextBlock Text="{Binding ConfigurationDisplayName}"
                                   FontSize="12"
                                   Foreground="{StaticResource SubtitleBrush}"
                                   VerticalAlignment="Center"/>
                    </StackPanel>
                </DockPanel>

                <Grid Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Center">
                    <Grid x:Name="DesignRoot" Width="512" Height="512">
                        <Grid>
                            <Rectangle x:Name="BgColorRect" Fill="{Binding BackgroundBrush}"/>
                            <Image x:Name="BgImage"
                                   Source="{Binding BackgroundImagePath}"
                                   Stretch="UniformToFill"
                                   Opacity="{Binding BackgroundImageOpacity}"/>
                        </Grid>
                        <Canvas x:Name="DesignCanvas"
                                Background="Transparent"
                                Width="512"
                                Height="512"
                                ClipToBounds="True"
                                Panel.ZIndex="1"/>
                    </Grid>

                    <Grid Width="512" Height="512" Panel.ZIndex="10">
                        <Image x:Name="StreamingImageViewer"
                               Stretch="Uniform"
                               Visibility="Collapsed"
                               Panel.ZIndex="11"/>
                        <StackPanel x:Name="PlaceholderContent"
                                    Visibility="Collapsed"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    Panel.ZIndex="12">
                            <TextBlock Text="🖼️" FontSize="40" Foreground="#666" HorizontalAlignment="Center"/>
                            <TextBlock  Text="{DynamicResource PlayMode_NoStreamingContent}"
                                       FontSize="11"
                                       Foreground="#888"
                                       HorizontalAlignment="Center"/>
                        </StackPanel>
                        <StackPanel x:Name="LoadingIndicator"
                                    Visibility="Collapsed"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    Panel.ZIndex="13">
                            <Grid Width="44" Height="44" Margin="0,0,0,6">
                                <Ellipse Stroke="#5B7FFF" StrokeThickness="4" StrokeDashArray="25,25" RenderTransformOrigin="0.5,0.5">
                                    <Ellipse.RenderTransform>
                                        <RotateTransform x:Name="LoadingRotation"/>
                                    </Ellipse.RenderTransform>
                                    <Ellipse.Triggers>
                                        <EventTrigger RoutedEvent="Loaded">
                                            <BeginStoryboard>
                                                <Storyboard RepeatBehavior="Forever">
                                                    <DoubleAnimation Storyboard.TargetName="LoadingRotation"
                                                                     Storyboard.TargetProperty="Angle"
                                                                     From="0" To="360"
                                                                     Duration="0:0:2"/>
                                                </Storyboard>
                                            </BeginStoryboard>
                                        </EventTrigger>
                                    </Ellipse.Triggers>
                                </Ellipse>
                            </Grid>
                            <TextBlock  Text="{DynamicResource PlayMode_Loading}" FontSize="10" Foreground="#5B7FFF" HorizontalAlignment="Center"/>
                        </StackPanel>
                    </Grid>
                </Grid>
                <!-- 🆕 Offline Mode Overlay -->
                <Border x:Name="OfflineModeOverlay"
           Grid.Row="0"
           Grid.RowSpan="2"
           Background="{StaticResource OverlayMaskBrush}"
           Visibility="Collapsed"
           Panel.ZIndex="100">
                    <StackPanel HorizontalAlignment="Center"
                   VerticalAlignment="Center"
                   Background="{StaticResource ElevatedPanelBrush}"
                 
                   MaxWidth="400">
                        <Border Background="{StaticResource CardBgAlt}"
                   BorderBrush="{StaticResource CardBorder}"
                   BorderThickness="2"
                   CornerRadius="12"
                   Padding="20">
                            <StackPanel>
                                <!-- Icon -->
                                <TextBlock Text="&#xE7C3;"
                             FontFamily="Segoe MDL2 Assets"
                             FontSize="48"
                             Foreground="{StaticResource AccentBrushLight}"
                             HorizontalAlignment="Center"
                             Margin="0,0,0,16"/>

                                <!-- Title -->
                                <TextBlock Text="{DynamicResource PlayMode_OfflineModeTitle}"
                             FontSize="20"
                             FontWeight="Bold"
                             Foreground="{StaticResource TitleBrush}"
                             HorizontalAlignment="Center"
                             TextWrapping="Wrap"
                             Margin="0,0,0,12"/>

                                <!-- Message -->
                                <TextBlock Text="{DynamicResource PlayMode_OfflineModeMessage}"
                             FontSize="14"
                             Foreground="{StaticResource SubtitleBrush}"
                             HorizontalAlignment="Center"
                             TextWrapping="Wrap"
                             TextAlignment="Center"
                             LineHeight="20"/>

                                <!-- Loading indicator -->
                                <Grid Width="40" Height="40" Margin="0,20,0,0">
                                    <Ellipse Stroke="{StaticResource AccentBrushLight}" 
                               StrokeThickness="4" 
                               StrokeDashArray="25,25" 
                               RenderTransformOrigin="0.5,0.5">
                                        <Ellipse.RenderTransform>
                                            <RotateTransform x:Name="OfflineLoadingRotation"/>
                                        </Ellipse.RenderTransform>
                                        <Ellipse.Triggers>
                                            <EventTrigger RoutedEvent="Loaded">
                                                <BeginStoryboard>
                                                    <Storyboard RepeatBehavior="Forever">
                                                        <DoubleAnimation Storyboard.TargetName="OfflineLoadingRotation"
                                                           Storyboard.TargetProperty="Angle"
                                                           From="0" To="360"
                                                           Duration="0:0:2"/>
                                                    </Storyboard>
                                                </BeginStoryboard>
                                            </EventTrigger>
                                        </Ellipse.Triggers>
                                    </Ellipse>
                                </Grid>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </Border>
                <Border Grid.Row="2"
                        Margin="0,12,0,0"
                        Background="{StaticResource CardBgAlt}"
                        BorderBrush="{StaticResource CardBorder}"
                        BorderThickness="1"
                        CornerRadius="8"
                        Padding="8,6">
                    <DockPanel>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="{DynamicResource PlayMode_CurrentLabel}" FontSize="11" Foreground="{StaticResource SubtitleBrush}"/>
                            <TextBlock x:Name="CurrentImageName"
                                       Text="{DynamicResource PlayMode_NoImage}"
                                       FontSize="11"
                                       FontWeight="Medium"
                                       Foreground="{StaticResource TitleBrush}"/>
                            <TextBlock Text="  |  " FontSize="11" Foreground="#556170" Margin="4,0,4,0"/>
                            <TextBlock x:Name="ImageDimensions" Text="" FontSize="11" Foreground="{StaticResource SubtitleBrush}"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Visibility="Collapsed">
                            <TextBlock  Text="{DynamicResource PlayMode_ImagesLabel}"  FontSize="11"/>
                            <TextBlock x:Name="ImageCounter" Text="0" FontSize="11" Margin="4,0,12,0"/>
                            <TextBlock Text="{DynamicResource PlayMode_DevicesLabel}" FontSize="11"/>
                            <TextBlock x:Name="ActiveDeviceCount" Text="0" FontSize="11" Margin="4,0,0,0"/>
                        </StackPanel>
                    </DockPanel>
                </Border>
            </Grid>
        </Border>
        <!-- Loading Overlay -->
        <Grid x:Name="LoadingOverlay" 
              Grid.Row="0" Grid.RowSpan="2" Grid.Column="0" Grid.ColumnSpan="3"
              Visibility="Collapsed" 
              Background="{StaticResource OverlayMaskBrush}"
              Panel.ZIndex="2000">
            <Border Background="{StaticResource ElevatedPanelBrush}" 
                    CornerRadius="16" 
                    Padding="40,32"
                    HorizontalAlignment="Center" 
                    VerticalAlignment="Center"
                    MinWidth="320">
                <Border.Effect>
                    <DropShadowEffect Color="Black" BlurRadius="30" ShadowDepth="8" Opacity="0.5"/>
                </Border.Effect>
                <StackPanel>
                    <Border CornerRadius="3" ClipToBounds="True" Width="240" Height="6" Margin="0,0,0,24" Background="{StaticResource SubPanelBackgroundBrush}">
                        <ProgressBar IsIndeterminate="True" 
                                     BorderThickness="0"
                                     Background="Transparent"
                                     Foreground="{StaticResource AccentBrushLight}"/>
                    </Border>
                    <TextBlock x:Name="LoadingText" 
                               Text="{DynamicResource PlayMode_Loading}" 
                               Foreground="{StaticResource PrimaryTextBrush}" 
                               FontSize="15" 
                               FontWeight="Medium"
                               HorizontalAlignment="Center"
                               TextWrapping="Wrap"
                               TextAlignment="Center"/>
                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</Page>