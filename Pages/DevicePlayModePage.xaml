<Page x:Class="CMDevicesManager.Pages.DevicePlayModePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Device Play Mode"
      Loaded="Page_Loaded"
      Unloaded="Page_Unloaded"
      Background="Transparent">
    <Page.Resources>

        <!-- ✅ 全新配色方案 - 深蓝紫渐变 + 青色强调 -->
        <SolidColorBrush x:Key="PrimaryTextBrush" Color="#FFFFFF"/>
        <SolidColorBrush x:Key="SecondaryTextBrush" Color="#B8C5FF"/>
        <SolidColorBrush x:Key="HintTextBrush" Color="#8B9FFF"/>
        <SolidColorBrush x:Key="AccentBrushLight" Color="#00D9FF"/>

        <!-- 深蓝紫色调 -->
        <SolidColorBrush x:Key="PanelBackgroundBrush" Color="#1A1F3A"/>
        <SolidColorBrush x:Key="SubPanelBackgroundBrush" Color="#151A2E"/>
        <SolidColorBrush x:Key="SubPanelAltBackgroundBrush" Color="#1D2238"/>
        <SolidColorBrush x:Key="ElevatedPanelBrush" Color="#242A45"/>
        <SolidColorBrush x:Key="HeaderBackgroundBrush" Color="#151A2E"/>
        <SolidColorBrush x:Key="DividerBrush" Color="#5B7FFF" Opacity="0.2"/>
        <SolidColorBrush x:Key="ToggleOffBrush" Color="#3A4A5E"/>
        <SolidColorBrush x:Key="ToggleThumbBrush" Color="#FFFFFF"/>
        <SolidColorBrush x:Key="OverlayMaskBrush" Color="#80000000"/>

        <!-- 滚动条样式 -->
        <Style x:Key="VerticalSlimScrollBar" TargetType="ScrollBar">
            <Setter Property="Width" Value="8"/>
            <Setter Property="MinHeight" Value="30"/>
            <Setter Property="Margin" Value="2,0,2,0"/>
            <Setter Property="Foreground" Value="#6B7FFF"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ScrollBar">
                        <Grid x:Name="Root" Background="Transparent">
                            <Border x:Name="TrackBg"
                             CornerRadius="4"
                             Background="#1A1F3A"
                             Margin="0"/>
                            <Track x:Name="PART_Track"
                            IsDirectionReversed="true"
                            Focusable="False">
                                <Track.DecreaseRepeatButton>
                                    <RepeatButton Command="ScrollBar.LineUpCommand"
                                           Opacity="0"
                                           IsHitTestVisible="False"/>
                                </Track.DecreaseRepeatButton>
                                <Track.Thumb>
                                    <Thumb x:Name="Thumb"
                                    Height="40"
                                    MinHeight="20"
                                    Margin="0"
                                    Cursor="Hand">
                                        <Thumb.Template>
                                            <ControlTemplate TargetType="Thumb">
                                                <Border x:Name="ThumbBody"
                                                 CornerRadius="4"
                                                 Background="#5B7FFF">
                                                    <Border.Effect>
                                                        <DropShadowEffect BlurRadius="8"
                                                                   ShadowDepth="0"
                                                                   Opacity="0.3"
                                                                   Color="#6B4FFF"/>
                                                    </Border.Effect>
                                                </Border>
                                                <ControlTemplate.Triggers>
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Setter TargetName="ThumbBody" Property="Background" Value="#7B8FFF"/>
                                                    </Trigger>
                                                    <Trigger Property="IsDragging" Value="True">
                                                        <Setter TargetName="ThumbBody" Property="Background" Value="#00D9FF"/>
                                                    </Trigger>
                                                </ControlTemplate.Triggers>
                                            </ControlTemplate>
                                        </Thumb.Template>
                                    </Thumb>
                                </Track.Thumb>
                                <Track.IncreaseRepeatButton>
                                    <RepeatButton Command="ScrollBar.LineDownCommand"
                                           Opacity="0"
                                           IsHitTestVisible="False"/>
                                </Track.IncreaseRepeatButton>
                            </Track>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="Orientation" Value="Horizontal">
                                <Setter Property="Width" Value="Auto"/>
                                <Setter Property="Height" Value="8"/>
                                <Setter TargetName="TrackBg" Property="Width" Value="Auto"/>
                                <Setter TargetName="TrackBg" Property="Height" Value="8"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="TrackBg" Property="Background" Value="#242A45"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="ConfigListScrollViewerStyle" TargetType="ScrollViewer">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="HorizontalScrollBarVisibility" Value="Disabled"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ScrollViewer">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <DockPanel Grid.Column="0" Grid.Row="0">
                                <ScrollContentPresenter x:Name="PART_ScrollContentPresenter"
                                                CanContentScroll="{TemplateBinding CanContentScroll}"
                                                ContentTemplate="{TemplateBinding ContentTemplate}"
                                                Content="{TemplateBinding Content}"
                                                Margin="0"/>
                            </DockPanel>
                            <ScrollBar x:Name="PART_VerticalScrollBar"
                               Grid.Column="1" Grid.Row="0"
                               Value="{TemplateBinding VerticalOffset}"
                               Maximum="{TemplateBinding ScrollableHeight}"
                               ViewportSize="{TemplateBinding ViewportHeight}"
                               Visibility="{TemplateBinding ComputedVerticalScrollBarVisibility}"
                               LargeChange="{TemplateBinding ViewportHeight}"
                               SmallChange="16"
                               Orientation="Vertical"
                               Style="{StaticResource VerticalSlimScrollBar}"/>
                            <ScrollBar x:Name="PART_HorizontalScrollBar"
                               Grid.Column="0" Grid.Row="1"
                               Value="{TemplateBinding HorizontalOffset}"
                               Maximum="{TemplateBinding ScrollableWidth}"
                               ViewportSize="{TemplateBinding ViewportWidth}"
                               Visibility="Collapsed"
                               Orientation="Horizontal"/>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- 模式切换按钮基础样式 -->
        <Style x:Key="ModeSelectToggleBaseStyle" TargetType="ToggleButton">
            <Setter Property="Height" Value="48"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="10,4"/>
            <Setter Property="BorderThickness" Value="1.5"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ToggleButton">
                        <Border x:Name="Root"
                        CornerRadius="8"
                        Background="{TemplateBinding Background}"
                        BorderBrush="{TemplateBinding BorderBrush}"
                        BorderThickness="{TemplateBinding BorderThickness}"
                        SnapsToDevicePixels="True">
                            <Grid>
                                <Border x:Name="ActiveBar"
                                Width="5"
                                HorizontalAlignment="Left"
                                CornerRadius="5,0,0,5"
                                Background="{TemplateBinding Tag}"
                                Opacity="0"/>
                                <ContentPresenter HorizontalAlignment="Center"
                                          VerticalAlignment="Center"
                                          Margin="6,0,6,0"/>
                            </Grid>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="ActiveBar" Property="Opacity" Value="1"/>
                                <Setter TargetName="Root" Property="Effect">
                                    <Setter.Value>
                                        <DropShadowEffect BlurRadius="12" ShadowDepth="0" Opacity="0.5" Color="#6B4FFF"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Root" Property="Opacity" Value="0.95"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="Root" Property="Opacity" Value="0.85"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="Root" Property="Opacity" Value="0.45"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="ModeToggleBaseStyle" TargetType="ToggleButton">
            <Setter Property="Height" Value="48"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="10,4"/>
            <Setter Property="BorderThickness" Value="1.5"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ToggleButton">
                        <Border x:Name="Root"
                        CornerRadius="8"
                        Background="{TemplateBinding Background}"
                        BorderBrush="{TemplateBinding BorderBrush}"
                        BorderThickness="{TemplateBinding BorderThickness}"
                        SnapsToDevicePixels="True">
                            <Grid>
                                <Border x:Name="ActiveBar"
                                Width="5"
                                HorizontalAlignment="Left"
                                CornerRadius="5,0,0,5"
                                Background="{TemplateBinding Tag}"
                                Opacity="0"/>
                                <ContentPresenter HorizontalAlignment="Center"
                                          VerticalAlignment="Center"
                                          Margin="6,0,6,0"/>
                            </Grid>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="ActiveBar" Property="Opacity" Value="1"/>
                                <Setter TargetName="Root" Property="Effect">
                                    <Setter.Value>
                                        <DropShadowEffect BlurRadius="12" ShadowDepth="0" Opacity="0.5" Color="#6B4FFF"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Root" Property="Opacity" Value="0.95"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="Root" Property="Opacity" Value="0.85"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="Root" Property="Opacity" Value="0.45"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- 实时播放模式 - 蓝色系 -->
        <Style x:Key="RealtimeModeToggleStyle"
       TargetType="ToggleButton"
       BasedOn="{StaticResource ModeToggleBaseStyle}">
            <Setter Property="Background">
                <Setter.Value>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1" Opacity="0.8">
                        <GradientStop Color="#4E82D2" Offset="0.0"/>
                        <GradientStop Color="#5B7FFF" Offset="1.0"/>
                    </LinearGradientBrush>
                </Setter.Value>
            </Setter>
            <Setter Property="BorderBrush" Value="#7B8FFF"/>
            <Setter Property="Tag" Value="#00D9FF"/>
            <Style.Triggers>
                <Trigger Property="IsChecked" Value="True">
                    <Setter Property="Background">
                        <Setter.Value>
                            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1" Opacity="0.9">
                                <GradientStop Color="#1D3F72" Offset="0.0"/>
                                <GradientStop Color="#2A4A8B" Offset="1.0"/>
                            </LinearGradientBrush>
                        </Setter.Value>
                    </Setter>
                    <Setter Property="BorderBrush" Value="#5B7FFF"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- 视频离线播放 - 紫色系 -->
        <Style x:Key="Mp4ModeToggleStyle"
       TargetType="ToggleButton"
       BasedOn="{StaticResource ModeToggleBaseStyle}">
            <Setter Property="Background">
                <Setter.Value>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1" Opacity="0.8">
                        <GradientStop Color="#7A4BD1" Offset="0.0"/>
                        <GradientStop Color="#946EE0" Offset="1.0"/>
                    </LinearGradientBrush>
                </Setter.Value>
            </Setter>
            <Setter Property="BorderBrush" Value="#A588FF"/>
            <Setter Property="Tag" Value="#FF6B9D"/>
            <Style.Triggers>
                <Trigger Property="IsChecked" Value="True">
                    <Setter Property="Background">
                        <Setter.Value>
                            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1" Opacity="0.9">
                                <GradientStop Color="#3A1C6E" Offset="0.0"/>
                                <GradientStop Color="#5A3592" Offset="1.0"/>
                            </LinearGradientBrush>
                        </Setter.Value>
                    </Setter>
                    <Setter Property="BorderBrush" Value="#8B6FBF"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- 卡片资源 - 深蓝紫渐变 -->
        <LinearGradientBrush x:Key="CardBg" StartPoint="0,0" EndPoint="1,1" Opacity="0.75">
            <GradientStop Color="#1A1F3A" Offset="0.0"/>
            <GradientStop Color="#2D1B3D" Offset="1.0"/>
        </LinearGradientBrush>
        <LinearGradientBrush x:Key="CardBgAlt" StartPoint="0,0" EndPoint="1,1" Opacity="0.65">
            <GradientStop Color="#1A1F3A" Offset="0.0"/>
            <GradientStop Color="#2A2045" Offset="1.0"/>
        </LinearGradientBrush>
        <SolidColorBrush x:Key="CardBorder" Color="#5B7FFF" Opacity="0.35"/>
        <SolidColorBrush x:Key="TitleBrush" Color="#FFFFFF"/>
        <SolidColorBrush x:Key="SubtitleBrush" Color="#B8C5FF"/>
        <SolidColorBrush x:Key="AccentBrush" Color="#00D9FF"/>

        <DropShadowEffect x:Key="CardShadow" 
                          Color="#6B4FFF" 
                          Direction="270" 
                          ShadowDepth="4" 
                          Opacity="0.3" 
                          BlurRadius="16"/>

        <!-- 卡片样式 -->
        <Style x:Key="CardBorderStyle" TargetType="Border">
            <Setter Property="CornerRadius" Value="16"/>
            <Setter Property="Background" Value="{StaticResource CardBg}"/>
            <Setter Property="BorderBrush" Value="{StaticResource CardBorder}"/>
            <Setter Property="BorderThickness" Value="1.5"/>
            <Setter Property="Padding" Value="14"/>
            <Setter Property="SnapsToDevicePixels" Value="True"/>
            <Setter Property="Effect" Value="{StaticResource CardShadow}"/>
        </Style>

        <Style x:Key="SectionTitle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="{StaticResource TitleBrush}"/>
            <Setter Property="Margin" Value="0,0,0,10"/>
        </Style>

        <!-- 小按钮样式 -->
        <Style x:Key="MiniButton" TargetType="Button">
            <Setter Property="Height" Value="30"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Margin" Value="4,0,4,0"/>
            <Setter Property="Padding" Value="8,3"/>
            <Setter Property="Background" Value="#3A4A5E"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#5B7FFF"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="6"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#4A5A6E"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#5B7FFF"/>
                                <Setter Property="BorderBrush" Value="#7B8FFF"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Opacity" Value="0.45"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="ModeButton" TargetType="Button" BasedOn="{StaticResource MiniButton}">
            <Setter Property="Height" Value="48"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="10,4"/>
        </Style>

        <!-- Expander 样式 -->
        <Style x:Key="ExpanderStyleMini" TargetType="Expander">
            <Setter Property="Foreground" Value="{StaticResource TitleBrush}"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderBrush" Value="{StaticResource CardBorder}"/>
            <Setter Property="BorderThickness" Value="0,0,0,1"/>
            <Setter Property="Padding" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Expander">
                        <DockPanel>
                            <ToggleButton x:Name="HeaderSite"
                                          Content="{TemplateBinding Header}"
                                          DockPanel.Dock="Top"
                                          Foreground="{StaticResource TitleBrush}"
                                          FontSize="13"
                                          FontWeight="SemiBold"
                                          Background="Transparent"
                                          BorderThickness="0"
                                          Padding="0,4,4,4"
                                          HorizontalContentAlignment="Left"
                                          Focusable="False">
                                <ToggleButton.Template>
                                    <ControlTemplate TargetType="ToggleButton">
                                        <Border Background="Transparent" Padding="2,2,2,2">
                                            <DockPanel LastChildFill="True">
                                                <Path x:Name="Arrow" Width="10" Height="10" Margin="0,0,6,0"
                                                      Fill="{StaticResource SubtitleBrush}"
                                                      Data="M 0 0 L 8 0 L 4 5 Z"
                                                      VerticalAlignment="Center"/>
                                                <ContentPresenter VerticalAlignment="Center" />
                                            </DockPanel>
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsChecked" Value="True">
                                                <Setter TargetName="Arrow" Property="RenderTransform">
                                                    <Setter.Value>
                                                        <RotateTransform Angle="180" CenterX="4" CenterY="2.5"/>
                                                    </Setter.Value>
                                                </Setter>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </ToggleButton.Template>
                            </ToggleButton>
                            <ContentPresenter x:Name="ExpandSite"
                                              Margin="0,4,0,6"
                                              Visibility="Collapsed"
                                              Focusable="False"/>
                        </DockPanel>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsExpanded" Value="True">
                                <Setter TargetName="ExpandSite" Property="Visibility" Value="Visible"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Toggle Switch 样式 -->
        <Style x:Key="BaseToggleSwitchStyle" TargetType="ToggleButton">
            <Setter Property="Width" Value="60"/>
            <Setter Property="Height" Value="30"/>
            <Setter Property="Background" Value="{StaticResource ToggleOffBrush}"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ToggleButton">
                        <Grid>
                            <Border x:Name="TrackBorder"
                             Width="60" Height="30"
                             CornerRadius="15"
                             Background="{TemplateBinding Background}">
                                <Border.Effect>
                                    <DropShadowEffect Color="#000000" BlurRadius="4" ShadowDepth="1" Opacity="0.25"/>
                                </Border.Effect>
                            </Border>
                            <Border x:Name="ThumbBorder"
                             Width="26" Height="26"
                             CornerRadius="13"
                             Background="{StaticResource ToggleThumbBrush}"
                             HorizontalAlignment="Left"
                             VerticalAlignment="Center"
                             Margin="2,0,0,0">
                                <Border.Effect>
                                    <DropShadowEffect Color="#000000" BlurRadius="6" ShadowDepth="2" Opacity="0.45"/>
                                </Border.Effect>
                                <Border.RenderTransform>
                                    <TranslateTransform x:Name="ThumbTransform" X="0"/>
                                </Border.RenderTransform>
                            </Border>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Trigger.EnterActions>
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <DoubleAnimation Storyboard.TargetName="ThumbTransform"
                                                      Storyboard.TargetProperty="X"
                                                      To="30" Duration="0:0:0.2">
                                                <DoubleAnimation.EasingFunction>
                                                    <QuadraticEase EasingMode="EaseOut"/>
                                                </DoubleAnimation.EasingFunction>
                                            </DoubleAnimation>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </Trigger.EnterActions>
                                <Trigger.ExitActions>
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <DoubleAnimation Storyboard.TargetName="ThumbTransform"
                                                      Storyboard.TargetProperty="X"
                                                      To="0" Duration="0:0:0.2">
                                                <DoubleAnimation.EasingFunction>
                                                    <QuadraticEase EasingMode="EaseOut"/>
                                                </DoubleAnimation.EasingFunction>
                                            </DoubleAnimation>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </Trigger.ExitActions>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="TrackBorder" Property="Opacity" Value="0.9"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Opacity" Value="0.5"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- 暂停模式切换开关 -->
        <Style x:Key="SuspendModeToggleStyle" TargetType="ToggleButton">
            <Setter Property="Width" Value="170"/>
            <Setter Property="Height" Value="34"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Foreground" Value="#FFFFFF"/>
            <Setter Property="Background" Value="#3A4A5E"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ToggleButton">
                        <Border x:Name="Root"
                               CornerRadius="18"
                               Background="{TemplateBinding Background}">
                            <Grid x:Name="LayoutRoot"
                                 ClipToBounds="True"
                                 Margin="2">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <!-- Selection highlight (half) -->
                                <Border x:Name="Selection"
                                       Grid.Column="0"
                                       Margin="0"
                                       CornerRadius="16"
                                       Background="#5B7FFF"/>

                                <!-- Labels -->
                                <TextBlock Text="{DynamicResource PlayMode_SuspendRealtimeLabel}"
                                          Grid.Column="0"
                                          HorizontalAlignment="Center"
                                          VerticalAlignment="Center"
                                          FontSize="12"
                                          FontWeight="SemiBold"
                                          Foreground="#FFFFFF"
                                          Opacity="1"
                                          x:Name="OnlineLabel"/>

                                <TextBlock Text="{DynamicResource PlayMode_SuspendOfflineLabel}"
                                          Grid.Column="1"
                                          HorizontalAlignment="Center"
                                          VerticalAlignment="Center"
                                          FontSize="12"
                                          FontWeight="SemiBold"
                                          Foreground="#FFFFFF"
                                          Opacity="0.65"
                                          x:Name="OfflineLabel"/>

                                <!-- Optional small captions (comment out if not needed)
                               <TextBlock Text="(实时配置)" Grid.Column="0" Margin="0,20,0,2"
                                          FontSize="9" Foreground="#DDDDDD" HorizontalAlignment="Center"/>
                               <TextBlock Text="(本地媒体)" Grid.Column="1" Margin="0,20,0,2"
                                          FontSize="9" Foreground="#DDDDDD" HorizontalAlignment="Center"/>
                               -->
                            </Grid>
                        </Border>
                        <ControlTemplate.Triggers>
                            <!-- Checked = Suspend/Offline -->
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="Selection" Property="Grid.Column" Value="1"/>
                                <Setter TargetName="Selection" Property="Background" Value="#946EE0"/>
                                <!-- Match offline theme -->
                                <Setter TargetName="OfflineLabel" Property="Opacity" Value="1"/>
                                <Setter TargetName="OnlineLabel" Property="Opacity" Value="0.65"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Root" Property="Opacity" Value="0.93"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="Root" Property="Opacity" Value="0.85"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="Root" Property="Opacity" Value="0.45"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- 主按钮样式 -->
        <Style x:Key="PlayModePrimaryButton" TargetType="Button" BasedOn="{StaticResource MiniButton}">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Background">
                <Setter.Value>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                        <GradientStop Color="#5B7FFF" Offset="0"/>
                        <GradientStop Color="#7B8FFF" Offset="1"/>
                    </LinearGradientBrush>
                </Setter.Value>
            </Setter>
            <Setter Property="BorderBrush" Value="#8B9FFF"/>
            <Setter Property="BorderThickness" Value="1.5"/>
            <Setter Property="Padding" Value="10,4"/>
            <Setter Property="Height" Value="34"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="Root"
                         CornerRadius="8"
                         Background="{TemplateBinding Background}"
                         BorderBrush="{TemplateBinding BorderBrush}"
                         BorderThickness="{TemplateBinding BorderThickness}"
                         Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center"
                                       VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Root" Property="Opacity" Value="0.92"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="Root" Property="Opacity" Value="0.80"/>
                                <Setter TargetName="Root" Property="RenderTransform">
                                    <Setter.Value>
