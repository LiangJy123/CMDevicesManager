<Page x:Class="CMDevicesManager.Pages.DesignerPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:CMDevicesManager.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="800" d:DesignWidth="1200"
      Title="Designer">

    <Page.Resources>
        <Style x:Key="ToolButtonStyle" TargetType="Button">
            <Setter Property="Margin" Value="2"/>
            <Setter Property="Padding" Value="8,4"/>
            <Setter Property="MinWidth" Value="80"/>
            <Setter Property="Height" Value="32"/>
            <Setter Property="Background" Value="#FF4A4A4A"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#FF666666"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#FF5A5A5A"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="PropertyLabelStyle" TargetType="TextBlock">
            <Setter Property="Foreground" Value="#FF333333"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Margin" Value="0,4,0,2"/>
        </Style>

        <Style x:Key="PropertyInputStyle" TargetType="TextBox">
            <Setter Property="Margin" Value="0,2,0,4"/>
            <Setter Property="Padding" Value="4"/>
            <Setter Property="Height" Value="24"/>
            <Setter Property="BorderBrush" Value="#FFCCCCCC"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>
    </Page.Resources>

    <Grid Background="#FFF5F5">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="280"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="280"/>
        </Grid.ColumnDefinitions>

        <!-- Left Toolbar Panel -->
        <Border Grid.Column="0" Background="#FFE8E8E8" BorderBrush="#FFCCCCCC" BorderThickness="0,0,1,0">
            <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="10">
                <StackPanel>
                    <TextBlock Text="Design Tools" FontSize="16" FontWeight="Bold" Foreground="#FF333333" Margin="0,0,0,10"/>
                    
                    <!-- Canvas Controls -->
                    <Expander Header="Canvas" IsExpanded="True" Margin="0,0,0,10">
                        <StackPanel Margin="10,5">
                            <Button Name="ClearCanvasButton" Content="Clear Canvas" Style="{StaticResource ToolButtonStyle}" Click="ClearCanvasButton_Click"/>
                            <Button Name="StartRenderingButton" Content="Start Rendering" Style="{StaticResource ToolButtonStyle}" Click="StartRenderingButton_Click"/>
                            <Button Name="StopRenderingButton" Content="Stop Rendering" Style="{StaticResource ToolButtonStyle}" Click="StopRenderingButton_Click" IsEnabled="False"/>
                            
                            <TextBlock Text="FPS:" Style="{StaticResource PropertyLabelStyle}"/>
                            <StackPanel Orientation="Horizontal">
                                <Slider Name="FpsSlider" Width="120" Minimum="1" Maximum="60" Value="30" 
                                       ValueChanged="FpsSlider_ValueChanged" VerticalAlignment="Center"/>
                                <TextBlock Name="FpsLabel" Text="30" VerticalAlignment="Center" Margin="8,0,0,0"/>
                            </StackPanel>
                        </StackPanel>
                    </Expander>

                    <!-- Add Elements -->
                    <Expander Header="Add Elements" IsExpanded="True" Margin="0,0,0,10">
                        <StackPanel Margin="10,5">
                            <Button Name="AddTextButton" Content="Add Text" Style="{StaticResource ToolButtonStyle}" Click="AddTextButton_Click"/>
                            <Button Name="AddImageButton" Content="Add Image" Style="{StaticResource ToolButtonStyle}" Click="AddImageButton_Click"/>
                            <Button Name="AddShapeButton" Content="Add Shape" Style="{StaticResource ToolButtonStyle}" Click="AddShapeButton_Click"/>
                            
                            <TextBlock Text="Text to Add:" Style="{StaticResource PropertyLabelStyle}"/>
                            <TextBox Name="NewTextContent" Text="Sample Text" Style="{StaticResource PropertyInputStyle}"/>
                        </StackPanel>
                    </Expander>

                    <!-- Motion Controls -->
                    <Expander Header="Motion" IsExpanded="False" Margin="0,0,0,10">
                        <StackPanel Margin="10,5">
                            <Button Name="AddBouncingBallButton" Content="Bouncing Ball" Style="{StaticResource ToolButtonStyle}" Click="AddBouncingBallButton_Click"/>
                            <Button Name="AddRotatingTextButton" Content="Rotating Text" Style="{StaticResource ToolButtonStyle}" Click="AddRotatingTextButton_Click"/>
                            <Button Name="AddOscillatingShapeButton" Content="Oscillating Shape" Style="{StaticResource ToolButtonStyle}" Click="AddOscillatingShapeButton_Click"/>
                            <Button Name="ConvertToMotionButton" Content="Add Motion to Selected" Style="{StaticResource ToolButtonStyle}" Click="ConvertToMotionButton_Click"/>
                            
                            <Separator Margin="0,8"/>
                            <Button Name="PauseAllMotionButton" Content="Pause All Motion" Style="{StaticResource ToolButtonStyle}" Click="PauseAllMotionButton_Click"/>
                            <Button Name="ResumeAllMotionButton" Content="Resume All Motion" Style="{StaticResource ToolButtonStyle}" Click="ResumeAllMotionButton_Click"/>
                        </StackPanel>
                    </Expander>

                    <!-- Background Controls -->
                    <Expander Header="Background" IsExpanded="True" Margin="0,0,0,10">
                        <StackPanel Margin="10,5">
                            <Button Name="SetSolidColorButton" Content="Solid Color" Style="{StaticResource ToolButtonStyle}" Click="SetSolidColorButton_Click"/>
                            <Button Name="SetGradientButton" Content="Gradient" Style="{StaticResource ToolButtonStyle}" Click="SetGradientButton_Click"/>
                            <Button Name="LoadBackgroundImageButton" Content="Background Image" Style="{StaticResource ToolButtonStyle}" Click="LoadBackgroundImageButton_Click"/>
                            <Button Name="ClearBackgroundButton" Content="Clear Background" Style="{StaticResource ToolButtonStyle}" Click="ClearBackgroundButton_Click"/>
                            
                            <TextBlock Text="Background Opacity:" Style="{StaticResource PropertyLabelStyle}"/>
                            <StackPanel Orientation="Horizontal">
                                <Slider Name="BackgroundOpacitySlider" Width="120" Minimum="0" Maximum="1" Value="1" 
                                       ValueChanged="BackgroundOpacitySlider_ValueChanged" VerticalAlignment="Center"/>
                                <TextBlock Name="BackgroundOpacityLabel" Text="1.00" VerticalAlignment="Center" Margin="8,0,0,0"/>
                            </StackPanel>
                        </StackPanel>
                    </Expander>

                    <!-- File Operations -->
                    <Expander Header="File Operations" IsExpanded="False" Margin="0,0,0,10">
                        <StackPanel Margin="10,5">
                            <Button Name="SaveImageButton" Content="Save as Image" Style="{StaticResource ToolButtonStyle}" Click="SaveImageButton_Click"/>
                            <Button Name="ExportSceneButton" Content="Export Scene" Style="{StaticResource ToolButtonStyle}" Click="ExportSceneButton_Click"/>
                            <Button Name="ImportSceneButton" Content="Import Scene" Style="{StaticResource ToolButtonStyle}" Click="ImportSceneButton_Click"/>
                        </StackPanel>
                    </Expander>
                </StackPanel>
            </ScrollViewer>
        </Border>

        <!-- Main Canvas Area -->
        <Grid Grid.Column="1" Background="White" Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Canvas Header -->
            <Border Grid.Row="0" Background="#FF2D2D30" Padding="10,8" Margin="0,0,0,10">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <TextBlock Grid.Column="0" Text="Design Canvas (480 × 480)" 
                              Foreground="White" FontSize="14" FontWeight="SemiBold" VerticalAlignment="Center"/>
                    
                    <StackPanel Grid.Column="1" Orientation="Horizontal">
                        <TextBlock Name="ElementCountLabel" Text="Elements: 0" 
                                  Foreground="LightGray" FontSize="12" VerticalAlignment="Center" Margin="0,0,15,0"/>
                        <TextBlock Name="StatusLabel" Text="Ready" 
                                  Foreground="LightGreen" FontSize="12" VerticalAlignment="Center"/>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Canvas Container -->
            <Border Grid.Row="1" Background="Black" HorizontalAlignment="Center" VerticalAlignment="Center"
                   BorderBrush="#FF666666" BorderThickness="2">
                <Image Name="CanvasDisplay" Width="480" Height="480" Stretch="Fill"
                      MouseLeftButtonDown="CanvasDisplay_MouseLeftButtonDown"
                      MouseMove="CanvasDisplay_MouseMove"
                      MouseLeftButtonUp="CanvasDisplay_MouseLeftButtonUp"
                      MouseRightButtonDown="CanvasDisplay_MouseRightButtonDown"/>
            </Border>

            <!-- Canvas Footer -->
            <Border Grid.Row="2" Background="#FFF0F0F0" Padding="10,6" Margin="0,10,0,0">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <TextBlock Name="MousePositionLabel" Grid.Column="0" Text="Mouse: (0, 0)" 
                              Foreground="#FF666666" FontSize="11" VerticalAlignment="Center"/>
                    
                    <StackPanel Grid.Column="1" Orientation="Horizontal">
                        <TextBlock Name="FpsDisplayLabel" Text="FPS: 30" 
                                  Foreground="#FF666666" FontSize="11" VerticalAlignment="Center" Margin="0,0,15,0"/>
                        <TextBlock Name="RenderInfoLabel" Text="Rendering stopped" 
                                  Foreground="#FF999999" FontSize="11" VerticalAlignment="Center"/>
                    </StackPanel>
                </Grid>
            </Border>
        </Grid>

        <!-- Right Properties Panel -->
        <Border Grid.Column="2" Background="#FFE8E8E8" BorderBrush="#FFCCCCCC" BorderThickness="1,0,0,0">
            <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="10">
                <StackPanel>
                    <TextBlock Text="Properties" FontSize="16" FontWeight="Bold" Foreground="#FF333333" Margin="0,0,0,10"/>

                    <!-- Element List -->
                    <Expander Header="Elements" IsExpanded="True" Margin="0,0,0,10">
                        <StackPanel Margin="10,5">
                            <ListBox Name="ElementsListBox" Height="150" SelectionChanged="ElementsListBox_SelectionChanged"
                                    Background="White" BorderBrush="#FFCCCCCC"/>
                            <Button Name="DeleteElementButton" Content="Delete Selected" Style="{StaticResource ToolButtonStyle}" 
                                   Click="DeleteElementButton_Click" IsEnabled="False" Margin="0,5,0,0"/>
                        </StackPanel>
                    </Expander>

                    <!-- Selected Element Properties -->
                    <Expander Name="ElementPropertiesExpander" Header="Element Properties" IsExpanded="True" Margin="0,0,0,10">
                        <StackPanel Name="ElementPropertiesPanel" Margin="10,5">
                            <TextBlock Name="NoSelectionText" Text="No element selected" FontStyle="Italic" 
                                      Foreground="Gray" HorizontalAlignment="Center"/>

                            <!-- Common Properties -->
                            <StackPanel Name="CommonPropertiesPanel" Visibility="Collapsed">
                                <TextBlock Name="ElementNameText" FontWeight="Bold" FontSize="12" Margin="0,0,0,5"/>
                                <TextBlock Name="ElementTypeText" FontSize="10" Foreground="Gray" Margin="0,0,0,10"/>

                                <TextBlock Text="Position X:" Style="{StaticResource PropertyLabelStyle}"/>
                                <TextBox Name="PositionXTextBox" Style="{StaticResource PropertyInputStyle}" TextChanged="ElementProperty_Changed"/>

                                <TextBlock Text="Position Y:" Style="{StaticResource PropertyLabelStyle}"/>
                                <TextBox Name="PositionYTextBox" Style="{StaticResource PropertyInputStyle}" TextChanged="ElementProperty_Changed"/>

                                <CheckBox Name="VisibleCheckBox" Content="Visible" Margin="0,5" Checked="ElementProperty_Changed" Unchecked="ElementProperty_Changed"/>
                                <CheckBox Name="DraggableCheckBox" Content="Draggable" Margin="0,2" Checked="ElementProperty_Changed" Unchecked="ElementProperty_Changed"/>
                            </StackPanel>

                            <!-- Text Properties -->
                            <StackPanel Name="TextPropertiesPanel" Visibility="Collapsed">
                                <Separator Margin="0,10"/>
                                <TextBlock Text="TEXT PROPERTIES" FontWeight="Bold" FontSize="11" Foreground="DarkBlue" Margin="0,5"/>

                                <TextBlock Text="Text:" Style="{StaticResource PropertyLabelStyle}"/>
                                <TextBox Name="TextContentTextBox" Style="{StaticResource PropertyInputStyle}" TextChanged="ElementProperty_Changed"/>

                                <TextBlock Text="Font Size:" Style="{StaticResource PropertyLabelStyle}"/>
                                <TextBox Name="FontSizeTextBox" Style="{StaticResource PropertyInputStyle}" TextChanged="ElementProperty_Changed"/>

                                <TextBlock Text="Font Family:" Style="{StaticResource PropertyLabelStyle}"/>
                                <ComboBox Name="FontFamilyComboBox" Margin="0,2,0,4" Height="24" SelectionChanged="ElementProperty_Changed">
                                    <ComboBoxItem Content="Segoe UI"/>
                                    <ComboBoxItem Content="Arial"/>
                                    <ComboBoxItem Content="Times New Roman"/>
                                    <ComboBoxItem Content="Calibri"/>
                                    <ComboBoxItem Content="Consolas"/>
                                </ComboBox>

                                <TextBlock Text="Text Color:" Style="{StaticResource PropertyLabelStyle}"/>
                                <Grid Margin="0,2,0,4">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Grid.Column="0" Text="R:" VerticalAlignment="Center" Margin="0,0,4,0"/>
                                    <TextBox Name="ColorRTextBox" Grid.Column="1" Margin="1" Height="20" TextChanged="ElementProperty_Changed"/>
                                    <TextBox Name="ColorGTextBox" Grid.Column="2" Margin="1" Height="20" TextChanged="ElementProperty_Changed"/>
                                    <TextBox Name="ColorBTextBox" Grid.Column="3" Margin="1" Height="20" TextChanged="ElementProperty_Changed"/>
                                </Grid>
                            </StackPanel>

                            <!-- Image Properties -->
                            <StackPanel Name="ImagePropertiesPanel" Visibility="Collapsed">
                                <Separator Margin="0,10"/>
                                <TextBlock Text="IMAGE PROPERTIES" FontWeight="Bold" FontSize="11" Foreground="DarkGreen" Margin="0,5"/>

                                <TextBlock Text="Scale:" Style="{StaticResource PropertyLabelStyle}"/>
                                <TextBox Name="ImageScaleTextBox" Style="{StaticResource PropertyInputStyle}" TextChanged="ElementProperty_Changed"/>

                                <TextBlock Text="Rotation:" Style="{StaticResource PropertyLabelStyle}"/>
                                <TextBox Name="ImageRotationTextBox" Style="{StaticResource PropertyInputStyle}" TextChanged="ElementProperty_Changed"/>
                            </StackPanel>

                            <!-- Shape Properties -->
                            <StackPanel Name="ShapePropertiesPanel" Visibility="Collapsed">
                                <Separator Margin="0,10"/>
                                <TextBlock Text="SHAPE PROPERTIES" FontWeight="Bold" FontSize="11" Foreground="DarkRed" Margin="0,5"/>

                                <TextBlock Text="Shape Type:" Style="{StaticResource PropertyLabelStyle}"/>
                                <ComboBox Name="ShapeTypeComboBox" Margin="0,2,0,4" Height="24" SelectionChanged="ElementProperty_Changed">
                                    <ComboBoxItem Content="Rectangle"/>
                                    <ComboBoxItem Content="Circle"/>
                                    <ComboBoxItem Content="Triangle"/>
                                </ComboBox>

                                <TextBlock Text="Width:" Style="{StaticResource PropertyLabelStyle}"/>
                                <TextBox Name="ShapeWidthTextBox" Style="{StaticResource PropertyInputStyle}" TextChanged="ElementProperty_Changed"/>

                                <TextBlock Text="Height:" Style="{StaticResource PropertyLabelStyle}"/>
                                <TextBox Name="ShapeHeightTextBox" Style="{StaticResource PropertyInputStyle}" TextChanged="ElementProperty_Changed"/>

                                <TextBlock Text="Fill Color (RGB):" Style="{StaticResource PropertyLabelStyle}"/>
                                <Grid Margin="0,2,0,4">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Grid.Column="0" Text="R:" VerticalAlignment="Center" Margin="0,0,4,0"/>
                                    <TextBox Name="FillColorRTextBox" Grid.Column="1" Margin="1" Height="20" TextChanged="ElementProperty_Changed"/>
                                    <TextBox Name="FillColorGTextBox" Grid.Column="2" Margin="1" Height="20" TextChanged="ElementProperty_Changed"/>
                                    <TextBox Name="FillColorBTextBox" Grid.Column="3" Margin="1" Height="20" TextChanged="ElementProperty_Changed"/>
                                </Grid>
                            </StackPanel>

                            <!-- Motion Properties -->
                            <StackPanel Name="MotionPropertiesPanel" Visibility="Collapsed">
                                <Separator Margin="0,10"/>
                                <TextBlock Text="MOTION PROPERTIES" FontWeight="Bold" FontSize="11" Foreground="Purple" Margin="0,5"/>

                                <TextBlock Text="Motion Type:" Style="{StaticResource PropertyLabelStyle}"/>
                                <ComboBox Name="MotionTypeComboBox" Margin="0,2,0,4" Height="24" SelectionChanged="ElementProperty_Changed"/>

                                <TextBlock Text="Speed:" Style="{StaticResource PropertyLabelStyle}"/>
                                <TextBox Name="MotionSpeedTextBox" Style="{StaticResource PropertyInputStyle}" TextChanged="ElementProperty_Changed"/>

                                <CheckBox Name="ShowTrailCheckBox" Content="Show Trail" Margin="0,5" Checked="ElementProperty_Changed" Unchecked="ElementProperty_Changed"/>
                                <CheckBox Name="MotionPausedCheckBox" Content="Paused" Margin="0,2" Checked="ElementProperty_Changed" Unchecked="ElementProperty_Changed"/>
                            </StackPanel>

                            <!-- Apply/Reset Buttons -->
                            <StackPanel Name="PropertyButtonsPanel" Visibility="Collapsed" Orientation="Horizontal" Margin="0,15,0,5">
                                <Button Name="ApplyChangesButton" Content="Apply" Width="60" Height="25" Margin="0,0,5,0" 
                                       Click="ApplyChangesButton_Click" Background="LightGreen"/>
                                <Button Name="ResetChangesButton" Content="Reset" Width="60" Height="25" 
                                       Click="ResetChangesButton_Click" Background="LightCoral"/>
                            </StackPanel>
                        </StackPanel>
                    </Expander>
                </StackPanel>
            </ScrollViewer>
        </Border>
    </Grid>
</Page>
