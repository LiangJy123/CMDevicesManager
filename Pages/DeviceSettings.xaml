<Page x:Class="CMDevicesManager.Pages.DeviceSettings"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      xmlns:local="clr-namespace:CMDevicesManager.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="800" d:DesignWidth="1000"
      Height="900" Width="1000"
      FontFamily="{DynamicResource AppFontFamily}"
      Title="Device Settings"
      Background="#111114">  <!-- 修改: 不再透明，而是深色背景 -->

    <Page.Resources>
        <!-- Core Palette aligned with MainWindow -->
        <SolidColorBrush x:Key="AccentBrush" Color="#BC41E9"/>
        <SolidColorBrush x:Key="AccentBrushLight" Color="#D671FF"/>
        <SolidColorBrush x:Key="PanelBackgroundBrush" Color="#1E1E1E"/>
        <SolidColorBrush x:Key="SubPanelBackgroundBrush" Color="#111114"/>
        <SolidColorBrush x:Key="SubPanelAltBackgroundBrush" Color="#161618"/>
        <SolidColorBrush x:Key="ElevatedPanelBrush" Color="#242428"/>
        <SolidColorBrush x:Key="HeaderBackgroundBrush" Color="#111114"/>
        <SolidColorBrush x:Key="DividerBrush" Color="#333333"/>
        <SolidColorBrush x:Key="ToggleOffBrush" Color="#333333"/>
        <SolidColorBrush x:Key="ToggleThumbBrush" Color="#FFFFFF"/>
        <SolidColorBrush x:Key="OverlayMaskBrush" Color="#80000000"/>

        <!-- Typography / Foregrounds -->
        <SolidColorBrush x:Key="PrimaryTextBrush" Color="#FFFFFF"/>
        <SolidColorBrush x:Key="SecondaryTextBrush" Color="#CCCCCC"/>
        <SolidColorBrush x:Key="HintTextBrush" Color="#888888"/>

        <!-- Shadow helper -->
        <DropShadowEffect x:Key="PanelShadow" Color="#000000" BlurRadius="12" ShadowDepth="3" Opacity="0.30"/>
        <DropShadowEffect x:Key="SmallShadow" Color="#000000" BlurRadius="6" ShadowDepth="2" Opacity="0.40"/>

        <!-- 关闭按钮样式（局部） -->
        <Style x:Key="HeaderIconButtonStyle" TargetType="Button">
            <Setter Property="Width" Value="32"/>
            <Setter Property="Height" Value="32"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Padding" Value="0"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="Bd" CornerRadius="6" Background="{TemplateBinding Background}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Bd" Property="Background" Value="#22FFFFFF"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="Bd" Property="Background" Value="#33FFFFFF"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Toggle Base Style -->
        <Style x:Key="BaseToggleSwitchStyle" TargetType="ToggleButton">
            <Setter Property="Width" Value="60"/>
            <Setter Property="Height" Value="30"/>
            <Setter Property="Background" Value="{StaticResource ToggleOffBrush}"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ToggleButton">
                        <Grid>
                            <Border x:Name="TrackBorder"
                                    Width="60" Height="30"
                                    CornerRadius="15"
                                    Background="{TemplateBinding Background}">
                                <Border.Effect>
                                    <DropShadowEffect Color="#000000" BlurRadius="4" ShadowDepth="1" Opacity="0.25"/>
                                </Border.Effect>
                            </Border>
                            <Border x:Name="ThumbBorder"
                                    Width="26" Height="26"
                                    CornerRadius="13"
                                    Background="{StaticResource ToggleThumbBrush}"
                                    HorizontalAlignment="Left"
                                    VerticalAlignment="Center"
                                    Margin="2,0,0,0">
                                <Border.Effect>
                                    <DropShadowEffect Color="#000000" BlurRadius="6" ShadowDepth="2" Opacity="0.45"/>
                                </Border.Effect>
                                <Border.RenderTransform>
                                    <TranslateTransform x:Name="ThumbTransform" X="0"/>
                                </Border.RenderTransform>
                            </Border>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Trigger.EnterActions>
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <DoubleAnimation Storyboard.TargetName="ThumbTransform"
                                                             Storyboard.TargetProperty="X"
                                                             To="30" Duration="0:0:0.2">
                                                <DoubleAnimation.EasingFunction>
                                                    <QuadraticEase EasingMode="EaseOut"/>
                                                </DoubleAnimation.EasingFunction>
                                            </DoubleAnimation>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </Trigger.EnterActions>
                                <Trigger.ExitActions>
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <DoubleAnimation Storyboard.TargetName="ThumbTransform"
                                                             Storyboard.TargetProperty="X"
                                                             To="0" Duration="0:0:0.2">
                                                <DoubleAnimation.EasingFunction>
                                                    <QuadraticEase EasingMode="EaseOut"/>
                                                </DoubleAnimation.EasingFunction>
                                            </DoubleAnimation>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </Trigger.ExitActions>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="TrackBorder" Property="Opacity" Value="0.9"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Opacity" Value="0.5"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="SleepModeToggleStyle" TargetType="ToggleButton" BasedOn="{StaticResource BaseToggleSwitchStyle}">
            <Setter Property="Background" Value="{StaticResource ToggleOffBrush}"/>
            <Style.Triggers>
                <Trigger Property="IsChecked" Value="True">
                    <Setter Property="Background" Value="{StaticResource AccentBrush}"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="SuspendModeToggleStyle" TargetType="ToggleButton" BasedOn="{StaticResource BaseToggleSwitchStyle}">
            <Setter Property="Background" Value="{StaticResource ToggleOffBrush}"/>
            <Style.Triggers>
                <Trigger Property="IsChecked" Value="True">
                    <Setter Property="Background" Value="{StaticResource AccentBrush}"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Page.Resources>

    <Grid Margin="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" 
                Background="{StaticResource HeaderBackgroundBrush}" 
                CornerRadius="12" 
                Padding="24,16" 
                Margin="0,0,0,16">
            <Grid>
                <!-- 增加一列用于关闭按钮 -->
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0"
                           Text="&#xE115;"
                           FontFamily="Segoe MDL2 Assets"
                           FontSize="24"
                           Foreground="{StaticResource AccentBrush}"
                           VerticalAlignment="Center"
                           Margin="0,0,16,0"/>

                <StackPanel Grid.Column="1" VerticalAlignment="Center">
                    <TextBlock x:Name="DeviceNameText"
                               Text="Device Settings"
                               FontSize="20"
                               FontWeight="Bold"
                               Foreground="{StaticResource PrimaryTextBrush}"/>
                    <TextBlock x:Name="DevicePathText"
                               Text="No device selected"
                               FontSize="12"
                               Foreground="#AAFFFFFF"
                               Margin="0,2,0,0"
                               Visibility="Collapsed"/>
                </StackPanel>

                <Border Grid.Column="2"
                        x:Name="ConnectionStatusBorder"
                        Width="12" Height="12"
                        CornerRadius="6"
                        Background="#4CAF50"
                        VerticalAlignment="Center"
                        Margin="0,0,12,0">
                    <Border.Effect>
                        <DropShadowEffect Color="#4CAF50" BlurRadius="8" ShadowDepth="0" Opacity="0.6"/>
                    </Border.Effect>
                </Border>

                <!-- 新增关闭按钮 -->
                <Button Grid.Column="3"
                        x:Name="CloseWindowButton"
                        Style="{StaticResource HeaderIconButtonStyle}"
                        Click="CloseWindowButton_Click"
                        ToolTip="关闭窗口 / Close">
                    <TextBlock Text="&#xE8BB;"
                               FontFamily="Segoe MDL2 Assets"
                               FontSize="14"
                               Foreground="#FFFFFF"/>
                </Button>
            </Grid>
        </Border>

        <!-- Main Content -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*"/>
                    <ColumnDefinition Width="1*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Device Information Panel -->
                <Border Grid.Column="0" Grid.Row="0"
                        Background="{StaticResource PanelBackgroundBrush}" 
                        CornerRadius="16" 
                        Padding="20" 
                        Margin="0,0,12,16"
                        Effect="{StaticResource PanelShadow}">
                    <StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,16">
                            <TextBlock Text="&#xE7F4;"
                                       FontFamily="Segoe MDL2 Assets"
                                       FontSize="18"
                                       Foreground="{StaticResource AccentBrush}"
                                       VerticalAlignment="Center"
                                       Margin="0,0,8,0"/>
                            <TextBlock Text="Device Information"
                                       FontSize="16"
                                       FontWeight="SemiBold"
                                       Foreground="{StaticResource AccentBrush}"/>
                        </StackPanel>

                        <!-- Hardware Version -->
                        <Border Background="{StaticResource SubPanelBackgroundBrush}" CornerRadius="8" Padding="12,8" Margin="0,0,0,8">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Column="0"
                                           Text="&#xE950;"
                                           FontFamily="Segoe MDL2 Assets"
                                           FontSize="14"
                                           Foreground="#FF9800"
                                           VerticalAlignment="Center"
                                           Margin="0,0,8,0"/>
                                <TextBlock Grid.Column="1"
                                           Text="Hardware Version:"
                                           FontSize="12"
                                           Foreground="{StaticResource SecondaryTextBrush}"
                                           VerticalAlignment="Center"
                                           Width="120"/>
                                <TextBlock Grid.Column="2"
                                           x:Name="HardwareVersionText"
                                           Text="N/A"
                                           FontSize="12"
                                           FontWeight="SemiBold"
                                           Foreground="{StaticResource PrimaryTextBrush}"
                                           VerticalAlignment="Center"/>
                            </Grid>
                        </Border>

                        <!-- Firmware Version -->
                        <Border Background="{StaticResource SubPanelBackgroundBrush}" CornerRadius="8" Padding="12,8" Margin="0,0,0,8">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Column="0"
                                           Text="&#xE8AD;"
                                           FontFamily="Segoe MDL2 Assets"
                                           FontSize="14"
                                           Foreground="#4CAF50"
                                           VerticalAlignment="Center"
                                           Margin="0,0,8,0"/>
                                <TextBlock Grid.Column="1"
                                           Text="Firmware Version:"
                                           FontSize="12"
                                           Foreground="{StaticResource SecondaryTextBrush}"
                                           VerticalAlignment="Center"
                                           Width="120"/>
                                <TextBlock Grid.Column="2"
                                           x:Name="FirmwareVersionText"
                                           Text="N/A"
                                           FontSize="12"
                                           FontWeight="SemiBold"
                                           Foreground="{StaticResource PrimaryTextBrush}"
                                           VerticalAlignment="Center"/>
                            </Grid>
                        </Border>

                        <!-- Serial Number -->
                        <Border Background="{StaticResource SubPanelBackgroundBrush}" CornerRadius="8" Padding="12,8" Margin="0,0,0,8">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Column="0"
                                           Text="&#xE8D7;"
                                           FontFamily="Segoe MDL2 Assets"
                                           FontSize="14"
                                           Foreground="#9C27B0"
                                           VerticalAlignment="Center"
                                           Margin="0,0,8,0"/>
                                <TextBlock Grid.Column="1"
                                           Text="Serial Number:"
                                           FontSize="12"
                                           Foreground="{StaticResource SecondaryTextBrush}"
                                           VerticalAlignment="Center"
                                           Width="120"/>
                                <TextBlock Grid.Column="2"
                                           x:Name="SerialNumberText"
                                           Text="N/A"
                                           FontSize="12"
                                           FontWeight="SemiBold"
                                           Foreground="{StaticResource PrimaryTextBrush}"
                                           VerticalAlignment="Center"/>
                            </Grid>
                        </Border>

                        <!-- Manufacturer -->
                        <Border Background="{StaticResource SubPanelBackgroundBrush}" CornerRadius="8" Padding="12,8" Margin="0,0,0,8">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Column="0"
                                           Text="&#xE7EE;"
                                           FontFamily="Segoe MDL2 Assets"
                                           FontSize="14"
                                           Foreground="{StaticResource AccentBrush}"
                                           VerticalAlignment="Center"
                                           Margin="0,0,8,0"/>
                                <TextBlock Grid.Column="1"
                                           Text="Manufacturer:"
                                           FontSize="12"
                                           Foreground="{StaticResource SecondaryTextBrush}"
                                           VerticalAlignment="Center"
                                           Width="120"/>
                                <TextBlock Grid.Column="2"
                                           x:Name="ManufacturerText"
                                           Text="N/A"
                                           FontSize="12"
                                           FontWeight="SemiBold"
                                           Foreground="{StaticResource PrimaryTextBrush}"
                                           VerticalAlignment="Center"/>
                            </Grid>
                        </Border>

                        <!-- Product Name -->
                        <Border Background="{StaticResource SubPanelBackgroundBrush}" CornerRadius="8" Padding="12,8">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Column="0"
                                           Text="&#xE7C3;"
                                           FontFamily="Segoe MDL2 Assets"
                                           FontSize="14"
                                           Foreground="#FF5722"
                                           VerticalAlignment="Center"
                                           Margin="0,0,8,0"/>
                                <TextBlock Grid.Column="1"
                                           Text="Product:"
                                           FontSize="12"
                                           Foreground="{StaticResource SecondaryTextBrush}"
                                           VerticalAlignment="Center"
                                           Width="120"/>
                                <TextBlock Grid.Column="2"
                                           x:Name="ProductNameText"
                                           Text="N/A"
                                           FontSize="12"
                                           FontWeight="SemiBold"
                                           Foreground="{StaticResource PrimaryTextBrush}"
                                           VerticalAlignment="Center"/>
                            </Grid>
                        </Border>
                    </StackPanel>
                </Border>

                <!-- Device Status Panel -->
                <Border Grid.Column="1" Grid.Row="0"
                        Background="{StaticResource PanelBackgroundBrush}" 
                        CornerRadius="16" 
                        Padding="20" 
                        Margin="12,0,0,16"
                        Effect="{StaticResource PanelShadow}">
                    <StackPanel>
                        <Grid Margin="0,0,0,16">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0"
                                       Text="&#xE7C4;"
                                       FontFamily="Segoe MDL2 Assets"
                                       FontSize="18"
                                       Foreground="{StaticResource AccentBrush}"
                                       VerticalAlignment="Center"
                                       Margin="0,0,8,0"/>
                            <TextBlock Grid.Column="1"
                                       Text="Device Status"
                                       FontSize="16"
                                       FontWeight="SemiBold"
                                       Foreground="{StaticResource AccentBrush}"
                                       VerticalAlignment="Center"/>
                            <Button Grid.Column="2"
                                    x:Name="RefreshStatusButton"
                                    Click="RefreshStatusButton_Click"
                                    Background="Transparent"
                                    BorderBrush="Transparent"
                                    Padding="8"
                                    Cursor="Hand"
                                    ToolTip="Refresh Status">
                                <TextBlock Text="&#xE72C;"
                                           FontFamily="Segoe MDL2 Assets"
                                           FontSize="14"
                                           Foreground="{StaticResource AccentBrush}"/>
                            </Button>
                        </Grid>

                        <!-- Brightness -->
                        <Border Background="{StaticResource SubPanelBackgroundBrush}" CornerRadius="8" Padding="12,8" Margin="0,0,0,8">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Column="0"
                                           Text="&#xE706;"
                                           FontFamily="Segoe MDL2 Assets"
                                           FontSize="14"
                                           Foreground="#FFC107"
                                           VerticalAlignment="Center"
                                           Margin="0,0,8,0"/>
                                <TextBlock Grid.Column="1"
                                           Text="Brightness:"
                                           FontSize="12"
                                           Foreground="{StaticResource SecondaryTextBrush}"
                                           VerticalAlignment="Center"
                                           Width="100"/>
                                <TextBlock Grid.Column="2"
                                           x:Name="BrightnessText"
                                           Text="N/A"
                                           FontSize="12"
                                           FontWeight="SemiBold"
                                           Foreground="{StaticResource PrimaryTextBrush}"
                                           VerticalAlignment="Center"/>
                            </Grid>
                        </Border>

                        <!-- Rotation -->
                        <Border Background="{StaticResource SubPanelBackgroundBrush}" CornerRadius="8" Padding="12,8" Margin="0,0,0,8">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Column="0"
                                           Text="&#xE7AD;"
                                           FontFamily="Segoe MDL2 Assets"
                                           FontSize="14"
                                           Foreground="#00BCD4"
                                           VerticalAlignment="Center"
                                           Margin="0,0,8,0"/>
                                <TextBlock Grid.Column="1"
                                           Text="Rotation:"
                                           FontSize="12"
                                           Foreground="{StaticResource SecondaryTextBrush}"
                                           VerticalAlignment="Center"
                                           Width="100"/>
                                <TextBlock Grid.Column="2"
                                           x:Name="RotationText"
                                           Text="N/A"
                                           FontSize="12"
                                           FontWeight="SemiBold"
                                           Foreground="{StaticResource PrimaryTextBrush}"
                                           VerticalAlignment="Center"/>
                            </Grid>
                        </Border>

                        <!-- OSD State -->
                        <Border Background="{StaticResource SubPanelBackgroundBrush}" CornerRadius="8" Padding="12,8" Margin="0,0,0,8">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Column="0"
                                           Text="&#xE7F8;"
                                           FontFamily="Segoe MDL2 Assets"
                                           FontSize="14"
                                           Foreground="#9C27B0"
                                           VerticalAlignment="Center"
                                           Margin="0,0,8,0"/>
                                <TextBlock Grid.Column="1"
                                           Text="OSD State:"
                                           FontSize="12"
                                           Foreground="{StaticResource SecondaryTextBrush}"
                                           VerticalAlignment="Center"
                                           Width="100"/>
                                <TextBlock Grid.Column="2"
                                           x:Name="OsdStateText"
                                           Text="N/A"
                                           FontSize="12"
                                           FontWeight="SemiBold"
                                           Foreground="{StaticResource PrimaryTextBrush}"
                                           VerticalAlignment="Center"/>
                            </Grid>
                        </Border>

                        <!-- Keep Alive Timeout -->
                        <Border Background="{StaticResource SubPanelBackgroundBrush}" CornerRadius="8" Padding="12,8" Margin="0,0,0,8">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Column="0"
                                           Text="&#xE916;"
                                           FontFamily="Segoe MDL2 Assets"
                                           FontSize="14"
                                           Foreground="#4CAF50"
                                           VerticalAlignment="Center"
                                           Margin="0,0,8,0"/>
                                <TextBlock Grid.Column="1"
                                           Text="Keep Alive:"
                                           FontSize="12"
                                           Foreground="{StaticResource SecondaryTextBrush}"
                                           VerticalAlignment="Center"
                                           Width="100"/>
                                <TextBlock Grid.Column="2"
                                           x:Name="KeepAliveText"
                                           Text="N/A"
                                           FontSize="12"
                                           FontWeight="SemiBold"
                                           Foreground="{StaticResource PrimaryTextBrush}"
                                           VerticalAlignment="Center"/>
                            </Grid>
                        </Border>

                        <!-- Display In Sleep -->
                        <Border Background="{StaticResource SubPanelBackgroundBrush}" CornerRadius="8" Padding="12,8" Margin="0,0,0,8">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Column="0"
                                           Text="&#xE708;"
                                           FontFamily="Segoe MDL2 Assets"
                                           FontSize="14"
                                           Foreground="#FF5722"
                                           VerticalAlignment="Center"
                                           Margin="0,0,8,0"/>
                                <TextBlock Grid.Column="1"
                                           Text="Display Sleep:"
                                           FontSize="12"
                                           Foreground="{StaticResource SecondaryTextBrush}"
                                           VerticalAlignment="Center"
                                           Width="100"/>
                                <TextBlock Grid.Column="2"
                                           x:Name="DisplaySleepText"
                                           Text="N/A"
                                           FontSize="12"
                                           FontWeight="SemiBold"
                                           Foreground="{StaticResource PrimaryTextBrush}"
                                           VerticalAlignment="Center"/>
                            </Grid>
                        </Border>

                        <!-- Suspend Mode Status -->
                        <Border Background="{StaticResource SubPanelBackgroundBrush}" CornerRadius="8" Padding="12,8" Visibility="Collapsed">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Column="0"
                                           Text="&#xE769;"
                                           FontFamily="Segoe MDL2 Assets"
                                           FontSize="14"
                                           Foreground="#673AB7"
                                           VerticalAlignment="Center"
                                           Margin="0,0,8,0"/>
                                <TextBlock Grid.Column="1"
                                           Text="Suspend Mode:"
                                           FontSize="12"
                                           Foreground="{StaticResource SecondaryTextBrush}"
                                           VerticalAlignment="Center"
                                           Width="100"/>
                                <TextBlock Grid.Column="2"
                                           x:Name="SuspendModeText"
                                           Text="N/A"
                                           FontSize="12"
                                           FontWeight="SemiBold"
                                           Foreground="{StaticResource PrimaryTextBrush}"
                                           VerticalAlignment="Center"/>
                            </Grid>
                        </Border>
                    </StackPanel>
                </Border>

                <!-- Device Management Panel -->
                <Border Grid.Column="0" Grid.ColumnSpan="2" Grid.Row="1"
                        Background="{StaticResource PanelBackgroundBrush}" 
                        CornerRadius="16" 
                        Padding="20" 
                        Margin="0,0,0,16"
                        Effect="{StaticResource PanelShadow}">
                    <StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,16">
                            <TextBlock Text="&#xE8B7;"
                                       FontFamily="Segoe MDL2 Assets"
                                       FontSize="18"
                                       Foreground="#FF9800"
                                       VerticalAlignment="Center"
                                       Margin="0,0,8,0"/>
                            <TextBlock Text="Device Management"
                                       FontSize="16"
                                       FontWeight="SemiBold"
                                       Foreground="#FF9800"/>
                        </StackPanel>

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <!-- Reboot Button -->
                            <Border Grid.Column="0" 
                                    Background="#FF9800" 
                                    CornerRadius="8"
                                    Margin="0,0,8,0">
                                <Button x:Name="RebootButton"
                                        Click="RebootButton_Click"
                                        Background="Transparent"
                                        Foreground="White"
                                        BorderBrush="Transparent"
                                        Padding="12,10"
                                        Cursor="Hand">
                                    <Button.ToolTip>
                                        <ToolTip MaxWidth="300">
                                            <StackPanel>
                                                <TextBlock Text="Reboot Device" FontWeight="Bold" FontSize="14" Margin="0,0,0,4"/>
                                                <TextBlock TextWrapping="Wrap" FontSize="12">
                                                    Restart the device immediately. The device will disconnect temporarily and reconnect automatically after rebooting.
                                                </TextBlock>
                                                <TextBlock Text="⚠ Device will become temporarily unavailable" 
                                                           FontSize="11" Foreground="Orange" Margin="0,4,0,0"/>
                                            </StackPanel>
                                        </ToolTip>
                                    </Button.ToolTip>
                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                        <TextBlock Text="&#xE7E8;"
                                                   FontFamily="Segoe MDL2 Assets"
                                                   FontSize="16"
                                                   Margin="0,0,8,0"/>
                                        <TextBlock Text="Reboot Device"
                                                   FontSize="14"
                                                   FontWeight="SemiBold"/>
                                    </StackPanel>
                                </Button>
                            </Border>

                            <!-- Factory Reset Button -->
                            <Border Grid.Column="1" 
