<Page x:Class="CMDevicesManager.Pages.DeviceSettings"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      xmlns:local="clr-namespace:CMDevicesManager.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="800" d:DesignWidth="1000"
      Height="900" Width="1000"
      FontFamily="{DynamicResource AppFontFamily}"
      Title="{DynamicResource DeviceSettingsPageTitle}"
      Background="#111114">

    <Page.Resources>
        <!-- Core Palette aligned with MainWindow -->
        <SolidColorBrush x:Key="AccentBrush" Color="#BC41E9"/>
        <SolidColorBrush x:Key="AccentBrushLight" Color="#D671FF"/>
        <SolidColorBrush x:Key="PanelBackgroundBrush" Color="#1E1E1E"/>
        <SolidColorBrush x:Key="SubPanelBackgroundBrush" Color="#111114"/>
        <SolidColorBrush x:Key="SubPanelAltBackgroundBrush" Color="#161618"/>
        <SolidColorBrush x:Key="ElevatedPanelBrush" Color="#242428"/>
        <SolidColorBrush x:Key="HeaderBackgroundBrush" Color="#111114"/>
        <SolidColorBrush x:Key="DividerBrush" Color="#333333"/>
        <SolidColorBrush x:Key="ToggleOffBrush" Color="#333333"/>
        <SolidColorBrush x:Key="ToggleThumbBrush" Color="#FFFFFF"/>
        <SolidColorBrush x:Key="OverlayMaskBrush" Color="#80000000"/>

        <!-- Typography / Foregrounds -->
        <SolidColorBrush x:Key="PrimaryTextBrush" Color="#FFFFFF"/>
        <SolidColorBrush x:Key="SecondaryTextBrush" Color="#CCCCCC"/>
        <SolidColorBrush x:Key="HintTextBrush" Color="#888888"/>

        <!-- Shadow helper -->
        <DropShadowEffect x:Key="PanelShadow" Color="#000000" BlurRadius="12" ShadowDepth="3" Opacity="0.30"/>
        <DropShadowEffect x:Key="SmallShadow" Color="#000000" BlurRadius="6" ShadowDepth="2" Opacity="0.40"/>

        <!-- 关闭按钮样式（局部） -->
        <Style x:Key="HeaderIconButtonStyle" TargetType="Button">
            <Setter Property="Width" Value="32"/>
            <Setter Property="Height" Value="32"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Padding" Value="0"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="Bd" CornerRadius="6" Background="{TemplateBinding Background}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Bd" Property="Background" Value="#22FFFFFF"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="Bd" Property="Background" Value="#33FFFFFF"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Toggle Base Style -->
        <Style x:Key="BaseToggleSwitchStyle" TargetType="ToggleButton">
            <Setter Property="Width" Value="60"/>
            <Setter Property="Height" Value="30"/>
            <Setter Property="Background" Value="{StaticResource ToggleOffBrush}"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ToggleButton">
                        <Grid>
                            <Border x:Name="TrackBorder"
                                    Width="60" Height="30"
                                    CornerRadius="15"
                                    Background="{TemplateBinding Background}">
                                <Border.Effect>
                                    <DropShadowEffect Color="#000000" BlurRadius="4" ShadowDepth="1" Opacity="0.25"/>
                                </Border.Effect>
                            </Border>
                            <Border x:Name="ThumbBorder"
                                    Width="26" Height="26"
                                    CornerRadius="13"
                                    Background="{StaticResource ToggleThumbBrush}"
                                    HorizontalAlignment="Left"
                                    VerticalAlignment="Center"
                                    Margin="2,0,0,0">
                                <Border.Effect>
                                    <DropShadowEffect Color="#000000" BlurRadius="6" ShadowDepth="2" Opacity="0.45"/>
                                </Border.Effect>
                                <Border.RenderTransform>
                                    <TranslateTransform x:Name="ThumbTransform" X="0"/>
                                </Border.RenderTransform>
                            </Border>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Trigger.EnterActions>
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <DoubleAnimation Storyboard.TargetName="ThumbTransform"
                                                             Storyboard.TargetProperty="X"
                                                             To="30" Duration="0:0:0.2">
                                                <DoubleAnimation.EasingFunction>
                                                    <QuadraticEase EasingMode="EaseOut"/>
                                                </DoubleAnimation.EasingFunction>
                                            </DoubleAnimation>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </Trigger.EnterActions>
                                <Trigger.ExitActions>
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <DoubleAnimation Storyboard.TargetName="ThumbTransform"
                                                             Storyboard.TargetProperty="X"
                                                             To="0" Duration="0:0:0.2">
                                                <DoubleAnimation.EasingFunction>
                                                    <QuadraticEase EasingMode="EaseOut"/>
                                                </DoubleAnimation.EasingFunction>
                                            </DoubleAnimation>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </Trigger.ExitActions>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="TrackBorder" Property="Opacity" Value="0.9"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Opacity" Value="0.5"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="SleepModeToggleStyle" TargetType="ToggleButton" BasedOn="{StaticResource BaseToggleSwitchStyle}">
            <Setter Property="Background" Value="{StaticResource ToggleOffBrush}"/>
            <Style.Triggers>
                <Trigger Property="IsChecked" Value="True">
                    <Setter Property="Background" Value="{StaticResource AccentBrush}"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="SuspendModeToggleStyle" TargetType="ToggleButton" BasedOn="{StaticResource BaseToggleSwitchStyle}">
            <Setter Property="Background" Value="{StaticResource ToggleOffBrush}"/>
            <Style.Triggers>
                <Trigger Property="IsChecked" Value="True">
                    <Setter Property="Background" Value="{StaticResource AccentBrush}"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Page.Resources>

    <Grid Margin="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0"
                Background="{StaticResource HeaderBackgroundBrush}"
                CornerRadius="12"
                Padding="24,16"
                Margin="0,0,0,16">
            <Grid>
                <!-- 增加一列用于关闭按钮 -->
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0"
                           Text="&#xE115;"
                           FontFamily="Segoe MDL2 Assets"
                           FontSize="24"
                           Foreground="{StaticResource AccentBrush}"
                           VerticalAlignment="Center"
                           Margin="0,0,16,0"/>

                <StackPanel Grid.Column="1" VerticalAlignment="Center">
                    <TextBlock x:Name="DeviceNameText"
                               Text="{DynamicResource DeviceSettingsHeader}"
                               FontSize="20"
                               FontWeight="Bold"
                               Foreground="{StaticResource PrimaryTextBrush}"/>
                    <TextBlock x:Name="DevicePathText"
                               Text="{DynamicResource NoDeviceSelected}"
                               FontSize="12"
                               Foreground="#AAFFFFFF"
                               Margin="0,2,0,0"
                               Visibility="Collapsed"/>
                </StackPanel>

                <Border Grid.Column="2"
                        x:Name="ConnectionStatusBorder"
                        Width="12" Height="12"
                        CornerRadius="6"
                        Background="#4CAF50"
                        VerticalAlignment="Center"
                        Margin="0,0,12,0">
                    <Border.Effect>
                        <DropShadowEffect Color="#4CAF50" BlurRadius="8" ShadowDepth="0" Opacity="0.6"/>
                    </Border.Effect>
                </Border>

                <!-- 新增关闭按钮 -->
                <Button Grid.Column="3"
                        x:Name="CloseWindowButton"
                        Style="{StaticResource HeaderIconButtonStyle}"
                        Click="CloseWindowButton_Click"
                        ToolTip="{DynamicResource CloseTooltip}">
                    <TextBlock Text="&#xE8BB;"
                               FontFamily="Segoe MDL2 Assets"
                               FontSize="14"
                               Foreground="#FFFFFF"/>
                </Button>
            </Grid>
        </Border>

        <!-- Main Content -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*"/>
                    <ColumnDefinition Width="1*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Device Information Panel -->
                <Border Grid.Column="0" Grid.Row="0"
                        Background="{StaticResource PanelBackgroundBrush}"
                        CornerRadius="16"
                        Padding="20"
                        Margin="0,0,12,16"
                        Effect="{StaticResource PanelShadow}">
                    <StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,16">
                            <TextBlock Text="&#xE7F4;" FontFamily="Segoe MDL2 Assets" FontSize="18"
                                       Foreground="{StaticResource AccentBrush}" Margin="0,0,8,0"/>
                            <TextBlock Text="{DynamicResource DeviceInformationHeader}"
                                       FontSize="16" FontWeight="SemiBold"
                                       Foreground="{StaticResource AccentBrush}"/>
                        </StackPanel>

                        <!-- Hardware Version -->
                        <Border Background="{StaticResource SubPanelBackgroundBrush}" CornerRadius="8" Padding="12,8" Margin="0,0,0,8">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Column="0" Text="&#xE950;" FontFamily="Segoe MDL2 Assets"
                                           FontSize="14" Foreground="#FF9800" Margin="0,0,8,0"/>
                                <TextBlock Grid.Column="1" Text="{DynamicResource HardwareVersionLabel}"
                                           FontSize="12" Foreground="{StaticResource SecondaryTextBrush}" Width="120"/>
                                <TextBlock Grid.Column="2" x:Name="HardwareVersionText" Text="N/A"
                                           FontSize="12" FontWeight="SemiBold"
                                           Foreground="{StaticResource PrimaryTextBrush}"/>
                            </Grid>
                        </Border>

                        <!-- Firmware Version -->
                        <Border Background="{StaticResource SubPanelBackgroundBrush}" CornerRadius="8" Padding="12,8" Margin="0,0,0,8">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Column="0" Text="&#xE8AD;" FontFamily="Segoe MDL2 Assets"
                                           FontSize="14" Foreground="#4CAF50" Margin="0,0,8,0"/>
                                <TextBlock Grid.Column="1" Text="{DynamicResource FirmwareVersionLabel}"
                                           FontSize="12" Foreground="{StaticResource SecondaryTextBrush}" Width="120"/>
                                <TextBlock Grid.Column="2" x:Name="FirmwareVersionText" Text="N/A"
                                           FontSize="12" FontWeight="SemiBold"
                                           Foreground="{StaticResource PrimaryTextBrush}"/>
                            </Grid>
                        </Border>

                        <!-- Serial Number -->
                        <Border Background="{StaticResource SubPanelBackgroundBrush}" CornerRadius="8" Padding="12,8" Margin="0,0,0,8">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Column="0" Text="&#xE8D7;" FontFamily="Segoe MDL2 Assets"
                                           FontSize="14" Foreground="#9C27B0" Margin="0,0,8,0"/>
                                <TextBlock Grid.Column="1" Text="{DynamicResource SerialNumberLabel}"
                                           FontSize="12" Foreground="{StaticResource SecondaryTextBrush}" Width="120"/>
                                <TextBlock Grid.Column="2" x:Name="SerialNumberText" Text="N/A"
                                           FontSize="12" FontWeight="SemiBold"
                                           Foreground="{StaticResource PrimaryTextBrush}"/>
                            </Grid>
                        </Border>

                        <!-- Manufacturer -->
                        <Border Background="{StaticResource SubPanelBackgroundBrush}" CornerRadius="8" Padding="12,8" Margin="0,0,0,8">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Column="0" Text="&#xE7EE;" FontFamily="Segoe MDL2 Assets"
                                           FontSize="14" Foreground="{StaticResource AccentBrush}" Margin="0,0,8,0"/>
                                <TextBlock Grid.Column="1" Text="{DynamicResource ManufacturerLabel}"
                                           FontSize="12" Foreground="{StaticResource SecondaryTextBrush}" Width="120"/>
                                <TextBlock Grid.Column="2" x:Name="ManufacturerText" Text="N/A"
                                           FontSize="12" FontWeight="SemiBold"
                                           Foreground="{StaticResource PrimaryTextBrush}"/>
                            </Grid>
                        </Border>

                        <!-- Product -->
                        <Border Background="{StaticResource SubPanelBackgroundBrush}" CornerRadius="8" Padding="12,8">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Column="0" Text="&#xE7C3;" FontFamily="Segoe MDL2 Assets"
                                           FontSize="14" Foreground="#FF5722" Margin="0,0,8,0"/>
                                <TextBlock Grid.Column="1" Text="{DynamicResource ProductLabel}"
                                           FontSize="12" Foreground="{StaticResource SecondaryTextBrush}" Width="120"/>
                                <TextBlock Grid.Column="2" x:Name="ProductNameText" Text="N/A"
                                           FontSize="12" FontWeight="SemiBold"
                                           Foreground="{StaticResource PrimaryTextBrush}"/>
                            </Grid>
                        </Border>
                    </StackPanel>
                </Border>

                <!-- Device Status Panel -->
                <Border Grid.Column="1" Grid.Row="0"
                        Background="{StaticResource PanelBackgroundBrush}"
                        CornerRadius="16"
                        Padding="20"
                        Margin="12,0,0,16"
                        Effect="{StaticResource PanelShadow}">
                    <StackPanel>
                        <Grid Margin="0,0,0,16">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0" Text="&#xE7C4;" FontFamily="Segoe MDL2 Assets"
                                       FontSize="18" Foreground="{StaticResource AccentBrush}" Margin="0,0,8,0"/>
                            <TextBlock Grid.Column="1" Text="{DynamicResource DeviceStatusHeader}"
                                       FontSize="16" FontWeight="SemiBold"
                                       Foreground="{StaticResource AccentBrush}"/>
                            <Button Grid.Column="2"
                                    x:Name="RefreshStatusButton"
                                    Click="RefreshStatusButton_Click"
                                    Background="Transparent"
                                    BorderBrush="Transparent"
                                    Padding="8"
                                    Cursor="Hand"
                                    ToolTip="{DynamicResource RefreshStatusTooltip}">
                                <TextBlock Text="&#xE72C;" FontFamily="Segoe MDL2 Assets"
                                           FontSize="14"
                                           Foreground="{StaticResource AccentBrush}"/>
                            </Button>
                        </Grid>

                        <!-- Brightness -->
                        <Border Background="{StaticResource SubPanelBackgroundBrush}" CornerRadius="8" Padding="12,8" Margin="0,0,0,8">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Column="0" Text="&#xE706;" FontFamily="Segoe MDL2 Assets"
                                           FontSize="14" Foreground="#FFC107" Margin="0,0,8,0"/>
                                <TextBlock Grid.Column="1" Text="{DynamicResource BrightnessLabel}"
                                           FontSize="12" Foreground="{StaticResource SecondaryTextBrush}" Width="100"/>
                                <TextBlock Grid.Column="2" x:Name="BrightnessText" Text="N/A"
                                           FontSize="12" FontWeight="SemiBold"
                                           Foreground="{StaticResource PrimaryTextBrush}"/>
                            </Grid>
                        </Border>

                        <!-- Rotation -->
                        <Border Background="{StaticResource SubPanelBackgroundBrush}" CornerRadius="8" Padding="12,8" Margin="0,0,0,8">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Column="0" Text="&#xE7AD;" FontFamily="Segoe MDL2 Assets"
                                           FontSize="14" Foreground="#00BCD4" Margin="0,0,8,0"/>
                                <TextBlock Grid.Column="1" Text="{DynamicResource RotationLabel}"
                                           FontSize="12" Foreground="{StaticResource SecondaryTextBrush}" Width="100"/>
                                <TextBlock Grid.Column="2" x:Name="RotationText" Text="N/A"
                                           FontSize="12" FontWeight="SemiBold"
                                           Foreground="{StaticResource PrimaryTextBrush}"/>
                            </Grid>
                        </Border>

                        <!-- OSD -->
                        <Border Background="{StaticResource SubPanelBackgroundBrush}" CornerRadius="8" Padding="12,8" Margin="0,0,0,8">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Column="0" Text="&#xE7F8;" FontFamily="Segoe MDL2 Assets"
                                           FontSize="14" Foreground="#9C27B0" Margin="0,0,8,0"/>
                                <TextBlock Grid.Column="1" Text="{DynamicResource OsdStateLabel}"
                                           FontSize="12" Foreground="{StaticResource SecondaryTextBrush}" Width="100"/>
                                <TextBlock Grid.Column="2" x:Name="OsdStateText" Text="N/A"
                                           FontSize="12" FontWeight="SemiBold"
                                           Foreground="{StaticResource PrimaryTextBrush}"/>
                            </Grid>
                        </Border>

                        <!-- KeepAlive -->
                        <Border Background="{StaticResource SubPanelBackgroundBrush}" CornerRadius="8" Padding="12,8" Margin="0,0,0,8">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Column="0" Text="&#xE916;" FontFamily="Segoe MDL2 Assets"
                                           FontSize="14" Foreground="#4CAF50" Margin="0,0,8,0"/>
                                <TextBlock Grid.Column="1" Text="{DynamicResource KeepAliveLabel}"
                                           FontSize="12" Foreground="{StaticResource SecondaryTextBrush}" Width="100"/>
                                <TextBlock Grid.Column="2" x:Name="KeepAliveText" Text="N/A"
                                           FontSize="12" FontWeight="SemiBold"
                                           Foreground="{StaticResource PrimaryTextBrush}"/>
                            </Grid>
                        </Border>

                        <!-- Display Sleep -->
                        <Border Background="{StaticResource SubPanelBackgroundBrush}" CornerRadius="8" Padding="12,8" Margin="0,0,0,8">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Column="0" Text="&#xE708;" FontFamily="Segoe MDL2 Assets"
                                           FontSize="14" Foreground="#FF5722" Margin="0,0,8,0"/>
                                <TextBlock Grid.Column="1" Text="{DynamicResource DisplaySleepLabel}"
                                           FontSize="12" Foreground="{StaticResource SecondaryTextBrush}" Width="100"/>
                                <TextBlock Grid.Column="2" x:Name="DisplaySleepText" Text="N/A"
                                           FontSize="12" FontWeight="SemiBold"
                                           Foreground="{StaticResource PrimaryTextBrush}"/>
                            </Grid>
                        </Border>

                        <!-- Suspend Mode (hidden initially) -->
                        <Border Background="{StaticResource SubPanelBackgroundBrush}" CornerRadius="8" Padding="12,8" Visibility="Collapsed">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Column="0" Text="&#xE769;" FontFamily="Segoe MDL2 Assets"
                                           FontSize="14" Foreground="#673AB7" Margin="0,0,8,0"/>
                                <TextBlock Grid.Column="1" Text="{DynamicResource SuspendModeLabel}"
                                           FontSize="12" Foreground="{StaticResource SecondaryTextBrush}" Width="100"/>
                                <TextBlock Grid.Column="2" x:Name="SuspendModeText" Text="N/A"
                                           FontSize="12" FontWeight="SemiBold"
                                           Foreground="{StaticResource PrimaryTextBrush}"/>
                            </Grid>
                        </Border>
                    </StackPanel>
                </Border>

                <!-- Device Management Panel -->
                <Border Grid.Column="0" Grid.ColumnSpan="2" Grid.Row="1"
                        Background="{StaticResource PanelBackgroundBrush}"
                        CornerRadius="16"
                        Padding="20"
                        Margin="0,0,0,16"
                        Effect="{StaticResource PanelShadow}">
                    <StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,16">
                            <TextBlock Text="&#xE8B7;" FontFamily="Segoe MDL2 Assets" FontSize="18"
                                       Foreground="#FF9800" Margin="0,0,8,0"/>
                            <TextBlock Text="{DynamicResource DeviceManagementHeader}"
                                       FontSize="16" FontWeight="SemiBold" Foreground="#FF9800"/>
                        </StackPanel>

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <!-- Reboot -->
                            <Border Grid.Column="0" Background="#FF9800" CornerRadius="8" Margin="0,0,8,0">
                                <Button x:Name="RebootButton" Click="RebootButton_Click"
                                        Background="Transparent" Foreground="White"
                                        BorderBrush="Transparent" Padding="12,10" Cursor="Hand">
                                    <Button.ToolTip>
                                        <ToolTip MaxWidth="300">
                                            <StackPanel>
                                                <TextBlock Text="{DynamicResource RebootTooltipTitle}" FontWeight="Bold" FontSize="14" Margin="0,0,0,4"/>
                                                <TextBlock TextWrapping="Wrap" FontSize="12" Text="{DynamicResource RebootTooltipBody}"/>
                                                <TextBlock Text="{DynamicResource RebootTooltipWarn}" FontSize="11" Foreground="Orange" Margin="0,4,0,0"/>
                                            </StackPanel>
                                        </ToolTip>
                                    </Button.ToolTip>
                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                        <TextBlock Text="&#xE7E8;" FontFamily="Segoe MDL2 Assets" FontSize="16" Margin="0,0,8,0"/>
                                        <TextBlock Text="{DynamicResource RebootDeviceButton}" FontSize="14" FontWeight="SemiBold"/>
                                    </StackPanel>
                                </Button>
                            </Border>

                            <!-- Factory Reset -->
                            <Border Grid.Column="1" Background="#F44336" CornerRadius="8" Margin="4,0,4,0">
                                <Button x:Name="FactoryResetButton" Click="FactoryResetButton_Click"
                                        Background="Transparent" Foreground="White"
                                        BorderBrush="Transparent" Padding="12,10" Cursor="Hand">
                                    <Button.ToolTip>
                                        <ToolTip MaxWidth="350">
                                            <StackPanel>
                                                <TextBlock Text="{DynamicResource FactoryResetTooltipTitle}" FontWeight="Bold" FontSize="14" Margin="0,0,0,4"/>
                                                <TextBlock TextWrapping="Wrap" FontSize="12" Margin="0,0,0,4"
                                                           Text="{DynamicResource FactoryResetTooltipBody}"/>
                                                <TextBlock Text="{DynamicResource FactoryResetTooltipWarn}" FontSize="11" FontWeight="Bold" Foreground="Red" Margin="0,4,0,0"/>
                                                <TextBlock Text="{DynamicResource FactoryResetPoint1}" FontSize="10" Foreground="Gray" Margin="0,2,0,0"/>
                                                <TextBlock Text="{DynamicResource FactoryResetPoint2}" FontSize="10" Foreground="Gray" Margin="0,1,0,0"/>
                                                <TextBlock Text="{DynamicResource FactoryResetPoint3}" FontSize="10" Foreground="Gray" Margin="0,1,0,0"/>
                                            </StackPanel>
                                        </ToolTip>
                                    </Button.ToolTip>
                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                        <TextBlock Text="&#xE7AD;" FontFamily="Segoe MDL2 Assets" FontSize="16" Margin="0,0,8,0"/>
                                        <TextBlock Text="{DynamicResource FactoryResetButton}" FontSize="14" FontWeight="SemiBold"/>
                                    </StackPanel>
                                </Button>
                            </Border>

                            <!-- Update Firmware -->
                            <Border Grid.Column="2" Background="#9C27B0" CornerRadius="8" Margin="8,0,0,0">
                                <Button x:Name="UpdateFirmwareButton" Click="UpdateFirmwareButton_Click"
                                        Background="Transparent" Foreground="White"
                                        BorderBrush="Transparent" Padding="12,10" Cursor="Hand">
                                    <Button.ToolTip>
                                        <ToolTip MaxWidth="350">
                                            <StackPanel>
                                                <TextBlock Text="{DynamicResource UpdateFwTooltipTitle}" FontWeight="Bold" FontSize="14" Margin="0,0,0,4"/>
                                                <TextBlock TextWrapping="Wrap" FontSize="12" Margin="0,0,0,4"
                                                           Text="{DynamicResource UpdateFwTooltipBody}"/>
                                                <TextBlock Text="{DynamicResource UpdateFwTooltipWarn}" FontSize="11" FontWeight="Bold" Foreground="Red" Margin="0,4,0,0"/>
                                                <TextBlock Text="{DynamicResource UpdateFwPoint1}" FontSize="10" Foreground="Gray" Margin="0,2,0,0"/>
                                                <TextBlock Text="{DynamicResource UpdateFwPoint2}" FontSize="10" Foreground="Gray" Margin="0,1,0,0"/>
                                                <TextBlock Text="{DynamicResource UpdateFwPoint3}" FontSize="10" Foreground="Gray" Margin="0,1,0,0"/>
                                            </StackPanel>
                                        </ToolTip>
                                    </Button.ToolTip>
                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                        <TextBlock Text="&#xE896;" FontFamily="Segoe MDL2 Assets" FontSize="16" Margin="0,0,8,0"/>
                                        <TextBlock Text="{DynamicResource UpdateFirmwareButton}" FontSize="14" FontWeight="SemiBold"/>
                                    </StackPanel>
                                </Button>
                            </Border>
                        </Grid>
                    </StackPanel>
                </Border>

                <!-- Display Control Settings -->
                <Border Grid.Column="0" Grid.ColumnSpan="2" Grid.Row="2"
                        Background="{StaticResource PanelBackgroundBrush}"
                        CornerRadius="16"
                        Padding="20"
                        Margin="0,0,0,16"
                        Effect="{StaticResource PanelShadow}">
                    <StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,16">
                            <TextBlock Text="&#xE770;" FontFamily="Segoe MDL2 Assets" FontSize="18"
                                       Foreground="#607D8B" Margin="0,0,8,0"/>
                            <TextBlock Text="{DynamicResource DisplayControlSettingsHeader}"
                                       FontSize="16" FontWeight="SemiBold" Foreground="#607D8B"/>
                        </StackPanel>

                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <!-- Sleep Mode -->
                            <Border Grid.Row="0" Background="{StaticResource SubPanelBackgroundBrush}"
                                    CornerRadius="8" Padding="16" Margin="0,0,0,12">
                                <StackPanel>
                                    <StackPanel Orientation="Horizontal" Margin="0,0,0,12">
                                        <TextBlock Text="&#xE708;" FontFamily="Segoe MDL2 Assets" FontSize="16"
                                                   Foreground="{StaticResource AccentBrush}" Margin="0,0,8,0"/>
                                        <TextBlock Text="{DynamicResource SleepModeHeader}"
                                                   FontSize="14" FontWeight="SemiBold"
                                                   Foreground="{StaticResource PrimaryTextBrush}"/>
                                    </StackPanel>

                                    <TextBlock Text="{DynamicResource SleepModeDescription}" FontSize="11"
                                               Foreground="{StaticResource HintTextBrush}" Margin="0,0,0,12"
                                               TextWrapping="Wrap"/>

                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        <ToggleButton x:Name="SleepModeToggle"
                                                      Grid.Column="1"
                                                      HorizontalAlignment="Left"
                                                      Click="SleepModeToggle_Click"
                                                      Style="{StaticResource SleepModeToggleStyle}">
                                            <ToggleButton.ToolTip>
                                                <ToolTip MaxWidth="280">
                                                    <StackPanel>
                                                        <TextBlock Text="{DynamicResource SleepToggleTitle}" FontWeight="Bold" FontSize="14" Margin="0,0,0,4"/>
                                                        <TextBlock TextWrapping="Wrap" FontSize="12" Margin="0,0,0,4"
                                                                   Text="{DynamicResource SleepToggleBody}"/>
                                                        <TextBlock Text="{DynamicResource SleepToggleOn}" FontSize="11" Foreground="LightGreen" Margin="0,2,0,0"/>
                                                        <TextBlock Text="{DynamicResource SleepToggleOff}" FontSize="11" Foreground="LightCoral" Margin="0,1,0,0"/>
                                                    </StackPanel>
                                                </ToolTip>
                                            </ToggleButton.ToolTip>
                                        </ToggleButton>
                                    </Grid>
                                </StackPanel>
                            </Border>

                            <!-- Suspend Mode -->
                            <Border Grid.Row="1" Background="{StaticResource SubPanelBackgroundBrush}"
                                    CornerRadius="8" Padding="16">
                                <StackPanel>
                                    <StackPanel Orientation="Horizontal" Margin="0,0,0,12">
                                        <TextBlock Text="&#xE7C4;" FontFamily="Segoe MDL2 Assets" FontSize="16"
                                                   Foreground="{StaticResource AccentBrush}" Margin="0,0,8,0"/>
                                        <TextBlock Text="{DynamicResource SuspendModeHeader}"
                                                   FontSize="14" FontWeight="SemiBold"
                                                   Foreground="{StaticResource PrimaryTextBrush}"/>
                                    </StackPanel>

                                    <TextBlock Text="{DynamicResource SuspendModeDescription}" FontSize="11"
                                               Foreground="{StaticResource HintTextBrush}" Margin="0,0,0,12"
                                               TextWrapping="Wrap"/>

                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        <ToggleButton x:Name="SuspendModeToggle"
                                                      Grid.Column="1"
                                                      HorizontalAlignment="Left"
                                                      Click="SuspendModeToggle_Click"
                                                      Style="{StaticResource SuspendModeToggleStyle}">
                                            <ToggleButton.ToolTip>
                                                <ToolTip MaxWidth="320">
                                                    <StackPanel>
                                                        <TextBlock Text="{DynamicResource SuspendToggleTitle}" FontWeight="Bold" FontSize="14" Margin="0,0,0,4"/>
                                                        <TextBlock TextWrapping="Wrap" FontSize="12" Margin="0,0,0,4"
                                                                   Text="{DynamicResource SuspendToggleBody}"/>
                                                        <TextBlock Text="{DynamicResource SuspendToggleOn}" FontSize="11" Foreground="LightBlue" Margin="0,2,0,0"/>
                                                        <TextBlock Text="{DynamicResource SuspendToggleOff}" FontSize="11" Foreground="Orange" Margin="0,1,0,0"/>
                                                    </StackPanel>
                                                </ToolTip>
                                            </ToggleButton.ToolTip>
                                        </ToggleButton>
                                    </Grid>

                                    <!-- Media Area -->
                                    <Border x:Name="SuspendModeContentArea"
                                            Background="{StaticResource SubPanelAltBackgroundBrush}"
                                            CornerRadius="6"
                                            Padding="12"
                                            Margin="0,12,0,0">
                                        <Grid>
                                            <StackPanel x:Name="SuspendMediaPanel">
                                                <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                                                    <TextBlock Text="&#xE8FD;" FontFamily="Segoe MDL2 Assets"
                                                               FontSize="14" Foreground="#4CAF50" Margin="0,0,6,0"/>
                                                    <TextBlock Text="{DynamicResource SuspendMediaFilesHeader}"
                                                               FontSize="12" FontWeight="SemiBold"
                                                               Foreground="{StaticResource SecondaryTextBrush}"/>
                                                    <TextBlock Text="{DynamicResource SuspendMediaHint}"
                                                               FontSize="10" Foreground="{StaticResource HintTextBrush}"
                                                               Margin="8,0,0,0" VerticalAlignment="Center"/>
                                                </StackPanel>

                                                <UniformGrid x:Name="SuspendMediaGrid"
                                                             Rows="1" Columns="5"
                                                             Margin="0,8,0,0">
                                                    <!-- Media slots (repeat pattern) -->
                                                    <!-- Slot 1 -->
                                                    <Border x:Name="MediaSlot1" Background="{StaticResource SubPanelBackgroundBrush}"
                                                            BorderBrush="#444444" BorderThickness="2"
                                                            CornerRadius="8" Margin="2" Height="80" Width="80"
                                                            Cursor="Hand" MouseLeftButtonUp="MediaSlot_Click" Tag="0">
                                                        <Grid>
                                                            <Image x:Name="MediaThumbnail1" Stretch="UniformToFill" Visibility="Collapsed"/>
                                                            <StackPanel x:Name="AddMediaPlaceholder1" HorizontalAlignment="Center" VerticalAlignment="Center">
                                                                <TextBlock Text="&#xE710;" FontFamily="Segoe MDL2 Assets" FontSize="20" Foreground="#666666"/>
                                                                <TextBlock Text="{DynamicResource AddMediaText}" FontSize="9" Foreground="#666666" Margin="0,2,0,0"/>
                                                            </StackPanel>
                                                            <Border x:Name="MediaInfoOverlay1" Background="#80000000"
                                                                    VerticalAlignment="Bottom" CornerRadius="0,0,6,6"
                                                                    Visibility="Collapsed">
                                                                <StackPanel Margin="4,2">
                                                                    <TextBlock x:Name="MediaFileName1" Text="media1.mp4" FontSize="8" Foreground="White" TextTrimming="CharacterEllipsis"/>
                                                                    <TextBlock Text="{DynamicResource ActiveStatusText}" FontSize="7" Foreground="#4CAF50"/>
                                                                </StackPanel>
                                                            </Border>
                                                            <Button x:Name="RemoveMediaButton1" Width="16" Height="16"
                                                                    HorizontalAlignment="Right" VerticalAlignment="Top"
                                                                    Margin="2" Background="#F44336" BorderBrush="Transparent"
                                                                    Padding="0" Visibility="Collapsed" Click="RemoveMedia_Click" Tag="0">
                                                                <TextBlock Text="&#xE711;" FontFamily="Segoe MDL2 Assets" FontSize="8" Foreground="White"/>
                                                            </Button>
                                                        </Grid>
                                                    </Border>

                                                    <!-- Slot 2 -->
                                                    <Border x:Name="MediaSlot2" Background="{StaticResource SubPanelBackgroundBrush}"
                                                            BorderBrush="#444444" BorderThickness="2"
                                                            CornerRadius="8" Margin="2" Height="80" Width="80"
                                                            Cursor="Hand" MouseLeftButtonUp="MediaSlot_Click" Tag="1">
                                                        <Grid>
                                                            <Image x:Name="MediaThumbnail2" Stretch="UniformToFill" Visibility="Collapsed"/>
                                                            <StackPanel x:Name="AddMediaPlaceholder2" HorizontalAlignment="Center" VerticalAlignment="Center">
                                                                <TextBlock Text="&#xE710;" FontFamily="Segoe MDL2 Assets" FontSize="20" Foreground="#666666"/>
                                                                <TextBlock Text="{DynamicResource AddMediaText}" FontSize="9" Foreground="#666666" Margin="0,2,0,0"/>
                                                            </StackPanel>
                                                            <Border x:Name="MediaInfoOverlay2" Background="#80000000"
                                                                    VerticalAlignment="Bottom" CornerRadius="0,0,6,6"
                                                                    Visibility="Collapsed">
                                                                <StackPanel Margin="4,2">
                                                                    <TextBlock x:Name="MediaFileName2" Text="media2.mp4" FontSize="8" Foreground="White" TextTrimming="CharacterEllipsis"/>
                                                                    <TextBlock Text="{DynamicResource ActiveStatusText}" FontSize="7" Foreground="#4CAF50"/>
                                                                </StackPanel>
                                                            </Border>
                                                            <Button x:Name="RemoveMediaButton2" Width="16" Height="16"
                                                                    HorizontalAlignment="Right" VerticalAlignment="Top"
                                                                    Margin="2" Background="#F44336" BorderBrush="Transparent"
                                                                    Padding="0" Visibility="Collapsed" Click="RemoveMedia_Click" Tag="1">
                                                                <TextBlock Text="&#xE711;" FontFamily="Segoe MDL2 Assets" FontSize="8" Foreground="White"/>
                                                            </Button>
                                                        </Grid>
                                                    </Border>

                                                    <!-- Slot 3 -->
                                                    <Border x:Name="MediaSlot3" Background="{StaticResource SubPanelBackgroundBrush}"
                                                            BorderBrush="#444444" BorderThickness="2"
                                                            CornerRadius="8" Margin="2" Height="80" Width="80"
                                                            Cursor="Hand" MouseLeftButtonUp="MediaSlot_Click" Tag="2">
                                                        <Grid>
                                                            <Image x:Name="MediaThumbnail3" Stretch="UniformToFill" Visibility="Collapsed"/>
                                                            <StackPanel x:Name="AddMediaPlaceholder3" HorizontalAlignment="Center" VerticalAlignment="Center">
                                                                <TextBlock Text="&#xE710;" FontFamily="Segoe MDL2 Assets" FontSize="20" Foreground="#666666"/>
                                                                <TextBlock Text="{DynamicResource AddMediaText}" FontSize="9" Foreground="#666666" Margin="0,2,0,0"/>
                                                            </StackPanel>
                                                            <Border x:Name="MediaInfoOverlay3" Background="#80000000"
                                                                    VerticalAlignment="Bottom" CornerRadius="0,0,6,6"
                                                                    Visibility="Collapsed">
                                                                <StackPanel Margin="4,2">
                                                                    <TextBlock x:Name="MediaFileName3" Text="media3.mp4" FontSize="8" Foreground="White" TextTrimming="CharacterEllipsis"/>
                                                                    <TextBlock Text="{DynamicResource ActiveStatusText}" FontSize="7" Foreground="#4CAF50"/>
                                                                </StackPanel>
                                                            </Border>
                                                            <Button x:Name="RemoveMediaButton3" Width="16" Height="16"
                                                                    HorizontalAlignment="Right" VerticalAlignment="Top"
                                                                    Margin="2" Background="#F44336" BorderBrush="Transparent"
                                                                    Padding="0" Visibility="Collapsed" Click="RemoveMedia_Click" Tag="2">
                                                                <TextBlock Text="&#xE711;" FontFamily="Segoe MDL2 Assets" FontSize="8" Foreground="White"/>
                                                            </Button>
                                                        </Grid>
                                                    </Border>

                                                    <!-- Slot 4 -->
                                                    <Border x:Name="MediaSlot4" Background="{StaticResource SubPanelBackgroundBrush}"
                                                            BorderBrush="#444444" BorderThickness="2"
                                                            CornerRadius="8" Margin="2" Height="80" Width="80"
                                                            Cursor="Hand" MouseLeftButtonUp="MediaSlot_Click" Tag="3">
                                                        <Grid>
                                                            <Image x:Name="MediaThumbnail4" Stretch="UniformToFill" Visibility="Collapsed"/>
                                                            <StackPanel x:Name="AddMediaPlaceholder4" HorizontalAlignment="Center" VerticalAlignment="Center">
                                                                <TextBlock Text="&#xE710;" FontFamily="Segoe MDL2 Assets" FontSize="20" Foreground="#666666"/>
                                                                <TextBlock Text="{DynamicResource AddMediaText}" FontSize="9" Foreground="#666666" Margin="0,2,0,0"/>
                                                            </StackPanel>
                                                            <Border x:Name="MediaInfoOverlay4" Background="#80000000"
                                                                    VerticalAlignment="Bottom" CornerRadius="0,0,6,6"
                                                                    Visibility="Collapsed">
                                                                <StackPanel Margin="4,2">
                                                                    <TextBlock x:Name="MediaFileName4" Text="media4.mp4" FontSize="8" Foreground="White" TextTrimming="CharacterEllipsis"/>
                                                                    <TextBlock Text="{DynamicResource ActiveStatusText}" FontSize="7" Foreground="#4CAF50"/>
                                                                </StackPanel>
                                                            </Border>
                                                            <Button x:Name="RemoveMediaButton4" Width="16" Height="16"
                                                                    HorizontalAlignment="Right" VerticalAlignment="Top"
                                                                    Margin="2" Background="#F44336" BorderBrush="Transparent"
                                                                    Padding="0" Visibility="Collapsed" Click="RemoveMedia_Click" Tag="3">
                                                                <TextBlock Text="&#xE711;" FontFamily="Segoe MDL2 Assets" FontSize="8" Foreground="White"/>
                                                            </Button>
                                                        </Grid>
                                                    </Border>

                                                    <!-- Slot 5 -->
                                                    <Border x:Name="MediaSlot5" Background="{StaticResource SubPanelBackgroundBrush}"
                                                            BorderBrush="#444444" BorderThickness="2"
                                                            CornerRadius="8" Margin="2" Height="80" Width="80"
                                                            Cursor="Hand" MouseLeftButtonUp="MediaSlot_Click" Tag="4">
                                                        <Grid>
                                                            <Image x:Name="MediaThumbnail5" Stretch="UniformToFill" Visibility="Collapsed"/>
                                                            <StackPanel x:Name="AddMediaPlaceholder5" HorizontalAlignment="Center" VerticalAlignment="Center">
                                                                <TextBlock Text="&#xE710;" FontFamily="Segoe MDL2 Assets" FontSize="20" Foreground="#666666"/>
                                                                <TextBlock Text="{DynamicResource AddMediaText}" FontSize="9" Foreground="#666666" Margin="0,2,0,0"/>
                                                            </StackPanel>
                                                            <Border x:Name="MediaInfoOverlay5" Background="#80000000"
                                                                    VerticalAlignment="Bottom" CornerRadius="0,0,6,6"
                                                                    Visibility="Collapsed">
                                                                <StackPanel Margin="4,2">
                                                                    <TextBlock x:Name="MediaFileName5" Text="media5.mp4" FontSize="8" Foreground="White" TextTrimming="CharacterEllipsis"/>
                                                                    <TextBlock Text="{DynamicResource ActiveStatusText}" FontSize="7" Foreground="#4CAF50"/>
                                                                </StackPanel>
                                                            </Border>
                                                            <Button x:Name="RemoveMediaButton5" Width="16" Height="16"
                                                                    HorizontalAlignment="Right" VerticalAlignment="Top"
                                                                    Margin="2" Background="#F44336" BorderBrush="Transparent"
                                                                    Padding="0" Visibility="Collapsed" Click="RemoveMedia_Click" Tag="4">
                                                                <TextBlock Text="&#xE711;" FontFamily="Segoe MDL2 Assets" FontSize="8" Foreground="White"/>
                                                            </Button>
                                                        </Grid>
                                                    </Border>
                                                </UniformGrid>

                                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,8,0,0">
                                                    <Button x:Name="AddAllMediaButton"
                                                            Background="#4CAF50"
                                                            Foreground="White"
                                                            BorderBrush="Transparent"
                                                            Visibility="Collapsed"
                                                            Padding="8,4"
                                                            Margin="0,0,4,0"
                                                            Click="AddAllMedia_Click">
                                                        <StackPanel Orientation="Horizontal">
                                                            <TextBlock Text="&#xE710;" FontFamily="Segoe MDL2 Assets" FontSize="12" Margin="0,0,4,0"/>
                                                            <TextBlock Text="{DynamicResource AddMultipleButton}" FontSize="10"/>
                                                        </StackPanel>
                                                    </Button>
                                                    <Button x:Name="ClearAllMediaButton"
                                                            Background="#F44336"
                                                            Foreground="White"
                                                            BorderBrush="Transparent"
                                                            Padding="8,4"
                                                            Click="ClearAllMedia_Click">
                                                        <StackPanel Orientation="Horizontal">
                                                            <TextBlock Text="&#xE74D;" FontFamily="Segoe MDL2 Assets" FontSize="12" Margin="0,0,4,0"/>
                                                            <TextBlock Text="{DynamicResource ClearAllButtonText}" FontSize="10"/>
                                                        </StackPanel>
                                                    </Button>
                                                </StackPanel>
                                            </StackPanel>
                                        </Grid>
                                    </Border>
                                </StackPanel>
                            </Border>
                        </Grid>
                    </StackPanel>
                </Border>
            </Grid>
        </ScrollViewer>

        <!-- Loading Overlay -->
        <Border x:Name="LoadingOverlay"
                Grid.Row="0" Grid.RowSpan="2"
                Background="{StaticResource OverlayMaskBrush}"
                CornerRadius="16"
                Visibility="Collapsed">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                <ProgressBar IsIndeterminate="True"
                             Width="100" Height="4"
                             Foreground="{StaticResource AccentBrush}"
                             Background="Transparent" BorderBrush="Transparent"/>
                <TextBlock x:Name="LoadingText"
                           Text="{DynamicResource LoadingDeviceInfoText}"
                           FontSize="14"
                           Foreground="{StaticResource PrimaryTextBrush}"
                           HorizontalAlignment="Center"
                           Margin="0,16,0,0"/>
            </StackPanel>
        </Border>

        <!-- Notification Panel -->
        <Border x:Name="NotificationPanel"
                Grid.Row="0" Grid.RowSpan="2"
                VerticalAlignment="Top"
                HorizontalAlignment="Center"
                Margin="24"
                Background="{StaticResource SubPanelBackgroundBrush}"
                BorderBrush="{StaticResource DividerBrush}"
                BorderThickness="1"
                CornerRadius="8"
                Padding="16,12"
                Visibility="Collapsed"
                Panel.ZIndex="1000">
            <Border.Effect>
                <DropShadowEffect Color="#000000" BlurRadius="20" ShadowDepth="5" Opacity="0.5"/>
            </Border.Effect>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <TextBlock x:Name="NotificationIcon"
                           Grid.Column="0"
                           Text="&#xE7BA;"
                           FontFamily="Segoe MDL2 Assets"
                           FontSize="16"
                           Foreground="#4CAF50"
                           VerticalAlignment="Center"
                           Margin="0,0,12,0"/>
                <TextBlock x:Name="NotificationMessage"
                           Grid.Column="1"
                           Text="{DynamicResource OperationSuccessMessage}"
                           FontSize="14"
                           Foreground="{StaticResource PrimaryTextBrush}"
                           VerticalAlignment="Center"
                           TextWrapping="Wrap"
                           MaxWidth="400"/>
                <Button x:Name="NotificationCloseButton"
                        Grid.Column="2"
                        Click="NotificationCloseButton_Click"
                        Background="Transparent"
                        BorderBrush="Transparent"
                        Padding="4"
                        Cursor="Hand"
                        Margin="8,0,0,0"
                        ToolTip="{DynamicResource CloseTooltip}">
                    <TextBlock Text="&#xE8BB;"
                               FontFamily="Segoe MDL2 Assets"
                               FontSize="12"
                               Foreground="#AAAAAA"/>
                </Button>
            </Grid>
        </Border>

        <!-- Confirmation Dialog -->
        <Border x:Name="ConfirmationDialog"
                Grid.Row="0" Grid.RowSpan="2"
                Background="{StaticResource OverlayMaskBrush}"
                Visibility="Collapsed"
                Panel.ZIndex="999">
            <Border Background="{StaticResource SubPanelBackgroundBrush}"
                    BorderBrush="{StaticResource DividerBrush}"
                    BorderThickness="1"
                    CornerRadius="12"
                    Padding="24"
                    MaxWidth="500"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center">
                <Border.Effect>
                    <DropShadowEffect Color="#000000" BlurRadius="25" ShadowDepth="8" Opacity="0.6"/>
                </Border.Effect>
                <StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,16">
                        <TextBlock x:Name="ConfirmationIcon"
                                   Text="&#xE7BA;"
                                   FontFamily="Segoe MDL2 Assets"
                                   FontSize="20"
                                   Foreground="#FF9800"
                                   Margin="0,0,12,0"/>
                        <TextBlock x:Name="ConfirmationTitle"
                                   Text="{DynamicResource ConfirmActionTitle}"
                                   FontSize="18"
                                   FontWeight="SemiBold"
                                   Foreground="{StaticResource PrimaryTextBrush}"
                                   Margin="0,0,0,4"/>
                    </StackPanel>
                    <TextBlock x:Name="ConfirmationMessage"
                               Text="{DynamicResource ConfirmActionMessage}"
                               FontSize="14"
                               Foreground="{StaticResource SecondaryTextBrush}"
                               TextWrapping="Wrap"
                               Margin="0,0,0,20"/>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="12"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Border Grid.Column="0" Background="#555555" CornerRadius="6">
                            <Button x:Name="ConfirmationCancelButton"
                                    Click="ConfirmationCancelButton_Click"
                                    Background="Transparent"
                                    Foreground="White"
                                    BorderBrush="Transparent"
                                    Padding="12,8"
                                    Cursor="Hand">
                                <TextBlock Text="{DynamicResource CancelButton}" FontSize="14" FontWeight="SemiBold"/>
                            </Button>
                        </Border>
                        <Border Grid.Column="2" x:Name="ConfirmationButtonBorder" Background="{StaticResource AccentBrush}" CornerRadius="6">
                            <Button x:Name="ConfirmationConfirmButton"
                                    Click="ConfirmationConfirmButton_Click"
                                    Background="Transparent"
                                    Foreground="White"
                                    BorderBrush="Transparent"
                                    Padding="12,8"
                                    Cursor="Hand">
                                <TextBlock x:Name="ConfirmationConfirmText"
                                           Text="{DynamicResource ConfirmButton}"
                                           FontSize="14"
                                           FontWeight="SemiBold"/>
                            </Button>
                        </Border>
                    </Grid>
                </StackPanel>
            </Border>
        </Border>
    </Grid>
</Page>