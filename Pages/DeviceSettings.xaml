<Page x:Class="CMDevicesManager.Pages.DeviceSettings"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      xmlns:local="clr-namespace:CMDevicesManager.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="800" d:DesignWidth="1000"
      FontFamily="{DynamicResource AppFontFamily}"
      Title="Device Settings"
      Background="Transparent">

    <Grid Margin="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" 
                Background="#1A1A1A" 
                CornerRadius="12" 
                Padding="24,16" 
                Margin="0,0,0,16">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0"
                           Text="&#xE115;"
                           FontFamily="Segoe MDL2 Assets"
                           FontSize="24"
                           Foreground="#2196F3"
                           VerticalAlignment="Center"
                           Margin="0,0,16,0"/>

                <StackPanel Grid.Column="1" VerticalAlignment="Center">
                    <TextBlock x:Name="DeviceNameText"
                               Text="Device Settings"
                               FontSize="20"
                               FontWeight="Bold"
                               Foreground="White"/>
                    <TextBlock x:Name="DevicePathText"
                               Text="No device selected"
                               FontSize="12"
                               Foreground="#AAFFFFFF"
                               Margin="0,2,0,0"/>
                </StackPanel>

                <Border Grid.Column="2"
                        x:Name="ConnectionStatusBorder"
                        Width="12" Height="12"
                        CornerRadius="6"
                        Background="#4CAF50"
                        VerticalAlignment="Center">
                    <Border.Effect>
                        <DropShadowEffect Color="#4CAF50" BlurRadius="8" ShadowDepth="0" Opacity="0.6"/>
                    </Border.Effect>
                </Border>
            </Grid>
        </Border>

        <!-- Main Content -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*"/>
                    <ColumnDefinition Width="1*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Device Information Panel -->
                <Border Grid.Column="0" Grid.Row="0"
                        Background="#121212" 
                        CornerRadius="16" 
                        Padding="20" 
                        Margin="0,0,12,16">
                    <Border.Effect>
                        <DropShadowEffect Color="#000000" BlurRadius="12" ShadowDepth="3" Opacity="0.3"/>
                    </Border.Effect>
                    
                    <StackPanel>
                        <TextBlock Text="Device Information"
                                   FontSize="16"
                                   FontWeight="SemiBold"
                                   Foreground="#2196F3"
                                   Margin="0,0,0,16"/>

                        <!-- Hardware Version -->
                        <Grid Margin="0,0,0,12">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0"
                                       Text="Hardware Version:"
                                       FontSize="12"
                                       Foreground="#CCCCCC"
                                       Width="140"/>
                            <TextBlock Grid.Column="1"
                                       x:Name="HardwareVersionText"
                                       Text="N/A"
                                       FontSize="12"
                                       FontWeight="SemiBold"
                                       Foreground="White"/>
                        </Grid>

                        <!-- Firmware Version -->
                        <Grid Margin="0,0,0,12">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0"
                                       Text="Firmware Version:"
                                       FontSize="12"
                                       Foreground="#CCCCCC"
                                       Width="140"/>
                            <TextBlock Grid.Column="1"
                                       x:Name="FirmwareVersionText"
                                       Text="N/A"
                                       FontSize="12"
                                       FontWeight="SemiBold"
                                       Foreground="White"/>
                        </Grid>

                        <!-- Serial Number -->
                        <Grid Margin="0,0,0,12">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0"
                                       Text="Serial Number:"
                                       FontSize="12"
                                       Foreground="#CCCCCC"
                                       Width="140"/>
                            <TextBlock Grid.Column="1"
                                       x:Name="SerialNumberText"
                                       Text="N/A"
                                       FontSize="12"
                                       FontWeight="SemiBold"
                                       Foreground="White"/>
                        </Grid>

                        <!-- Manufacturer -->
                        <Grid Margin="0,0,0,12">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0"
                                       Text="Manufacturer:"
                                       FontSize="12"
                                       Foreground="#CCCCCC"
                                       Width="140"/>
                            <TextBlock Grid.Column="1"
                                       x:Name="ManufacturerText"
                                       Text="N/A"
                                       FontSize="12"
                                       FontWeight="SemiBold"
                                       Foreground="White"/>
                        </Grid>

                        <!-- Product Name -->
                        <Grid Margin="0,0,0,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0"
                                       Text="Product:"
                                       FontSize="12"
                                       Foreground="#CCCCCC"
                                       Width="140"/>
                            <TextBlock Grid.Column="1"
                                       x:Name="ProductNameText"
                                       Text="N/A"
                                       FontSize="12"
                                       FontWeight="SemiBold"
                                       Foreground="White"/>
                        </Grid>
                    </StackPanel>
                </Border>

                <!-- Device Status Panel -->
                <Border Grid.Column="1" Grid.Row="0"
                        Background="#121212" 
                        CornerRadius="16" 
                        Padding="20" 
                        Margin="12,0,0,16">
                    <Border.Effect>
                        <DropShadowEffect Color="#000000" BlurRadius="12" ShadowDepth="3" Opacity="0.3"/>
                    </Border.Effect>
                    
                    <StackPanel>
                        <Grid Margin="0,0,0,16">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0"
                                       Text="Device Status"
                                       FontSize="16"
                                       FontWeight="SemiBold"
                                       Foreground="#2196F3"/>
                            <Button Grid.Column="1"
                                    x:Name="RefreshStatusButton"
                                    Click="RefreshStatusButton_Click"
                                    Background="Transparent"
                                    BorderBrush="Transparent"
                                    Padding="8"
                                    Cursor="Hand"
                                    ToolTip="Refresh Status">
                                <TextBlock Text="&#xE72C;"
                                           FontFamily="Segoe MDL2 Assets"
                                           FontSize="14"
                                           Foreground="#2196F3"/>
                            </Button>
                        </Grid>

                        <!-- Brightness -->
                        <Grid Margin="0,0,0,12">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0"
                                       Text="Brightness:"
                                       FontSize="12"
                                       Foreground="#CCCCCC"
                                       Width="120"/>
                            <TextBlock Grid.Column="1"
                                       x:Name="BrightnessText"
                                       Text="N/A"
                                       FontSize="12"
                                       FontWeight="SemiBold"
                                       Foreground="White"/>
                        </Grid>

                        <!-- Rotation -->
                        <Grid Margin="0,0,0,12">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0"
                                       Text="Rotation:"
                                       FontSize="12"
                                       Foreground="#CCCCCC"
                                       Width="120"/>
                            <TextBlock Grid.Column="1"
                                       x:Name="RotationText"
                                       Text="N/A"
                                       FontSize="12"
                                       FontWeight="SemiBold"
                                       Foreground="White"/>
                        </Grid>

                        <!-- OSD State -->
                        <Grid Margin="0,0,0,12">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0"
                                       Text="OSD State:"
                                       FontSize="12"
                                       Foreground="#CCCCCC"
                                       Width="120"/>
                            <TextBlock Grid.Column="1"
                                       x:Name="OsdStateText"
                                       Text="N/A"
                                       FontSize="12"
                                       FontWeight="SemiBold"
                                       Foreground="White"/>
                        </Grid>

                        <!-- Keep Alive Timeout -->
                        <Grid Margin="0,0,0,12">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0"
                                       Text="Keep Alive:"
                                       FontSize="12"
                                       Foreground="#CCCCCC"
                                       Width="120"/>
                            <TextBlock Grid.Column="1"
                                       x:Name="KeepAliveText"
                                       Text="N/A"
                                       FontSize="12"
                                       FontWeight="SemiBold"
                                       Foreground="White"/>
                        </Grid>

                        <!-- Display In Sleep -->
                        <Grid Margin="0,0,0,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0"
                                       Text="Display Sleep:"
                                       FontSize="12"
                                       Foreground="#CCCCCC"
                                       Width="120"/>
                            <TextBlock Grid.Column="1"
                                       x:Name="DisplaySleepText"
                                       Text="N/A"
                                       FontSize="12"
                                       FontWeight="SemiBold"
                                       Foreground="White"/>
                        </Grid>
                    </StackPanel>
                </Border>

                <!-- Device Management Panel -->
                <Border Grid.Column="0" Grid.ColumnSpan="2" Grid.Row="1"
                        Background="#121212" 
                        CornerRadius="16" 
                        Padding="20" 
                        Margin="0,0,0,16">
                    <Border.Effect>
                        <DropShadowEffect Color="#000000" BlurRadius="12" ShadowDepth="3" Opacity="0.3"/>
                    </Border.Effect>
                    
                    <StackPanel>
                        <TextBlock Text="Device Management"
                                   FontSize="16"
                                   FontWeight="SemiBold"
                                   Foreground="#FF9800"
                                   Margin="0,0,0,16"/>

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <!-- Reboot Button -->
                            <Border Grid.Column="0" 
                                    Background="#FF9800" 
                                    CornerRadius="8"
                                    Margin="0,0,8,0">
                                <Button x:Name="RebootButton"
                                        Click="RebootButton_Click"
                                        Background="Transparent"
                                        Foreground="White"
                                        BorderBrush="Transparent"
                                        Padding="12,10"
                                        Cursor="Hand">
                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                        <TextBlock Text="&#xE7E8;"
                                                   FontFamily="Segoe MDL2 Assets"
                                                   FontSize="16"
                                                   Margin="0,0,8,0"/>
                                        <TextBlock Text="Reboot Device"
                                                   FontSize="14"
                                                   FontWeight="SemiBold"/>
                                    </StackPanel>
                                </Button>
                            </Border>

                            <!-- Factory Reset Button -->
                            <Border Grid.Column="1" 
                                    Background="#F44336" 
                                    CornerRadius="8"
                                    Margin="4,0,4,0">
                                <Button x:Name="FactoryResetButton"
                                        Click="FactoryResetButton_Click"
                                        Background="Transparent"
                                        Foreground="White"
                                        BorderBrush="Transparent"
                                        Padding="12,10"
                                        Cursor="Hand">
                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                        <TextBlock Text="&#xE7AD;"
                                                   FontFamily="Segoe MDL2 Assets"
                                                   FontSize="16"
                                                   Margin="0,0,8,0"/>
                                        <TextBlock Text="Factory Reset"
                                                   FontSize="14"
                                                   FontWeight="SemiBold"/>
                                    </StackPanel>
                                </Button>
                            </Border>

                            <!-- Update Firmware Button -->
                            <Border Grid.Column="2" 
                                    Background="#9C27B0" 
                                    CornerRadius="8"
                                    Margin="8,0,0,0">
                                <Button x:Name="UpdateFirmwareButton"
                                        Click="UpdateFirmwareButton_Click"
                                        Background="Transparent"
                                        Foreground="White"
                                        BorderBrush="Transparent"
                                        Padding="12,10"
                                        Cursor="Hand">
                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                        <TextBlock Text="&#xE896;"
                                                   FontFamily="Segoe MDL2 Assets"
                                                   FontSize="16"
                                                   Margin="0,0,8,0"/>
                                        <TextBlock Text="Update Firmware"
                                                   FontSize="14"
                                                   FontWeight="SemiBold"/>
                                    </StackPanel>
                                </Button>
                            </Border>
                        </Grid>
                    </StackPanel>
                </Border>

                <!-- Device Capabilities Panel -->
                <Border Grid.Column="0" Grid.ColumnSpan="2" Grid.Row="2"
                        Background="#121212" 
                        CornerRadius="16" 
                        Padding="20">
                    <Border.Effect>
                        <DropShadowEffect Color="#000000" BlurRadius="12" ShadowDepth="3" Opacity="0.3"/>
                    </Border.Effect>
                    
                    <StackPanel>
                        <TextBlock Text="Device Capabilities"
                                   FontSize="16"
                                   FontWeight="SemiBold"
                                   Foreground="#4CAF50"
                                   Margin="0,0,0,16"/>

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Column="0" Margin="0,0,12,0">
                                <!-- Display Modes -->
                                <TextBlock Text="Display Modes:"
                                           FontSize="14"
                                           FontWeight="SemiBold"
                                           Foreground="#CCCCCC"
                                           Margin="0,0,0,8"/>
                                
                                <TextBlock x:Name="OffModeText"
                                           Text="Off Mode: N/A"
                                           FontSize="12"
                                           Foreground="White"
                                           Margin="8,0,0,4"/>
                                
                                <TextBlock x:Name="SsrModeText"
                                           Text="SSR Mode: N/A"
                                           FontSize="12"
                                           Foreground="White"
                                           Margin="8,0,0,4"/>

                                <!-- Resolution -->
                                <TextBlock Text="Resolution:"
                                           FontSize="14"
                                           FontWeight="SemiBold"
                                           Foreground="#CCCCCC"
                                           Margin="0,12,0,8"/>
                                
                                <TextBlock x:Name="ResolutionText"
                                           Text="N/A"
                                           FontSize="12"
                                           Foreground="White"
                                           Margin="8,0,0,4"/>

                                <!-- Max FPS -->
                                <TextBlock x:Name="MaxFpsText"
                                           Text="Max FPS: N/A"
                                           FontSize="12"
                                           Foreground="White"
                                           Margin="8,0,0,4"/>
                            </StackPanel>

                            <StackPanel Grid.Column="1" Margin="12,0,0,0">
                                <!-- Hardware Features -->
                                <TextBlock Text="Hardware Features:"
                                           FontSize="14"
                                           FontWeight="SemiBold"
                                           Foreground="#CCCCCC"
                                           Margin="0,0,0,8"/>
                                
                                <TextBlock x:Name="HwDecodeText"
                                           Text="Hardware Decode: N/A"
                                           FontSize="12"
                                           Foreground="White"
                                           Margin="8,0,0,4"/>
                                
                                <TextBlock x:Name="OverlayText"
                                           Text="Overlay Support: N/A"
                                           FontSize="12"
                                           Foreground="White"
                                           Margin="8,0,0,4"/>

                                <!-- File Limits -->
                                <TextBlock Text="File Limits:"
                                           FontSize="14"
                                           FontWeight="SemiBold"
                                           Foreground="#CCCCCC"
                                           Margin="0,12,0,8"/>
                                
                                <TextBlock x:Name="MaxFileSizeText"
                                           Text="Max File Size: N/A"
                                           FontSize="12"
                                           Foreground="White"
                                           Margin="8,0,0,4"/>

                                <TextBlock x:Name="MaxFrameCountText"
                                           Text="Max Frame Count: N/A"
                                           FontSize="12"
                                           Foreground="White"
                                           Margin="8,0,0,4"/>
                            </StackPanel>
                        </Grid>
                    </StackPanel>
                </Border>
            </Grid>
        </ScrollViewer>

        <!-- Loading Overlay -->
        <Border x:Name="LoadingOverlay"
                Grid.Row="0" Grid.RowSpan="2"
                Background="#80000000"
                CornerRadius="16"
                Visibility="Collapsed">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                <ProgressBar IsIndeterminate="True"
                             Width="100"
                             Height="4"
                             Foreground="#2196F3"
                             Background="Transparent"
                             BorderBrush="Transparent"/>
                <TextBlock x:Name="LoadingText"
                           Text="Loading device information..."
                           FontSize="14"
                           Foreground="White"
                           HorizontalAlignment="Center"
                           Margin="0,16,0,0"/>
            </StackPanel>
        </Border>
    </Grid>
</Page>