<Page x:Class="CMDevicesManager.Pages.DeviceLive"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      mc:Ignorable="d"
      FontFamily="{DynamicResource AppFontFamily}"
      Title="Device Control" 
      Loaded="Page_Loaded" 
      Unloaded="Page_Unloaded" 
      Background="Transparent">

    <Grid>
        <!-- Status message area -->
        <Border x:Name="StatusBorder"
                Background="#FF2196F3"
                CornerRadius="8"
                Margin="24,12"
                VerticalAlignment="Top"
                HorizontalAlignment="Center"
                Padding="16,8"
                Visibility="Collapsed"
                Panel.ZIndex="100">
            <TextBlock x:Name="StatusText"
                       Foreground="White"
                       FontWeight="SemiBold"
                       Text="Status message"/>
        </Border>

        <!-- Error message area -->
        <Border x:Name="ErrorMessageBorder"
                Background="#44FF4444"
                BorderBrush="#FFFF6666"
                BorderThickness="1"
                CornerRadius="8"
                Margin="24,60,24,0"
                VerticalAlignment="Top"
                Padding="16,8"
                Visibility="Collapsed"
                Panel.ZIndex="99">
            <TextBlock x:Name="ErrorMessageTextBlock"
                       Foreground="White"
                       FontWeight="SemiBold"
                       TextWrapping="Wrap"/>
        </Border>

        <!-- Main content -->
        <ScrollViewer VerticalScrollBarVisibility="Auto" Margin="0,100,0,0">
            <Grid MaxWidth="1200" HorizontalAlignment="Center">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Device Information Section -->
                <Border Grid.Row="0" Background="#1A1A1A" CornerRadius="16" Margin="24,12" Padding="24">
                    <StackPanel>
                        <TextBlock Text="Device Information" 
                                   FontSize="20" 
                                   FontWeight="Bold" 
                                   Foreground="White" 
                                   Margin="0,0,0,16"/>

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Column="0" Margin="0,0,24,0">
                                <TextBlock Text="Product:" Foreground="#CCCCCC" FontSize="14" Margin="0,0,0,4"/>
                                <TextBlock x:Name="ProductNameText" Text="No device selected" 
                                           Foreground="White" FontSize="16" FontWeight="SemiBold" Margin="0,0,0,12"/>

                                <TextBlock Text="Manufacturer:" Foreground="#CCCCCC" FontSize="14" Margin="0,0,0,4"/>
                                <TextBlock x:Name="ManufacturerText" Text="-" 
                                           Foreground="White" FontSize="14" Margin="0,0,0,12"/>
                            </StackPanel>

                            <StackPanel Grid.Column="1">
                                <TextBlock Text="Serial Number:" Foreground="#CCCCCC" FontSize="14" Margin="0,0,0,4"/>
                                <TextBlock x:Name="SerialNumberText" Text="-" 
                                           Foreground="White" FontSize="14" Margin="0,0,0,12"/>

                                <TextBlock Text="Connection Status:" Foreground="#CCCCCC" FontSize="14" Margin="0,0,0,4"/>
                                <StackPanel Orientation="Horizontal">
                                    <Ellipse x:Name="ConnectionStatusIndicator" 
                                             Width="12" Height="12" 
                                             Fill="#4CAF50" 
                                             Margin="0,0,8,0"/>
                                    <TextBlock x:Name="ConnectionStatusText" Text="Connected" 
                                               Foreground="#4CAF50" FontSize="14"/>
                                </StackPanel>
                            </StackPanel>
                        </Grid>
                    </StackPanel>
                </Border>

                <!-- Display Controls Section -->
                <Border Grid.Row="1" Background="#1A1A1A" CornerRadius="16" Margin="24,12" Padding="24">
                    <StackPanel>
                        <TextBlock Text="Display Settings" 
                                   FontSize="20" 
                                   FontWeight="Bold" 
                                   Foreground="White" 
                                   Margin="0,0,0,24"/>

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <!-- Brightness Control -->
                            <StackPanel Grid.Column="0" Margin="0,0,24,0">
                                <TextBlock Text="Brightness Control" 
                                           FontSize="16" 
                                           FontWeight="SemiBold" 
                                           Foreground="White" 
                                           Margin="0,0,0,16"/>

                                <Grid Margin="0,0,0,16">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <Slider x:Name="BrightnessSlider"
                                            Grid.Column="0"
                                            Minimum="0" 
                                            Maximum="100" 
                                            Value="80"
                                            TickFrequency="10"
                                            IsSnapToTickEnabled="True"
                                            ValueChanged="BrightnessSlider_ValueChanged"
                                            Margin="0,0,16,0"/>
                                    <TextBlock x:Name="BrightnessValueText" 
                                               Grid.Column="1"
                                               Text="80%" 
                                               Foreground="White" 
                                               FontSize="14" 
                                               VerticalAlignment="Center" 
                                               MinWidth="40"/>
                                </Grid>

                                <!-- Quick brightness buttons -->
                                <WrapPanel Orientation="Horizontal">
                                    <Button Content="25%" Tag="25" Click="QuickBrightnessButton_Click" 
                                            Style="{DynamicResource QuickActionButtonStyle}" Margin="0,0,8,8"/>
                                    <Button Content="50%" Tag="50" Click="QuickBrightnessButton_Click" 
                                            Style="{DynamicResource QuickActionButtonStyle}" Margin="0,0,8,8"/>
                                    <Button Content="75%" Tag="75" Click="QuickBrightnessButton_Click" 
                                            Style="{DynamicResource QuickActionButtonStyle}" Margin="0,0,8,8"/>
                                    <Button Content="100%" Tag="100" Click="QuickBrightnessButton_Click" 
                                            Style="{DynamicResource QuickActionButtonStyle}" Margin="0,0,8,8"/>
                                </WrapPanel>
                            </StackPanel>

                            <!-- Rotation Control -->
                            <StackPanel Grid.Column="1">
                                <TextBlock Text="Rotation Control" 
                                           FontSize="16" 
                                           FontWeight="SemiBold" 
                                           Foreground="White" 
                                           Margin="0,0,0,16"/>

                                <TextBlock x:Name="CurrentRotationText" 
                                           Text="Current: 0°" 
                                           Foreground="#CCCCCC" 
                                           FontSize="14" 
                                           Margin="0,0,0,12"/>

                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>

                                    <Button x:Name="Rotation0Button" Content="0°" Tag="0" 
                                            Click="RotationButton_Click" 
                                            Style="{DynamicResource RotationButtonStyle}"
                                            Grid.Row="0" Grid.Column="0" Margin="0,0,4,4"/>
                                    <Button x:Name="Rotation90Button" Content="90°" Tag="90" 
                                            Click="RotationButton_Click" 
                                            Style="{DynamicResource RotationButtonStyle}"
                                            Grid.Row="0" Grid.Column="1" Margin="4,0,0,4"/>
                                    <Button x:Name="Rotation180Button" Content="180°" Tag="180" 
                                            Click="RotationButton_Click" 
                                            Style="{DynamicResource RotationButtonStyle}"
                                            Grid.Row="1" Grid.Column="0" Margin="0,4,4,0"/>
                                    <Button x:Name="Rotation270Button" Content="270°" Tag="270" 
                                            Click="RotationButton_Click" 
                                            Style="{DynamicResource RotationButtonStyle}"
                                            Grid.Row="1" Grid.Column="1" Margin="4,4,0,0"/>
                                </Grid>
                            </StackPanel>
                        </Grid>
                    </StackPanel>
                </Border>

                <!-- Streaming Controls Section -->
                <Border Grid.Row="2" Background="#1A1A1A" CornerRadius="16" Margin="24,12" Padding="24">
                    <StackPanel>
                        <TextBlock Text="Streaming Controls" 
                                   FontSize="20" 
                                   FontWeight="Bold" 
                                   Foreground="White" 
                                   Margin="0,0,0,24"/>

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <!-- Real-time Streaming -->
                            <StackPanel Grid.Column="0" Margin="0,0,24,0">
                                <TextBlock Text="Real-time Streaming" 
                                           FontSize="16" 
                                           FontWeight="SemiBold" 
                                           Foreground="White" 
                                           Margin="0,0,0,12"/>

                                <TextBlock Text="Stream images in real-time to the device display" 
                                           Foreground="#CCCCCC" 
                                           FontSize="12" 
                                           TextWrapping="Wrap" 
                                           Margin="0,0,0,16"/>

                                <StackPanel>
                                    <Button x:Name="RealtimeStreamingButton" 
                                            Content="Start Real-time Streaming" 
                                            Click="RealtimeStreamingButton_Click"
                                            Style="{DynamicResource PrimaryActionButtonStyle}" 
                                            Margin="0,0,0,8"/>

                                    <Button x:Name="Mp4StreamingButton" 
                                            Content="Stream MP4 Video" 
                                            Click="Mp4StreamingButton_Click"
                                            Style="{DynamicResource SecondaryActionButtonStyle}" 
                                            Margin="0,0,0,8"/>

                                    <Button x:Name="SelectImagesButton" 
                                            Content="Select Images Folder" 
                                            Click="SelectImagesButton_Click"
                                            Style="{DynamicResource SecondaryActionButtonStyle}"/>
                                </StackPanel>
                            </StackPanel>

                            <!-- Offline Streaming -->
                            <StackPanel Grid.Column="1">
                                <TextBlock Text="Offline Streaming" 
                                           FontSize="16" 
                                           FontWeight="SemiBold" 
                                           Foreground="White" 
                                           Margin="0,0,0,12"/>

                                <TextBlock Text="Upload files for offline playback when device enters suspend mode" 
                                           Foreground="#CCCCCC" 
                                           FontSize="12" 
                                           TextWrapping="Wrap" 
                                           Margin="0,0,0,16"/>

                                <StackPanel>
                                    <Button x:Name="OfflineStreamingButton" 
                                            Content="Setup Offline Streaming" 
                                            Click="OfflineStreamingButton_Click"
                                            Style="{DynamicResource PrimaryActionButtonStyle}" 
                                            Margin="0,0,0,8"/>

                                    <Button x:Name="SelectOfflineFilesButton" 
                                            Content="Select Files for Offline" 
                                            Click="SelectOfflineFilesButton_Click"
                                            Style="{DynamicResource SecondaryActionButtonStyle}" 
                                            Margin="0,0,0,8"/>

                                    <Button x:Name="ClearOfflineFilesButton" 
                                            Content="Clear Offline Files" 
                                            Click="ClearOfflineFilesButton_Click"
                                            Style="{DynamicResource SecondaryActionButtonStyle}"/>
                                </StackPanel>
                            </StackPanel>
                        </Grid>
                    </StackPanel>
                </Border>

                <!-- Streaming Preview Section -->
                <Border Grid.Row="3" Background="#1A1A1A" CornerRadius="16" Margin="24,12" Padding="24">
                    <StackPanel>
                        <TextBlock Text="Streaming Preview" 
                                   FontSize="20" 
                                   FontWeight="Bold" 
                                   Foreground="White" 
                                   Margin="0,0,0,24"/>

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <!-- Image Preview -->
                            <Border Grid.Column="0" 
                                    Width="320" 
                                    Height="240" 
                                    Background="#2A2A2A" 
                                    CornerRadius="8" 
                                    ClipToBounds="True"
                                    Margin="0,0,24,0">
                                <Grid>
                                    <!-- Placeholder content -->
                                    <StackPanel x:Name="PlaceholderContent" 
                                                HorizontalAlignment="Center" 
                                                VerticalAlignment="Center">
                                        <TextBlock Text="&#xE7F4;" 
                                                   FontFamily="Segoe MDL2 Assets" 
                                                   FontSize="48" 
                                                   Foreground="#666666" 
                                                   HorizontalAlignment="Center" 
                                                   Margin="0,0,0,8"/>
                                        <TextBlock Text="No preview available" 
                                                   Foreground="#888888" 
                                                   FontSize="14" 
                                                   HorizontalAlignment="Center"/>
                                    </StackPanel>

                                    <!-- Streaming image viewer -->
                                    <Image x:Name="StreamingImageViewer" 
                                           Stretch="Uniform" 
                                           Visibility="Collapsed"/>

                                    <!-- Loading indicator -->
                                    <Grid x:Name="LoadingIndicator" 
                                          Background="#44000000" 
                                          Visibility="Collapsed">
                                        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                                            <TextBlock Text="?" 
                                                       Foreground="White" 
                                                       FontSize="24" 
                                                       HorizontalAlignment="Center">
                                                <TextBlock.RenderTransform>
                                                    <RotateTransform x:Name="LoadingRotation"/>
                                                </TextBlock.RenderTransform>
                                                <TextBlock.Triggers>
                                                    <EventTrigger RoutedEvent="Loaded">
                                                        <BeginStoryboard>
                                                            <Storyboard RepeatBehavior="Forever">
                                                                <DoubleAnimation Storyboard.TargetName="LoadingRotation"
                                                                                 Storyboard.TargetProperty="Angle"
                                                                                 From="0" To="360" Duration="0:0:1"/>
                                                            </Storyboard>
                                                        </BeginStoryboard>
                                                    </EventTrigger>
                                                </TextBlock.Triggers>
                                            </TextBlock>
                                            <TextBlock Text="Streaming..." 
                                                       Foreground="White" 
                                                       FontSize="14" 
                                                       HorizontalAlignment="Center" 
                                                       Margin="0,8,0,0"/>
                                        </StackPanel>
                                    </Grid>

                                    <!-- Streaming status indicator -->
                                    <Border x:Name="StreamingStatusIndicator" 
                                            Background="#FF4CAF50" 
                                            CornerRadius="4" 
                                            Padding="8,4" 
                                            HorizontalAlignment="Right" 
                                            VerticalAlignment="Top" 
                                            Margin="8" 
                                            Visibility="Collapsed">
                                        <StackPanel Orientation="Horizontal">
                                            <Ellipse Width="8" Height="8" Fill="White" Margin="0,0,4,0"/>
                                            <TextBlock Text="LIVE" Foreground="White" FontSize="10" FontWeight="Bold"/>
                                        </StackPanel>
                                    </Border>
                                </Grid>
                            </Border>

                            <!-- Streaming Information -->
                            <StackPanel Grid.Column="1" VerticalAlignment="Top">
                                <TextBlock Text="Streaming Information" 
                                           FontSize="16" 
                                           FontWeight="SemiBold" 
                                           Foreground="White" 
                                           Margin="0,0,0,16"/>

                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>

                                    <TextBlock Grid.Row="0" Grid.Column="0" Text="Active Devices:" 
                                               Foreground="#CCCCCC" FontSize="14" Margin="0,0,12,8"/>
                                    <TextBlock x:Name="ActiveDeviceCount" Grid.Row="0" Grid.Column="1" Text="0" 
                                               Foreground="White" FontSize="14" Margin="0,0,0,8"/>

                                    <TextBlock Grid.Row="1" Grid.Column="0" Text="Current Image:" 
                                               Foreground="#CCCCCC" FontSize="14" Margin="0,0,12,8"/>
                                    <TextBlock x:Name="CurrentImageName" Grid.Row="1" Grid.Column="1" Text="No image loaded" 
                                               Foreground="White" FontSize="14" Margin="0,0,0,8"/>

                                    <TextBlock Grid.Row="2" Grid.Column="0" Text="Dimensions:" 
                                               Foreground="#CCCCCC" FontSize="14" Margin="0,0,12,8"/>
                                    <TextBlock x:Name="ImageDimensions" Grid.Row="2" Grid.Column="1" Text="" 
                                               Foreground="White" FontSize="14" Margin="0,0,0,8"/>

                                    <TextBlock Grid.Row="3" Grid.Column="0" Text="Images Streamed:" 
                                               Foreground="#CCCCCC" FontSize="14" Margin="0,0,12,8"/>
                                    <TextBlock x:Name="ImageCounter" Grid.Row="3" Grid.Column="1" Text="0" 
                                               Foreground="White" FontSize="14" Margin="0,0,0,8"/>

                                    <TextBlock Grid.Row="4" Grid.Column="0" Text="Images Folder:" 
                                               Foreground="#CCCCCC" FontSize="14" Margin="0,0,12,8"/>
                                    <TextBlock x:Name="ImagesFolderPath" Grid.Row="4" Grid.Column="1" Text="Not selected" 
                                               Foreground="White" FontSize="14" TextWrapping="Wrap"/>
                                </Grid>
                            </StackPanel>
                        </Grid>
                    </StackPanel>
                </Border>
            </Grid>
        </ScrollViewer>
    </Grid>

    <!-- Define button styles -->
    <Page.Resources>
        <Style x:Key="PrimaryActionButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#FF2196F3"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="16,8"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="6" 
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#FF1976D2"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#FF1565C0"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Background" Value="#FF616161"/>
                                <Setter Property="Foreground" Value="#FFBDBDBD"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="SecondaryActionButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#FF424242"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#FF616161"/>
            <Setter Property="Padding" Value="16,8"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="6" 
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#FF525252"/>
                                <Setter Property="BorderBrush" Value="#FF757575"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#FF616161"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Background" Value="#FF2A2A2A"/>
                                <Setter Property="Foreground" Value="#FF616161"/>
                                <Setter Property="BorderBrush" Value="#FF424242"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="QuickActionButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#FF404040"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="12,6"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="MinWidth" Value="50"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="4" 
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#FF525252"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#FF2196F3"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="RotationButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#FF404040"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="6" 
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#FF525252"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#FF2196F3"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Page.Resources>
</Page>