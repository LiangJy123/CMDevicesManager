<Page x:Class="CMDevicesManager.Pages.SettingsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:CMDevicesManager.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      FontFamily="{DynamicResource AppFontFamily}"
      Title="{DynamicResource SettingsPageTitle}">

    <Grid Background="Transparent">
        <StackPanel Margin="50" VerticalAlignment="Top">
            <!-- Settings Title -->
            <TextBlock Text="{DynamicResource SettingsPageTitle}" 
                      FontSize="36" 
                      FontWeight="Bold" 
                      Foreground="White" 
                      Margin="0,0,0,30"/>

            <!-- Language Settings Section -->
            <Border Background="#FF2A2A2A" 
                   CornerRadius="8" 
                   Padding="20" 
                   Margin="0,0,0,20">
                <StackPanel>
                    <TextBlock Text="{DynamicResource LanguageLabel}" 
                              FontSize="20" 
                              FontWeight="SemiBold" 
                              Foreground="White" 
                              Margin="0,0,0,15"/>
                    
                    <WrapPanel ItemHeight="32" ItemWidth="220">
                        <RadioButton x:Name="ChineseRadio" 
                                    Content="{DynamicResource ChineseLanguage}"
                                    Foreground="White"
                                    FontSize="16"
                                    Margin="0,0,30,0"
                                    Checked="LanguageRadio_Checked"
                                    Tag="zh-cn"/>
                        <RadioButton x:Name="TraditionalChineseRadio" 
                                    Content="{DynamicResource TraditionalChineseLanguage}"
                                    Foreground="White"
                                    FontSize="16"
                                    Margin="0,0,30,0"
                                    Checked="LanguageRadio_Checked"
                                    Tag="zh-tw"/>
                        <RadioButton x:Name="EnglishRadio" 
                                    Content="{DynamicResource EnglishLanguage}"
                                    Foreground="White"
                                    FontSize="16"
                                    Margin="0,0,30,0"
                                    Checked="LanguageRadio_Checked"
                                    Tag="en-us"/>
                    </WrapPanel>
                </StackPanel>
            </Border>

            <!-- Font Settings Section -->
            <Border Background="#FF2A2A2A" 
                   CornerRadius="8" 
                   Padding="20" 
                   Margin="0,0,0,20">
                <StackPanel>
                    <TextBlock Text="{DynamicResource FontLabel}" 
                              FontSize="20" 
                              FontWeight="SemiBold" 
                              Foreground="White" 
                              Margin="0,0,0,15"/>
                    
                    <WrapPanel ItemHeight="32" ItemWidth="220">
                        <RadioButton x:Name="DefaultFontRadio" 
                                    Content="{DynamicResource DefaultFont}"
                                    Foreground="White"
                                    FontSize="16"
                                    Margin="0,0,30,0"
                                    Checked="FontRadio_Checked"
                                    Tag="default"/>

                        <!-- Sans -->
                        <RadioButton x:Name="SegoeUIVariableFontRadio" 
                                    Content="{DynamicResource SegoeUIVariableFont}"
                                    Foreground="White"
                                    FontSize="16"
                                    Margin="0,0,30,0"
                                    Checked="FontRadio_Checked"
                                    Tag="segoe-ui-variable"/>
                        <RadioButton x:Name="NotoSansFontRadio" 
                                    Content="{DynamicResource NotoSansFont}"
                                    Foreground="White"
                                    FontSize="16"
                                    Margin="0,0,30,0"
                                    Checked="FontRadio_Checked"
                                    Tag="noto-sans"/>
                        <RadioButton x:Name="NotoSansCJKFontRadio" 
                                    Content="{DynamicResource NotoSansCJKFont}"
                                    Foreground="White"
                                    FontSize="16"
                                    Margin="0,0,30,0"
                                    Checked="FontRadio_Checked"
                                    Tag="noto-sans-cjk"/>
                        <RadioButton x:Name="InterFontRadio" 
                                    Content="{DynamicResource InterFont}"
                                    Foreground="White"
                                    FontSize="16"
                                    Margin="0,0,30,0"
                                    Checked="FontRadio_Checked"
                                    Tag="inter"/>
                        <RadioButton x:Name="RobotoFontRadio" 
                                    Content="{DynamicResource RobotoFont}"
                                    Foreground="White"
                                    FontSize="16"
                                    Margin="0,0,30,0"
                                    Checked="FontRadio_Checked"
                                    Tag="roboto"/>
                        <RadioButton x:Name="RubikFontRadio" 
                                    Content="{DynamicResource RubikFont}"
                                    Foreground="White"
                                    FontSize="16"
                                    Margin="0,0,30,0"
                                    Checked="FontRadio_Checked"
                                    Tag="rubik"/>

                        <!-- Serif -->
                        <RadioButton x:Name="NotoSerifFontRadio" 
                                    Content="{DynamicResource NotoSerifFont}"
                                    Foreground="White"
                                    FontSize="16"
                                    Margin="0,0,30,0"
                                    Checked="FontRadio_Checked"
                                    Tag="noto-serif"/>
                        <RadioButton x:Name="NotoSerifCJKFontRadio" 
                                    Content="{DynamicResource NotoSerifCJKFont}"
                                    Foreground="White"
                                    FontSize="16"
                                    Margin="0,0,30,0"
                                    Checked="FontRadio_Checked"
                                    Tag="noto-serif-cjk"/>

                        <!-- Mono -->
                        <RadioButton x:Name="JetBrainsMonoFontRadio" 
                                    Content="{DynamicResource JetBrainsMonoFont}"
                                    Foreground="White"
                                    FontSize="16"
                                    Margin="0,0,30,0"
                                    Checked="FontRadio_Checked"
                                    Tag="jetbrains-mono"/>
                        <RadioButton x:Name="CascadiaMonoFontRadio" 
                                    Content="{DynamicResource CascadiaMonoFont}"
                                    Foreground="White"
                                    FontSize="16"
                                    Margin="0,0,30,0"
                                    Checked="FontRadio_Checked"
                                    Tag="cascadia-mono"/>
                    </WrapPanel>
                </StackPanel>
            </Border>
        </StackPanel>
    </Grid>
</Page>
