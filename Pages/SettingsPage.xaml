<Page x:Class="CMDevicesManager.Pages.SettingsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:CMDevicesManager.Pages"
      xmlns:controls="clr-namespace:MicaWPF.Controls;assembly=MicaWPF"
      mc:Ignorable="d" 
     
      FontFamily="{DynamicResource AppFontFamily}"
      Title="{DynamicResource SettingsPageTitle}">

    <Page.Resources>
        <!-- ✅ 全新配色方案 - 深蓝紫渐变 + 青色强调 -->
        <LinearGradientBrush x:Key="CardBg" StartPoint="0,0" EndPoint="1,1" Opacity="0.75">
            <GradientStop Color="#1A1F3A" Offset="0.0"/>
            <GradientStop Color="#2D1B3D" Offset="1.0"/>
        </LinearGradientBrush>
        
        <SolidColorBrush x:Key="CardBorder" Color="#5B7FFF" Opacity="0.35"/>
        <SolidColorBrush x:Key="TitleBrush" Color="#FFFFFF"/>
        <SolidColorBrush x:Key="SubtitleBrush" Color="#B8C5FF"/>
        
        <!-- Shadow effect for cards -->
        <DropShadowEffect x:Key="CardShadow" 
                          Color="#6B4FFF" 
                          Direction="270" 
                          ShadowDepth="4" 
                          Opacity="0.3" 
                          BlurRadius="16"/>

        <!-- Lighter shadow for inner elements -->
        <DropShadowEffect x:Key="LightShadow" 
                          Color="#5B7FFF" 
                          Direction="270" 
                          ShadowDepth="2" 
                          Opacity="0.25" 
                          BlurRadius="10"/>

        <!-- Title text shadow -->
        <DropShadowEffect x:Key="TitleShadow" 
                          Color="#6B4FFF" 
                          Direction="270" 
                          ShadowDepth="2" 
                          Opacity="0.4" 
                          BlurRadius="6"/>

        <!-- RadioButton 样式 -->
        <Style x:Key="SettingsRadioButtonStyle" TargetType="RadioButton">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="RadioButton">
                        <Grid Background="Transparent">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            
                            <!-- Radio Circle -->
                            <Border x:Name="RadioOuter"
                                    Width="20" Height="20"
                                    CornerRadius="10"
                                    BorderThickness="2"
                                    BorderBrush="#5B7FFF"
                                    Background="Transparent"
                                    Margin="0,0,10,0">
                                <Border x:Name="RadioInner"
                                        Width="10" Height="10"
                                        CornerRadius="5"
                                        Background="#00D9FF"
                                        Opacity="0"
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center">
                                    <Border.Effect>
                                        <DropShadowEffect Color="#00D9FF" 
                                                          ShadowDepth="0" 
                                                          BlurRadius="8" 
                                                          Opacity="0.6"/>
                                    </Border.Effect>
                                </Border>
                            </Border>
                            
                            <ContentPresenter Grid.Column="1"
                                              VerticalAlignment="Center"
                                              RecognizesAccessKey="True"/>
                        </Grid>
                        
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="RadioInner" Property="Opacity" Value="1"/>
                                <Setter TargetName="RadioOuter" Property="BorderBrush" Value="#00D9FF"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="RadioOuter" Property="BorderBrush" Value="#7B8FFF"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Page.Resources>

    <Grid Background="Transparent">
        <StackPanel Margin="50" VerticalAlignment="Top">
            <!-- Settings Title -->
            <TextBlock Text="{DynamicResource SettingsPageTitle}" 
                      FontSize="36" 
                      FontWeight="Bold" 
                      Foreground="{StaticResource TitleBrush}" 
                      Margin="0,0,0,30"
                      Effect="{StaticResource TitleShadow}"/>

            <!-- Language Settings Section -->
            <Border Background="{StaticResource CardBg}" 
                   BorderBrush="{StaticResource CardBorder}"
                   BorderThickness="1.5"
                   CornerRadius="16" 
                   Padding="24" 
                   Margin="0,0,0,20"
                   Effect="{StaticResource CardShadow}">
                <StackPanel>
                    <TextBlock Text="{DynamicResource LanguageLabel}" 
                              FontSize="20" 
                              FontWeight="SemiBold" 
                              Foreground="{StaticResource TitleBrush}" 
                              Margin="0,0,0,15"/>
                    
                    <StackPanel Orientation="Horizontal">
                        <RadioButton x:Name="ChineseRadio" 
                                    Content="{DynamicResource ChineseLanguage}"
                                    Style="{StaticResource SettingsRadioButtonStyle}"
                                    Margin="0,0,30,0"
                                    Checked="LanguageRadio_Checked"
                                    Tag="zh-cn"/>
                        <RadioButton x:Name="TraditionalChineseRadio" 
                                    Content="{DynamicResource TraditionalChineseLanguage}"
                                    Style="{StaticResource SettingsRadioButtonStyle}"
                                    Margin="0,0,30,0"
                                    Checked="LanguageRadio_Checked"
                                    Tag="zh-tw"/>
                        <RadioButton x:Name="EnglishRadio" 
                                    Content="{DynamicResource EnglishLanguage}"
                                    Style="{StaticResource SettingsRadioButtonStyle}"
                                    Checked="LanguageRadio_Checked"
                                    Tag="en-us"/>
                    </StackPanel>
                </StackPanel>
            </Border>

            <!-- Font Settings Section -->
            <Border Background="{StaticResource CardBg}" 
                    BorderBrush="{StaticResource CardBorder}"
                    BorderThickness="1.5"
                    Visibility="Collapsed"
                    CornerRadius="16" 
                    Padding="24" 
                    Margin="0,0,0,20"
                    Effect="{StaticResource CardShadow}">
                <StackPanel>
                    <TextBlock Text="{DynamicResource FontLabel}" 
                              FontSize="20" 
                              FontWeight="SemiBold" 
                              Foreground="{StaticResource TitleBrush}" 
                              Margin="0,0,0,15"/>
                    
                    <StackPanel Orientation="Horizontal">
                        <RadioButton x:Name="DefaultFontRadio" 
                                    Content="{DynamicResource DefaultFont}"
                                    Style="{StaticResource SettingsRadioButtonStyle}"
                                    Margin="0,0,30,0"
                                    Checked="FontRadio_Checked"
                                    Tag="default"/>
                        <RadioButton x:Name="NotoSansFontRadio" 
                                    Content="{DynamicResource NotoSansFont}"
                                    Style="{StaticResource SettingsRadioButtonStyle}"
                                    Margin="0,0,30,0"
                                    Checked="FontRadio_Checked"
                                    Tag="noto-sans"/>
                        <RadioButton x:Name="NotoSansCJKFontRadio" 
                                    Content="{DynamicResource NotoSansCJKFont}"
                                    Style="{StaticResource SettingsRadioButtonStyle}"
                                    Margin="0,0,30,0"
                                    Checked="FontRadio_Checked"
                                    Tag="noto-sans-cjk"/>
                        <RadioButton x:Name="RubikFontRadio" 
                                    Content="{DynamicResource RubikFont}"
                                    Style="{StaticResource SettingsRadioButtonStyle}"
                                    Checked="FontRadio_Checked"
                                    Tag="rubik"/>
                    </StackPanel>
                </StackPanel>
            </Border>

            <!-- Update Section -->
            <Border Background="{StaticResource CardBg}"
                    BorderBrush="{StaticResource CardBorder}"
                    BorderThickness="1.5"
                    CornerRadius="16"
                    Padding="24"
                    Margin="0,0,0,20"
                    Effect="{StaticResource CardShadow}">
                <StackPanel>
                    <TextBlock Text="{DynamicResource UpdateLabel}"
                               FontSize="20"
                               FontWeight="SemiBold"
                               Foreground="{StaticResource TitleBrush}"
                               Margin="0,0,0,15"/>
                    <controls:Button x:Name="UpdateButton"
                            Content="{DynamicResource CheckUpdate}"
                            Width="180"
                            Height="36"
                            Click="UpdateButton_Click">
                        <controls:Button.Effect>
                            <DropShadowEffect Color="#5B7FFF" 
                                              Direction="270" 
                                              ShadowDepth="2" 
                                              Opacity="0.4" 
                                              BlurRadius="10"/>
                        </controls:Button.Effect>
                    </controls:Button>
                </StackPanel>
            </Border>

        </StackPanel>
    </Grid>
</Page>
