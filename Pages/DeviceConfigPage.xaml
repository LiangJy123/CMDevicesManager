<Page x:Class="CMDevicesManager.Pages.DeviceConfigPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
      xmlns:converters="clr-namespace:CMDevicesManager.Converters"
      FontFamily="{DynamicResource AppFontFamily}"
      Background="Transparent"
      Title="Device Configuration">
    <Page.Resources>
        <ResourceDictionary>
            <BooleanToVisibilityConverter x:Key="BoolToVis"/>
            <converters:InverseBooleanToVisibilityConverter x:Key="InverseBoolToVis"/>

            <!-- Colors -->
            <SolidColorBrush x:Key="CardBg" Color="#232834"/>
            <SolidColorBrush x:Key="CardBgAlt" Color="#1B202B"/>
            <SolidColorBrush x:Key="CardBorder" Color="#2E3747"/>
            <SolidColorBrush x:Key="TitleBrush" Color="#FFFFFF"/>
            <SolidColorBrush x:Key="SubtitleBrush" Color="#B8C0CC"/>
            <SolidColorBrush x:Key="ButtonBg" Color="#3A7E00"/>
            <SolidColorBrush x:Key="ButtonHoverBg" Color="#4A9E00"/>

            <!-- Shadow effects -->
            <DropShadowEffect x:Key="CardShadow" 
                              Color="Black" 
                              Direction="270" 
                              ShadowDepth="8" 
                              Opacity="0.4" 
                              BlurRadius="20"/>

            <DropShadowEffect x:Key="ButtonShadow" 
                              Color="Black" 
                              Direction="270" 
                              ShadowDepth="2" 
                              Opacity="0.3" 
                              BlurRadius="4"/>

            <!-- Card style -->
            <Style x:Key="CardBorderStyle" TargetType="Border">
                <Setter Property="CornerRadius" Value="15"/>
                <Setter Property="Background" Value="{StaticResource CardBg}"/>
                <Setter Property="BorderBrush" Value="{StaticResource CardBorder}"/>
                <Setter Property="BorderThickness" Value="1"/>
                <Setter Property="Padding" Value="20"/>
                <Setter Property="SnapsToDevicePixels" Value="True"/>
                <Setter Property="Effect" Value="{StaticResource CardShadow}"/>
            </Style>

            <!-- Button style -->
            <Style x:Key="ActionButtonStyle" TargetType="Button">
                <Setter Property="Background" Value="{StaticResource ButtonBg}"/>
                <Setter Property="Foreground" Value="White"/>
                <Setter Property="BorderThickness" Value="0"/>
                <Setter Property="Padding" Value="12,6"/>
                <Setter Property="Margin" Value="0,0,0,8"/>
                <Setter Property="FontSize" Value="14"/>
                <Setter Property="FontWeight" Value="Medium"/>
                <Setter Property="Cursor" Value="Hand"/>
                <Setter Property="Effect" Value="{StaticResource ButtonShadow}"/>
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="Button">
                            <Border x:Name="border" 
                                    Background="{TemplateBinding Background}"
                                    BorderBrush="{TemplateBinding BorderBrush}"
                                    BorderThickness="{TemplateBinding BorderThickness}"
                                    CornerRadius="4"
                                    Padding="{TemplateBinding Padding}">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter TargetName="border" Property="Background" Value="{StaticResource ButtonHoverBg}"/>
                                </Trigger>
                                <Trigger Property="IsPressed" Value="True">
                                    <Setter TargetName="border" Property="Background" Value="#2A6E00"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>

            <!-- Small button -->
            <Style x:Key="SmallButtonStyle" TargetType="Button">
                <Setter Property="Background" Value="Transparent"/>
                <Setter Property="Foreground" Value="{StaticResource TitleBrush}"/>
                <Setter Property="BorderBrush" Value="{StaticResource CardBorder}"/>
                <Setter Property="BorderThickness" Value="1"/>
                <Setter Property="Padding" Value="8,4"/>
                <Setter Property="FontSize" Value="12"/>
                <Setter Property="Cursor" Value="Hand"/>
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="Button">
                            <Border x:Name="border" 
                                    Background="{TemplateBinding Background}"
                                    BorderBrush="{TemplateBinding BorderBrush}"
                                    BorderThickness="{TemplateBinding BorderThickness}"
                                    CornerRadius="4"
                                    Padding="{TemplateBinding Padding}">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter TargetName="border" Property="Background" Value="#3A414F"/>
                                </Trigger>
                                <Trigger Property="IsPressed" Value="True">
                                    <Setter TargetName="border" Property="Background" Value="#2A313F"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>

            <!-- TextBox -->
            <Style x:Key="DarkTextBoxStyle" TargetType="TextBox">
                <Setter Property="Background" Value="#1B202B"/>
                <Setter Property="Foreground" Value="{StaticResource TitleBrush}"/>
                <Setter Property="BorderBrush" Value="{StaticResource CardBorder}"/>
                <Setter Property="BorderThickness" Value="1"/>
                <Setter Property="Padding" Value="8,4"/>
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="TextBox">
                            <Border Background="{TemplateBinding Background}"
                                    BorderBrush="{TemplateBinding BorderBrush}"
                                    BorderThickness="{TemplateBinding BorderThickness}"
                                    CornerRadius="4">
                                <ScrollViewer x:Name="PART_ContentHost" Padding="{TemplateBinding Padding}"/>
                            </Border>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>

            <!-- ComboBox -->
            <Style x:Key="DarkComboBoxStyle" TargetType="ComboBox">
                <Setter Property="Foreground" Value="{StaticResource TitleBrush}"/>
                <Setter Property="Background" Value="#1B202B"/>
                <Setter Property="BorderBrush" Value="{StaticResource CardBorder}"/>
                <Setter Property="BorderThickness" Value="1"/>
                <Setter Property="Padding" Value="4,2"/>
                <Setter Property="ScrollViewer.CanContentScroll" Value="True"/>
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="ComboBox">
                            <Grid>
                                <Border x:Name="Border"
                                        CornerRadius="4"
                                        Background="{TemplateBinding Background}"
                                        BorderBrush="{TemplateBinding BorderBrush}"
                                        BorderThickness="{TemplateBinding BorderThickness}">
                                    <DockPanel>
                                        <ToggleButton x:Name="DropDownToggle"
                                                      DockPanel.Dock="Right"
                                                      Focusable="False"
                                                      IsChecked="{Binding IsDropDownOpen, RelativeSource={RelativeSource TemplatedParent}, Mode=TwoWay}"
                                                      ClickMode="Press"
                                                      Background="Transparent"
                                                      BorderThickness="0"
                                                      Padding="4">
                                            <Path Data="M 0 0 L 4 4 L 8 0 Z"
                                                  Fill="{StaticResource SubtitleBrush}"
                                                  Stretch="Uniform"
                                                  Width="10" Height="6"/>
                                        </ToggleButton>
                                        <ContentPresenter Margin="4,0,4,0"
                                                          VerticalAlignment="Center"
                                                          HorizontalAlignment="Left"/>
                                    </DockPanel>
                                </Border>
                                <Popup x:Name="Popup"
                                       Placement="Bottom"
                                       IsOpen="{TemplateBinding IsDropDownOpen}"
                                       AllowsTransparency="True"
                                       Focusable="False"
                                       PopupAnimation="Slide">
                                    <Border Background="#242A36"
                                            BorderBrush="{StaticResource CardBorder}"
                                            BorderThickness="1"
                                            CornerRadius="4"
                                            Padding="2"
                                            SnapsToDevicePixels="True">
                                        <ScrollViewer Style="{x:Null}" BorderThickness="0">
                                            <ItemsPresenter/>
                                        </ScrollViewer>
                                    </Border>
                                </Popup>
                            </Grid>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter TargetName="Border" Property="BorderBrush" Value="#4C5A6B"/>
                                </Trigger>
                                <Trigger Property="IsEnabled" Value="False">
                                    <Setter Property="Opacity" Value="0.5"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>

            <!-- Slider -->
            <Style x:Key="DarkSliderStyle" TargetType="Slider">
                <Setter Property="Foreground" Value="{StaticResource ButtonBg}"/>
                <Setter Property="Background" Value="{StaticResource CardBorder}"/>
            </Style>
        </ResourceDictionary>
    </Page.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Top toolbar -->
        <Grid Grid.Row="0" Margin="16">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <Button Grid.Column="0" Click="Back_Click" Margin="0,0,8,0" Style="{StaticResource SmallButtonStyle}">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="&#xE72B;" FontFamily="Segoe MDL2 Assets" Margin="0,0,6,0"/>
                    <TextBlock Text="Back"/>
                </StackPanel>
            </Button>

            <TextBlock Grid.Column="1" Text="屏幕自定义编辑" FontSize="20" FontWeight="SemiBold"
                       Foreground="{StaticResource TitleBrush}" HorizontalAlignment="Center" VerticalAlignment="Center"/>

            <StackPanel Grid.Column="2" Orientation="Horizontal">
                <TextBlock Text="Size:" VerticalAlignment="Center" Margin="0,0,6,0" Foreground="{StaticResource TitleBrush}"/>
                <TextBox Text="{Binding CanvasSize, UpdateSourceTrigger=PropertyChanged}" Width="64"
                         Style="{StaticResource DarkTextBoxStyle}"/>
            </StackPanel>
        </Grid>

        <!-- Main layout -->
        <Grid Grid.Row="1" Margin="16,0,16,16">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="220"/>
                <ColumnDefinition Width="16"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="16"/>
                <ColumnDefinition Width="340"/>
            </Grid.ColumnDefinitions>

            <!-- Left tools -->
            <Border Grid.Column="0" Style="{StaticResource CardBorderStyle}">
                <StackPanel>
                    <TextBlock Text="Common" FontWeight="SemiBold" Margin="0,0,0,8" Foreground="{StaticResource TitleBrush}" FontSize="16"/>
                    <Button Style="{StaticResource ActionButtonStyle}" Click="AddText_Click">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="&#xE8D2;" FontFamily="Segoe MDL2 Assets" Margin="0,0,6,0"/>
                            <TextBlock Text="Add Text"/>
                        </StackPanel>
                    </Button>
                    <Button Style="{StaticResource ActionButtonStyle}" Click="AddImage_Click">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="&#xE8B9;" FontFamily="Segoe MDL2 Assets" Margin="0,0,6,0"/>
                            <TextBlock Text="Add Image"/>
                        </StackPanel>
                    </Button>
                    <Button Style="{StaticResource ActionButtonStyle}" Click="AddClock_Click">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="&#xE121;" FontFamily="Segoe MDL2 Assets" Margin="0,0,6,0"/>
                            <TextBlock Text="Add Date"/>
                        </StackPanel>
                    </Button>
                    <Button Style="{StaticResource ActionButtonStyle}" Click="AddMp4_Click">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="&#xE714;" FontFamily="Segoe MDL2 Assets" Margin="0,0,6,0"/>
                            <TextBlock Text="Add MP4"/>
                        </StackPanel>
                    </Button>

                    <Rectangle Height="1" Fill="{StaticResource CardBorder}" Margin="0,12,0,12"/>

                    <TextBlock Text="System Info" FontWeight="SemiBold" Margin="0,0,0,8" Foreground="{StaticResource TitleBrush}" FontSize="16"/>
                    <ItemsControl ItemsSource="{Binding SystemInfoItems}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Button Content="{Binding DisplayName}" Style="{StaticResource ActionButtonStyle}"
                                        Click="AddSystemInfoButton_Click" Tag="{Binding Kind}"/>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>

                    <Rectangle Height="1" Fill="{StaticResource CardBorder}" Margin="0,12,0,12"/>

                    <TextBlock Text="Operator" FontWeight="SemiBold" Margin="0,0,0,8" Foreground="{StaticResource TitleBrush}" FontSize="16"/>
                    <Button Style="{StaticResource ActionButtonStyle}" Background="#CC4444" Click="ClearCanvas_Click">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="&#xE74D;" FontFamily="Segoe MDL2 Assets" Margin="0,0,6,0"/>
                            <TextBlock Text="Clear All"/>
                        </StackPanel>
                    </Button>
                    <Button Style="{StaticResource ActionButtonStyle}" Background="#4A7ACC" Click="LoadConfig_Click">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="&#xE118;" FontFamily="Segoe MDL2 Assets" Margin="0,0,6,0"/>
                            <TextBlock Text="导入配置"/>
                        </StackPanel>
                    </Button>
                    <Button Style="{StaticResource ActionButtonStyle}" Background="#4A7ACC" Click="SaveConfig_Click">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="&#xE105;" FontFamily="Segoe MDL2 Assets" Margin="0,0,6,0"/>
                            <TextBlock Text="保存配置"/>
                        </StackPanel>
                    </Button>
                </StackPanel>
            </Border>

            <!-- Center canvas -->
            <Border Grid.Column="2" Style="{StaticResource CardBorderStyle}">
                <Grid>
                    <TextBlock Text="{Binding ConfigurationDisplayName}" FontSize="12" Foreground="{StaticResource SubtitleBrush}"
                               HorizontalAlignment="Left" VerticalAlignment="Top" Margin="-10,-10,0,0"/>
                    <Grid HorizontalAlignment="Center" VerticalAlignment="Center">
                        <Grid x:Name="DesignRoot" Width="512" Height="512">
                            <Grid>
                                <Rectangle x:Name="BgColorRect" Fill="{Binding BackgroundBrush}" />
                                <Image x:Name="BgImage" Source="{Binding BackgroundImagePath}" Stretch="UniformToFill"
                                       Opacity="{Binding BackgroundImageOpacity}"/>
                            </Grid>
                            <Canvas x:Name="DesignCanvas" Background="White" Width="512" Height="512" ClipToBounds="True"/>
                        </Grid>
                    </Grid>
                </Grid>
            </Border>

            <!-- Right properties -->
            <Border Grid.Column="4" Style="{StaticResource CardBorderStyle}">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel>
                        <TextBlock Text="Selected Element" FontWeight="SemiBold" Margin="0,0,0,8"
                                   Foreground="{StaticResource TitleBrush}" FontSize="16"/>
                        <TextBlock Text="{Binding SelectedInfo}" Margin="0,0,0,8" Foreground="{StaticResource SubtitleBrush}"/>

                        <!-- Text properties -->
                        <StackPanel x:Name="TextProps" 
                                    Visibility="{Binding IsTextSelected, Converter={StaticResource BoolToVis}}">
                            <TextBlock Text="Text" Foreground="{StaticResource SubtitleBrush}"/>
                            <TextBox Text="{Binding SelectedText, UpdateSourceTrigger=PropertyChanged}" 
                                     IsReadOnly="{Binding IsSelectedTextReadOnly}"
                                     Margin="0,4,0,8"
                                     Style="{StaticResource DarkTextBoxStyle}"/>

                            <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                                <TextBlock Text="Font Size" Width="100" VerticalAlignment="Center" 
                                           Foreground="{StaticResource SubtitleBrush}"/>
                                <Slider Minimum="8" Maximum="120" Value="{Binding SelectedFontSize}" 
                                        Width="160" Style="{StaticResource DarkSliderStyle}"/>
                                <TextBlock Text="{Binding SelectedFontSize}" Margin="8,0,0,0" 
                                           VerticalAlignment="Center" Foreground="{StaticResource TitleBrush}"/>
                            </StackPanel>

                            <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                                <CheckBox x:Name="UseGradientCheckBox" 
                                          IsChecked="{Binding UseTextGradient}" 
                                          Content="Use Gradient" 
                                          Foreground="{StaticResource TitleBrush}"
                                          VerticalAlignment="Center"/>
                            </StackPanel>

                            <StackPanel Orientation="Horizontal" Margin="0,0,0,8"
                                        Visibility="{Binding UseTextGradient, Converter={StaticResource InverseBoolToVis}}">
                                <TextBlock Text="Color #" VerticalAlignment="Center" Width="100" 
                                           Foreground="{StaticResource SubtitleBrush}"/>
                                <TextBox Text="{Binding SelectedTextHex, UpdateSourceTrigger=PropertyChanged}" 
                                         Width="100" Style="{StaticResource DarkTextBoxStyle}"/>
                                <Border Width="24" Height="24" Margin="8,0,0,0" CornerRadius="4" 
                                        BorderBrush="{StaticResource CardBorder}" BorderThickness="1">
                                    <Border.Background>
                                        <SolidColorBrush Color="{Binding SelectedTextColor}"/>
                                    </Border.Background>
                                </Border>
                                <Button Click="PickSelectedTextColor_Click" Margin="8,0,0,0" 
                                        Style="{StaticResource SmallButtonStyle}">Pick</Button>
                            </StackPanel>

                            <StackPanel Visibility="{Binding UseTextGradient, Converter={StaticResource BoolToVis}}">
                                <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                                    <TextBlock Text="Start Color #" Width="100" VerticalAlignment="Center"
                                               Foreground="{StaticResource SubtitleBrush}"/>
                                    <TextBox Text="{Binding SelectedTextHex, UpdateSourceTrigger=PropertyChanged}" 
                                             Width="100" Style="{StaticResource DarkTextBoxStyle}"/>
                                    <Border Width="24" Height="24" Margin="8,0,0,0" CornerRadius="4" 
                                            BorderBrush="{StaticResource CardBorder}" BorderThickness="1">
                                        <Border.Background>
                                            <SolidColorBrush Color="{Binding SelectedTextColor}"/>
                                        </Border.Background>
                                    </Border>
                                    <Button Click="PickSelectedTextColor_Click" Margin="8,0,0,0" 
                                            Style="{StaticResource SmallButtonStyle}">Pick</Button>
                                </StackPanel>
                                <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                                    <TextBlock Text="End Color #" Width="100" VerticalAlignment="Center"
                                               Foreground="{StaticResource SubtitleBrush}"/>
                                    <TextBox Text="{Binding SelectedTextHex2, UpdateSourceTrigger=PropertyChanged}" 
                                             Width="100" Style="{StaticResource DarkTextBoxStyle}"/>
                                    <Border Width="24" Height="24" Margin="8,0,0,0" CornerRadius="4" 
                                            BorderBrush="{StaticResource CardBorder}" BorderThickness="1">
                                        <Border.Background>
                                            <SolidColorBrush Color="{Binding SelectedTextColor2}"/>
                                        </Border.Background>
                                    </Border>
                                    <Button Click="PickSelectedTextColor2_Click" Margin="8,0,0,0" 
                                            Style="{StaticResource SmallButtonStyle}">Pick</Button>
                                </StackPanel>
                                <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                                    <TextBlock Text="Preview" Width="100" VerticalAlignment="Center" 
                                               Foreground="{StaticResource SubtitleBrush}"/>
                                    <Border Width="200" Height="30" CornerRadius="4" BorderBrush="{StaticResource CardBorder}" BorderThickness="1">
                                        <Border.Background>
                                            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                                <GradientStop Color="{Binding SelectedTextColor}" Offset="0"/>
                                                <GradientStop Color="{Binding SelectedTextColor2}" Offset="1"/>
                                            </LinearGradientBrush>
                                        </Border.Background>
                                        <TextBlock Text="Gradient Text Sample" 
                                                  HorizontalAlignment="Center" 
                                                  VerticalAlignment="Center"
                                                  FontWeight="Bold"/>
                                    </Border>
                                </StackPanel>
                            </StackPanel>

                            <StackPanel Orientation="Horizontal" Margin="0,0,0,8"
                                        Visibility="{Binding IsDateTimeSelected, Converter={StaticResource BoolToVis}}">
                                <TextBlock Text="Date Format" Width="100" VerticalAlignment="Center"
                                           Foreground="{StaticResource SubtitleBrush}"/>
                                <ComboBox Width="180"
                                          ItemsSource="{Binding DateFormats}"
                                          SelectedItem="{Binding SelectedDateFormat, UpdateSourceTrigger=PropertyChanged}"
                                          Style="{StaticResource DarkComboBoxStyle}"
                                          Padding="4,2"/>
                            </StackPanel>
                        </StackPanel>

                        <!-- Usage style selector -->
                        <StackPanel Orientation="Horizontal" Margin="0,8,0,8"
                                    Visibility="{Binding IsUsageSelected, Converter={StaticResource BoolToVis}}">
                            <TextBlock Text="Usage Style"  Width="100" VerticalAlignment="Center"
                                       Foreground="{StaticResource SubtitleBrush}"/>
                            <ComboBox Width="180"
                                      SelectedValue="{Binding SelectedUsageDisplayStyle, UpdateSourceTrigger=PropertyChanged}"
                                      SelectedValuePath="Content"
                                      Style="{StaticResource DarkComboBoxStyle}">
                                <ComboBoxItem Content="Text" />
                                <ComboBoxItem Content="ProgressBar" />
                                <ComboBoxItem Content="Gauge" />
                            </ComboBox>
                        </StackPanel>

                        <!-- Usage theme (only when ProgressBar / Gauge) -->
                        <StackPanel Margin="0,0,0,8"
                                    Visibility="{Binding IsUsageVisualSelected, Converter={StaticResource BoolToVis}}">
                            <TextBlock Text="Usage Theme" FontWeight="SemiBold" Margin="0,0,0,8"
                                       Foreground="{StaticResource TitleBrush}" FontSize="14"/>
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,6">
                                <TextBlock Text="Start #" Width="100" VerticalAlignment="Center"
                                           Foreground="{StaticResource SubtitleBrush}"/>
                                <TextBox Text="{Binding UsageStartHex, UpdateSourceTrigger=PropertyChanged}" Width="100"
                                         Style="{StaticResource DarkTextBoxStyle}"/>
                                <Border Width="24" Height="24" Margin="8,0,0,0" CornerRadius="4"
                                        BorderBrush="{StaticResource CardBorder}" BorderThickness="1">
                                    <Border.Background>
                                        <SolidColorBrush Color="{Binding UsageStartColor}"/>
                                    </Border.Background>
                                </Border>
                                <Button Style="{StaticResource SmallButtonStyle}" Margin="8,0,0,0"
                                        Click="PickUsageStartColor_Click">Pick</Button>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,6">
                                <TextBlock Text="End #" Width="100" VerticalAlignment="Center"
                                           Foreground="{StaticResource SubtitleBrush}"/>
                                <TextBox Text="{Binding UsageEndHex, UpdateSourceTrigger=PropertyChanged}" Width="100"
                                         Style="{StaticResource DarkTextBoxStyle}"/>
                                <Border Width="24" Height="24" Margin="8,0,0,0" CornerRadius="4"
                                        BorderBrush="{StaticResource CardBorder}" BorderThickness="1">
                                    <Border.Background>
                                        <SolidColorBrush Color="{Binding UsageEndColor}"/>
                                    </Border.Background>
                                </Border>
                                <Button Style="{StaticResource SmallButtonStyle}" Margin="8,0,0,0"
                                        Click="PickUsageEndColor_Click">Pick</Button>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,6"
                                        Visibility="{Binding IsGaugeSelected, Converter={StaticResource BoolToVis}}">
                                <TextBlock Text="Needle #" Width="100" VerticalAlignment="Center"
                                           Foreground="{StaticResource SubtitleBrush}"/>
                                <TextBox Text="{Binding UsageNeedleHex, UpdateSourceTrigger=PropertyChanged}" Width="100"
                                         Style="{StaticResource DarkTextBoxStyle}"/>
                                <Border Width="24" Height="24" Margin="8,0,0,0" CornerRadius="4"
                                        BorderBrush="{StaticResource CardBorder}" BorderThickness="1">
                                    <Border.Background>
                                        <SolidColorBrush Color="{Binding UsageNeedleColor}"/>
                                    </Border.Background>
                                </Border>
                                <Button Style="{StaticResource SmallButtonStyle}" Margin="8,0,0,0"
                                        Click="PickUsageNeedleColor_Click">Pick</Button>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal" Margin="0,4,0,0">
                                <TextBlock Text="Preview" Width="100" VerticalAlignment="Center"
                                           Foreground="{StaticResource SubtitleBrush}"/>
                                <Border Width="200" Height="30" CornerRadius="4" BorderBrush="{StaticResource CardBorder}" BorderThickness="1">
                                    <Border.Background>
                                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                            <GradientStop Color="{Binding UsageStartColor}" Offset="0"/>
                                            <GradientStop Color="{Binding UsageEndColor}" Offset="1"/>
                                        </LinearGradientBrush>
                                    </Border.Background>
                                </Border>
                            </StackPanel>
                        </StackPanel>

                        <!-- Common properties -->
                        <StackPanel x:Name="CommonProps" Margin="0,8,0,0"
                                    Visibility="{Binding IsAnySelected, Converter={StaticResource BoolToVis}}">

                            <StackPanel x:Name="ScaleRow"
                                        Orientation="Horizontal" Margin="0,0,0,8"
                                        Visibility="{Binding IsTextSelected, Converter={StaticResource InverseBoolToVis}}">
                                <TextBlock Text="Scale" Width="100" VerticalAlignment="Center"
                                           Foreground="{StaticResource SubtitleBrush}"/>
                                <Slider Minimum="0.1" Maximum="5" Value="{Binding SelectedScale}"
                                        Width="160" Style="{StaticResource DarkSliderStyle}"/>
                                <TextBlock Text="{Binding SelectedScale, StringFormat={}{0:0.00}}"
                                           Margin="8,0,0,0" VerticalAlignment="Center"
                                           Foreground="{StaticResource TitleBrush}"/>
                            </StackPanel>

                            <StackPanel Orientation="Horizontal" Margin="0,0,0,8"
                                        Visibility="{Binding IsImageSelected, Converter={StaticResource BoolToVis}}">
                                <TextBlock Text="Rotate/Mirror" Width="100" VerticalAlignment="Center"
                                           Foreground="{StaticResource SubtitleBrush}"/>
                                <StackPanel Orientation="Horizontal">
                                    <Button Style="{StaticResource SmallButtonStyle}" Width="40"
                                            Click="RotateImageLeft_Click"
                                            ToolTip="左旋90°">⟲</Button>
                                    <Button Style="{StaticResource SmallButtonStyle}" Width="40" Margin="8,0,0,0"
                                            Click="RotateImageRight_Click"
                                            ToolTip="右旋90°">⟳</Button>
                                    <Button Style="{StaticResource SmallButtonStyle}" Width="40" Margin="8,0,0,0"
                                            Click="MirrorImageHorizontal_Click"
                                            ToolTip="水平镜像">⇋</Button>
                                </StackPanel>
                            </StackPanel>

                            <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                                <TextBlock Text="Opacity" Width="100" VerticalAlignment="Center" 
                                           Foreground="{StaticResource SubtitleBrush}"/>
                                <Slider Minimum="0.1" Maximum="1" Value="{Binding SelectedOpacity}" 
                                        Width="160" Style="{StaticResource DarkSliderStyle}"/>
                                <TextBlock Text="{Binding SelectedOpacity, StringFormat={}{0:P0}}" 
                                           Margin="8,0,0,0" VerticalAlignment="Center" 
                                           Foreground="{StaticResource TitleBrush}"/>
                            </StackPanel>

                            <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                                <Button Click="BringToFront_Click" Style="{StaticResource SmallButtonStyle}">Bring To Front</Button>
                                <Button Click="SendToBack_Click" Margin="8,0,0,0" Style="{StaticResource SmallButtonStyle}">Send To Back</Button>
                                <Button Click="DeleteSelected_Click" Margin="8,0,0,0" Style="{StaticResource SmallButtonStyle}">Delete</Button>
                            </StackPanel>

                            <TextBlock Text="Tip: Drag to move. Ctrl + Mouse Wheel to scale."
                                       Foreground="{StaticResource SubtitleBrush}" FontSize="12"
                                       Visibility="{Binding IsTextSelected, Converter={StaticResource InverseBoolToVis}}"/>
                            <TextBlock Text="Tip: Drag to move."
                                       Foreground="{StaticResource SubtitleBrush}" FontSize="12"
                                       Visibility="{Binding IsTextSelected, Converter={StaticResource BoolToVis}}"/>
                        </StackPanel>

                        <Rectangle Height="1" Fill="{StaticResource CardBorder}" Margin="0,16,0,16"/>

                        <!-- Auto Move (only for plain text items) -->
                        <StackPanel Margin="0,0,0,0" Visibility="{Binding IsTextSelected, Converter={StaticResource BoolToVis}}">
                            <TextBlock Text="Auto Move" FontWeight="SemiBold" Margin="0,0,0,8"
                                       Foreground="{StaticResource TitleBrush}" FontSize="16"/>

                            <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                                <TextBlock Text="Speed" Width="100" VerticalAlignment="Center" Foreground="{StaticResource SubtitleBrush}"/>
                                <Slider Minimum="0" Maximum="400" Value="{Binding MoveSpeed}" Width="160"
                                        Style="{StaticResource DarkSliderStyle}"/>
                                <TextBlock Text="{Binding MoveSpeed, StringFormat={}{0:0}}" Margin="8,0,0,0"
                                           VerticalAlignment="Center" Foreground="{StaticResource TitleBrush}"/>
                            </StackPanel>

                            <StackPanel>
                                <TextBlock Text="Direction" Foreground="{StaticResource SubtitleBrush}" Margin="0,0,0,4"/>
                                <Grid Width="120" Height="120"
                                      x:Name="JoystickBase"
                                      MouseLeftButtonDown="JoystickBase_MouseDown"
                                      MouseLeftButtonUp="JoystickBase_MouseUp"
                                      MouseMove="JoystickBase_MouseMove"
                                      Background="Transparent">
                                    <Ellipse Fill="#202633"
                                             Stroke="{StaticResource CardBorder}"
                                             StrokeThickness="2"/>
                                    <Canvas IsHitTestVisible="False">
                                        <Line X1="60" Y1="22" X2="60" Y2="98"
                                              Stroke="#35404F" StrokeThickness="3"
                                              StrokeStartLineCap="Round" StrokeEndLineCap="Round"/>
                                        <Line X1="22" Y1="60" X2="98" Y2="60"
                                              Stroke="#35404F" StrokeThickness="3"
                                              StrokeStartLineCap="Round" StrokeEndLineCap="Round"/>
                                        <Polygon Points="60,18 52,32 68,32"
                                                 Fill="#6F7B8A" Stroke="#2A313D" StrokeThickness="1"/>
                                        <Polygon Points="60,102 52,88 68,88"
                                                 Fill="#6F7B8A" Stroke="#2A313D" StrokeThickness="1"/>
                                        <Polygon Points="18,60 32,52 32,68"
                                                 Fill="#6F7B8A" Stroke="#2A313D" StrokeThickness="1"/>
                                        <Polygon Points="102,60 88,52 88,68"
                                                 Fill="#6F7B8A" Stroke="#2A313D" StrokeThickness="1"/>
                                    </Canvas>
                                    <Ellipse Width="32"
                                             Height="32"
                                             x:Name="JoystickKnob"
                                             Fill="{StaticResource ButtonBg}"
                                             Stroke="White"
                                             StrokeThickness="2"
                                             HorizontalAlignment="Center"
                                             VerticalAlignment="Center">
                                        <Ellipse.RenderTransform>
                                            <TranslateTransform x:Name="JoystickKnobTransform" X="0" Y="0"/>
                                        </Ellipse.RenderTransform>
                                    </Ellipse>
                                </Grid>
                                <Button Content="Center"
                                        Width="80"
                                        Margin="0,8,0,0"
                                        Click="JoystickCenter_Click"
                                        Style="{StaticResource SmallButtonStyle}"/>
                            </StackPanel>
                        </StackPanel>
                    </StackPanel>
                </ScrollViewer>
            </Border>
        </Grid>
    </Grid>
</Page>