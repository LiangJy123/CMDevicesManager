<Page x:Class="CMDevicesManager.Pages.DeviceConfigPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      FontFamily="{DynamicResource AppFontFamily}"
      Title="Device Configuration">
    <Page.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/MaterialDesignThemes.Wpf;component/Themes/MaterialDesignTheme.Button.xaml" />
                <ResourceDictionary Source="pack://application:,,,/MaterialDesignThemes.Wpf;component/Themes/MaterialDesignTheme.CheckBox.xaml" />
                <ResourceDictionary Source="pack://application:,,,/MaterialDesignThemes.Wpf;component/Themes/MaterialDesignTheme.ListBox.xaml" />
                <ResourceDictionary Source="pack://application:,,,/MaterialDesignThemes.Wpf;component/Themes/MaterialDesignTheme.PopupBox.xaml" />
                <ResourceDictionary Source="pack://application:,,,/MaterialDesignThemes.Wpf;component/Themes/MaterialDesignTheme.RadioButton.xaml" />
                <ResourceDictionary Source="pack://application:,,,/MaterialDesignThemes.Wpf;component/Themes/MaterialDesignTheme.SplitButton.xaml" />
                <ResourceDictionary Source="pack://application:,,,/MaterialDesignThemes.Wpf;component/Themes/MaterialDesignTheme.TextBlock.xaml" />
                <ResourceDictionary Source="pack://application:,,,/MaterialDesignThemes.Wpf;component/Themes/MaterialDesignTheme.ToggleButton.xaml" />
            </ResourceDictionary.MergedDictionaries>
            <BooleanToVisibilityConverter x:Key="BoolToVis"/>
            
         
            
            <!-- Light shadow style for buttons on dark background -->
            <Style x:Key="LightShadowButtonStyle" TargetType="Button" BasedOn="{StaticResource MaterialDesignRaisedLightButton}">
                <Setter Property="Effect">
                    <Setter.Value>
                        <DropShadowEffect Color="LightGray" Direction="320" ShadowDepth="2" Opacity="0.5" BlurRadius="4"/>
                    </Setter.Value>
                </Setter>
                <Style.Triggers>
                    <Trigger Property="IsMouseOver" Value="True">
                        <Setter Property="Effect">
                            <Setter.Value>
                                <DropShadowEffect Color="White" Direction="320" ShadowDepth="3" Opacity="0.7" BlurRadius="6"/>
                            </Setter.Value>
                        </Setter>
                    </Trigger>
                </Style.Triggers>
            </Style>
            
            <Style x:Key="LightShadowSecondaryButtonStyle" TargetType="Button" BasedOn="{StaticResource MaterialDesignRaisedSecondaryLightButton}">
                <Setter Property="Effect">
                    <Setter.Value>
                        <DropShadowEffect Color="LightGray" Direction="320" ShadowDepth="2" Opacity="0.5" BlurRadius="4"/>
                    </Setter.Value>
                </Setter>
                <Style.Triggers>
                    <Trigger Property="IsMouseOver" Value="True">
                        <Setter Property="Effect">
                            <Setter.Value>
                                <DropShadowEffect Color="White" Direction="320" ShadowDepth="3" Opacity="0.7" BlurRadius="6"/>
                            </Setter.Value>
                        </Setter>
                    </Trigger>
                </Style.Triggers>
            </Style>
            
            <Style x:Key="LightShadowOutlinedButtonStyle" TargetType="Button" BasedOn="{StaticResource MaterialDesignOutlinedButton}">
                <Setter Property="Effect">
                    <Setter.Value>
                        <DropShadowEffect Color="LightGray" Direction="320" ShadowDepth="1" Opacity="0.3" BlurRadius="3"/>
                    </Setter.Value>
                </Setter>
                <Style.Triggers>
                    <Trigger Property="IsMouseOver" Value="True">
                        <Setter Property="Effect">
                            <Setter.Value>
                                <DropShadowEffect Color="White" Direction="320" ShadowDepth="2" Opacity="0.5" BlurRadius="4"/>
                            </Setter.Value>
                        </Setter>
                    </Trigger>
                </Style.Triggers>
            </Style>
          
        </ResourceDictionary>
       
    </Page.Resources>

    <Grid Background="{DynamicResource MaterialDesign.Brush.Background}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Top toolbar -->
        <DockPanel Grid.Row="0" Margin="16" LastChildFill="False">
            <StackPanel Orientation="Horizontal" DockPanel.Dock="Left" Margin="0,0,12,0" HorizontalAlignment="Left">
                <Button Click="Back_Click" Margin="0,0,8,0" Padding="12,6" Style="{StaticResource LightShadowButtonStyle}" Background="#FF5AA2D0">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="&#xE72B;" FontFamily="Segoe MDL2 Assets" Margin="0,0,6,0"/>
                        <TextBlock Text="Back" />
                    </StackPanel>
                </Button>
            </StackPanel>

            <StackPanel Orientation="Horizontal" DockPanel.Dock="Right" HorizontalAlignment="Right">
                <TextBlock Text="Size:" VerticalAlignment="Center" Foreground="white" Margin="0,0,6,0"/>
                <TextBox Text="{Binding CanvasSize, UpdateSourceTrigger=PropertyChanged}" Width="64" Margin="0,0,8,0"/>
                <Button Style="{StaticResource LightShadowSecondaryButtonStyle}" Background="#FFE4FF54" Click="Export_Click" Padding="12,6">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="Export PNG" Margin="0,0,6,0"/>
                        <TextBlock Text="&#xE118;" FontFamily="Segoe MDL2 Assets"/>
                    </StackPanel>
                </Button>
            </StackPanel>
        </DockPanel>

        <!-- Main content: Left (tools) | Center (canvas) | Right (properties) -->
        <Grid Grid.Row="1" Margin="16">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="220"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="340"/>
            </Grid.ColumnDefinitions>

            <!-- LEFT: tools -->
            <Border Grid.Column="0"
                    Background="{DynamicResource MaterialDesign.Brush.Background}"
                    CornerRadius="8" Padding="12" Margin="0,0,12,0">
                <StackPanel>
                    <TextBlock Text="Common" Foreground="white" FontWeight="SemiBold" Margin="0,0,0,8"/>
                    <Button Style="{StaticResource LightShadowButtonStyle}" Background="#FF3A7E00"
                            Click="AddText_Click" Margin="0,0,0,8" Padding="12,6" >Add Text</Button>
                    <Button Style="{StaticResource LightShadowSecondaryButtonStyle}" Background="#FF3A7E00"
                            Click="AddImage_Click" Margin="0,0,0,8" Padding="12,6">Add Image</Button>
                    <Button Style="{StaticResource LightShadowSecondaryButtonStyle}" Background="#FF3A7E00"
                            Click="AddClock_Click" Margin="0,0,0,8" Padding="12,6">Add Date</Button>
                    <Button Style="{StaticResource LightShadowSecondaryButtonStyle}" Background="#FF3A7E00"
                            Click="AddMp4_Click" Margin="0,0,0,8" Padding="12,6">Add MP4</Button>

                    <Separator Margin="0,8,0,8"/>
                    <TextBlock Text="System Info" Foreground="white" FontWeight="SemiBold" Margin="0,0,0,8"/>

                    <!-- Dynamic system info buttons -->
                    <ItemsControl ItemsSource="{Binding SystemInfoItems}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Button Content="{Binding DisplayName}"
                                        Margin="0,0,0,8"
                                        Padding="12,6"
                                        Style="{StaticResource LightShadowSecondaryButtonStyle}"
                                        Background="#FF3A7E00"
                                        Click="AddSystemInfoButton_Click"
                                        Tag="{Binding Kind}"/>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>

                    <Separator Margin="0,8,0,8"/>
                    <Button Style="{StaticResource LightShadowSecondaryButtonStyle}" 
                            Click="ClearCanvas_Click" Padding="12,6" Background="#FFE4FF54">Clear All</Button>
                </StackPanel>
            </Border>

            <!-- CENTER: fixed 512x512 designer surface, centered -->
            <Border Grid.Column="1" Background="Transparent" CornerRadius="8" Padding="24">
                <Grid HorizontalAlignment="Center" VerticalAlignment="Center">
                    <Grid x:Name="DesignRoot" Width="512" Height="512">
                        <Grid>
                            <Rectangle x:Name="BgColorRect" Fill="{Binding BackgroundBrush}" />
                            <Image x:Name="BgImage"
                                   Source="{Binding BackgroundImagePath}"
                                   Stretch="UniformToFill"
                                   Opacity="{Binding BackgroundImageOpacity}"/>
                        </Grid>
                        <Canvas x:Name="DesignCanvas" Background="White" Width="512" Height="512" ClipToBounds="True"/>
                    </Grid>
                </Grid>
            </Border>

            <!-- RIGHT: properties panel -->
            <ScrollViewer Grid.Column="2" Margin="12,0,0,0" VerticalScrollBarVisibility="Auto">
                <StackPanel Margin="8">
                    <TextBlock Text="Selected Element" FontWeight="SemiBold" Foreground="white" Margin="0,0,0,8"/>
                    <TextBlock Text="{Binding SelectedInfo}" Foreground="white" Opacity="0.85" Margin="0,0,0,8"/>

                    <!-- Text properties -->
                    <StackPanel x:Name="TextProps"
                                Visibility="{Binding IsTextSelected, Converter={StaticResource BoolToVis}}">
                        <TextBlock Text="Text" Foreground="white"/>
                        <TextBox Text="{Binding SelectedText, UpdateSourceTrigger=PropertyChanged}"
                                 IsReadOnly="{Binding IsSelectedTextReadOnly}"
                                 Margin="0,4,0,8"/>
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                            <TextBlock Text="Font Size" Width="100" Foreground="white" VerticalAlignment="Center"/>
                            <Slider Minimum="8" Maximum="120" Value="{Binding SelectedFontSize}" Width="160"/>
                            <TextBlock Text="{Binding SelectedFontSize}" Margin="8,0,0,0" Foreground="white" VerticalAlignment="Center"/>
                        </StackPanel>

                        <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                            <TextBlock Text="Color #" VerticalAlignment="Center" Foreground="white" Width="100"/>
                            <TextBox Text="{Binding SelectedTextHex, UpdateSourceTrigger=PropertyChanged}" Width="100"/>
                            <Border Width="24" Height="24" Margin="8,0,0,0" CornerRadius="4" BorderBrush="{DynamicResource MaterialDesign.Brush.TextBox.HoverBackground}" BorderThickness="1">
                                <Border.Background>
                                    <SolidColorBrush Color="{Binding SelectedTextColor}"/>
                                </Border.Background>
                            </Border>
                            <Button Style="{StaticResource LightShadowOutlinedButtonStyle}" Click="PickSelectedTextColor_Click" Margin="8,0,0,0" Padding="8,4">Pick</Button>
                        </StackPanel>
                    </StackPanel>

                    <!-- Common properties -->
                    <StackPanel x:Name="CommonProps" Margin="0,8,0,0"
                                Visibility="{Binding IsAnySelected, Converter={StaticResource BoolToVis}}">
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                            <TextBlock Text="Scale" Width="100" Foreground="white" VerticalAlignment="Center"/>
                            <Slider Minimum="0.1" Maximum="5" Value="{Binding SelectedScale}" Width="160"/>
                            <TextBlock Text="{Binding SelectedScale, StringFormat={}{0:0.00}}" Margin="8,0,0,0" Foreground="white" VerticalAlignment="Center"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                            <TextBlock Text="Opacity" Width="100" Foreground="white" VerticalAlignment="Center"/>
                            <Slider Minimum="0.1" Maximum="1" Value="{Binding SelectedOpacity}" Width="160"/>
                            <TextBlock Text="{Binding SelectedOpacity, StringFormat={}{0:P0}}" Margin="8,0,0,0" Foreground="white" VerticalAlignment="Center"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                            <Button Style="{StaticResource LightShadowOutlinedButtonStyle}" Click="BringToFront_Click" Padding="8,4">Bring To Front</Button>
                            <Button Style="{StaticResource LightShadowOutlinedButtonStyle}" Click="SendToBack_Click" Margin="8,0,0,0" Padding="8,4">Send To Back</Button>
                            <Button Style="{StaticResource LightShadowOutlinedButtonStyle}" Click="DeleteSelected_Click" Margin="8,0,0,0" Padding="8,4">Delete</Button>
                        </StackPanel>
                        <TextBlock Text="Tip: Drag to move. Ctrl + Mouse Wheel to scale." Foreground="white" Opacity="0.7"/>
                    </StackPanel>

                    <Separator Margin="0,12,0,12"/>

                    <TextBlock Text="Export" FontWeight="SemiBold" Foreground="white" Margin="0,0,0,8"/>
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                        <TextBlock Text="Output Folder" Width="100" Foreground="white" VerticalAlignment="Center"/>
                        <TextBox Text="{Binding OutputFolder}" Width="220"/>
                        <Button Style="{StaticResource LightShadowOutlinedButtonStyle}" Click="BrowseOutputFolder_Click" Margin="8,0,0,0" Padding="8,4">Browse</Button>
                    </StackPanel>
                    <TextBlock Text="Export creates a single PNG of the square canvas." Foreground="white" Opacity="0.7"/>
                </StackPanel>
            </ScrollViewer>
        </Grid>
    </Grid>
</Page>