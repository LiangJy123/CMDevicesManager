<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="CDMDevicesManagerDevWinUI.Views.DeviceShow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:CDMDevicesManagerDevWinUI.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:toolkit="using:CommunityToolkit.WinUI.Controls"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header Section -->
        <Grid Grid.Row="0" Padding="24,16,24,8">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            
            <!-- Page Title -->
            <StackPanel Grid.Column="0" Orientation="Vertical">
                <TextBlock Text="Device Media Manager" 
                           FontSize="28" 
                           FontWeight="Bold"/>
                <TextBlock x:Name="DeviceNameText" 
                           Text="No Device Selected" 
                           FontSize="14" 
                           Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                           Margin="0,4,0,0"/>
            </StackPanel>

            <!-- Mode Toggle -->
            <StackPanel Grid.Column="1" Orientation="Horizontal" Spacing="12" VerticalAlignment="Center">
                <FontIcon Glyph="&#xE8B3;" VerticalAlignment="Center" FontSize="16"/>
                <ToggleSwitch x:Name="ModeToggle" 
                              OnContent="Real-time" 
                              OffContent="Suspend"
                              Toggled="ModeToggle_Toggled"
                              VerticalAlignment="Center"/>
            </StackPanel>
        </Grid>

        <!-- Main Content -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="320" MinWidth="300"/>
                <ColumnDefinition Width="8"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="300" MinWidth="280"/>
            </Grid.ColumnDefinitions>

            <!-- Left Panel - Media List -->
            <Border Grid.Column="0" 
                    Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                    BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                    BorderThickness="1"
                    CornerRadius="8"
                    Margin="16,0,8,16">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Media List Header -->
                    <Grid Grid.Row="0" Padding="16" Background="{ThemeResource AccentFillColorTertiaryBrush}">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        
                        <StackPanel Grid.Column="0" Orientation="Horizontal" Spacing="8">
                            <FontIcon Glyph="&#xE8F1;" VerticalAlignment="Center" FontSize="16"/>
                            <TextBlock Text="Media Files" 
                                       FontWeight="SemiBold" 
                                       VerticalAlignment="Center"/>
                        </StackPanel>
                        
                        <StackPanel Grid.Column="1" Orientation="Horizontal" Spacing="8">
                            <Button x:Name="AddMediaButton" 
                                    ToolTipService.ToolTip="Add Media Files"
                                    FontSize="12"
                                    Padding="8,4"
                                    Click="AddMediaButton_Click"
                                    Style="{StaticResource AccentButtonStyle}">
                                <FontIcon Glyph="&#xE710;" FontSize="12"/>
                            </Button>
                            <Button x:Name="RefreshMediaButton" 
                                    ToolTipService.ToolTip="Refresh Media List"
                                    FontSize="12"
                                    Padding="8,4"
                                    Click="RefreshMediaButton_Click">
                                <FontIcon Glyph="&#xE72C;" FontSize="12"/>
                            </Button>
                        </StackPanel>
                    </Grid>

                    <!-- Media List -->
                    <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                        <ListView x:Name="MediaListView" 
                                  SelectionMode="Single"
                                  SelectionChanged="MediaListView_SelectionChanged"
                                  Padding="8">
                            <ListView.ItemTemplate>
                                <DataTemplate>
                                    <Grid Margin="4" 
                                          Background="{ThemeResource SubtleFillColorTransparentBrush}"
                                          CornerRadius="6"
                                          Padding="8">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="60"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>

                                        <!-- Thumbnail -->
                                        <Border Grid.Column="0" 
                                                Width="50" Height="50"
                                                CornerRadius="4"
                                                Background="{ThemeResource ControlFillColorSecondaryBrush}">
                                            <FontIcon Glyph="{Binding TypeIcon}"
                                                      FontSize="20"
                                                      Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                                      HorizontalAlignment="Center"
                                                      VerticalAlignment="Center"/>
                                        </Border>

                                        <!-- File Info -->
                                        <StackPanel Grid.Column="1" 
                                                    Margin="12,0,8,0"
                                                    VerticalAlignment="Center">
                                            <TextBlock Text="{Binding FileName}" 
                                                       FontWeight="SemiBold"
                                                       TextTrimming="CharacterEllipsis"/>
                                            <TextBlock Text="{Binding FileSize}" 
                                                       FontSize="12"
                                                       Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                                            <TextBlock Text="{Binding Resolution}" 
                                                       FontSize="11"
                                                       Foreground="{ThemeResource TextFillColorTertiaryBrush}"/>
                                        </StackPanel>

                                        <!-- Status Indicator -->
                                        <StackPanel Grid.Column="2" 
                                                    VerticalAlignment="Center"
                                                    Spacing="4">
                                            <Ellipse Width="8" Height="8" 
                                                     Fill="{Binding StatusColor}"
                                                     HorizontalAlignment="Center"/>
                                            <TextBlock Text="{Binding StatusText}" 
                                                       FontSize="10"
                                                       HorizontalAlignment="Center"
                                                       Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                                        </StackPanel>
                                    </Grid>
                                </DataTemplate>
                            </ListView.ItemTemplate>
                        </ListView>
                    </ScrollViewer>

                    <!-- Media Actions -->
                    <StackPanel Grid.Row="2" 
                                Orientation="Horizontal" 
                                Spacing="8" 
                                Padding="16"
                                HorizontalAlignment="Stretch">
                        <Button x:Name="SendToDeviceButton" 
                                HorizontalAlignment="Stretch"
                                Click="SendToDeviceButton_Click"
                                IsEnabled="False"
                                Style="{StaticResource AccentButtonStyle}"
                                ToolTipService.ToolTip="Send to Device">
                            <StackPanel Orientation="Horizontal" Spacing="6">
                                <FontIcon Glyph="&#xE8C8;" FontSize="12"/>
                                <TextBlock Text="Send" FontSize="12"/>
                            </StackPanel>
                        </Button>
                        <Button x:Name="RemoveMediaButton" 
                                Click="RemoveMediaButton_Click"
                                IsEnabled="False"
                                ToolTipService.ToolTip="Remove from List">
                            <StackPanel Orientation="Horizontal" Spacing="6">
                                <FontIcon Glyph="&#xE74D;" FontSize="12"/>
                                <TextBlock Text="Remove" FontSize="12"/>
                            </StackPanel>
                        </Button>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Spacer -->
            <Border Grid.Column="1" Width="8" Background="Transparent"/>

            <!-- Center Panel - Preview/Device Media -->
            <Border Grid.Column="2" 
                    Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                    BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                    BorderThickness="1"
                    CornerRadius="8"
                    Margin="8,0,8,16">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Preview Header -->
                    <Grid Grid.Row="0" Padding="16" Background="{ThemeResource AccentFillColorTertiaryBrush}">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        
                        <StackPanel Grid.Column="0" Orientation="Horizontal" Spacing="8">
                            <FontIcon x:Name="PreviewModeIcon" Glyph="&#xE8B3;" VerticalAlignment="Center"/>
                            <TextBlock x:Name="PreviewModeText" 
                                       Text="Preview Mode" 
                                       FontWeight="SemiBold" 
                                       VerticalAlignment="Center"/>
                        </StackPanel>
                        
                        <StackPanel Grid.Column="1" Orientation="Horizontal" Spacing="8">
                            <TextBlock x:Name="DeviceStatusText" 
                                       Text="Disconnected" 
                                       VerticalAlignment="Center"
                                       Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                            <Ellipse x:Name="DeviceStatusIndicator" 
                                     Width="10" Height="10" 
                                     Fill="Red"
                                     VerticalAlignment="Center"/>
                        </StackPanel>
                    </Grid>

                    <!-- Real-time Preview Content -->
                    <Grid x:Name="RealTimePreviewPanel" Grid.Row="1">
                        <ScrollViewer ZoomMode="Enabled"
                                      HorizontalScrollMode="Auto"
                                      VerticalScrollMode="Auto"
                                      HorizontalScrollBarVisibility="Auto"
                                      VerticalScrollBarVisibility="Auto">
                            <Border x:Name="PreviewContainer" 
                                    Background="Black"
                                    CornerRadius="4"
                                    Margin="16">
                                <Grid>
                                    <!-- Device Screen Simulation -->
                                    <Border x:Name="DeviceScreenBorder"
                                            Background="Black"
                                            BorderBrush="{ThemeResource ControlStrokeColorDefaultBrush}"
                                            BorderThickness="2"
                                            CornerRadius="8"
                                            Width="400"
                                            Height="400">
                                        <Grid>
                                            <!-- Preview Image -->
                                            <Image x:Name="PreviewImage" 
                                                   Stretch="Uniform"
                                                   HorizontalAlignment="Center"
                                                   VerticalAlignment="Center"/>
                                            
                                            <!-- No Content Message -->
                                            <StackPanel x:Name="NoContentPanel"
                                                        HorizontalAlignment="Center"
                                                        VerticalAlignment="Center"
                                                        Spacing="12">
                                                <FontIcon Glyph="&#xE91B;" 
                                                          FontSize="48" 
                                                          Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                                                <TextBlock Text="No media selected" 
                                                           FontSize="16"
                                                           Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                                           HorizontalAlignment="Center"/>
                                                <TextBlock Text="Select a media file from the list to preview" 
                                                           FontSize="12"
                                                           Foreground="{ThemeResource TextFillColorTertiaryBrush}"
                                                           HorizontalAlignment="Center"/>
                                            </StackPanel>

                                            <!-- Loading Indicator -->
                                            <StackPanel x:Name="LoadingPanel"
                                                        Visibility="Collapsed"
                                                        HorizontalAlignment="Center"
                                                        VerticalAlignment="Center"
                                                        Spacing="12">
                                                <ProgressRing IsActive="True" Width="40" Height="40"/>
                                                <TextBlock x:Name="LoadingText" 
                                                           Text="Loading..." 
                                                           HorizontalAlignment="Center"
                                                           Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                                            </StackPanel>
                                        </Grid>
                                    </Border>
                                </Grid>
                            </Border>
                        </ScrollViewer>
                    </Grid>

                    <!-- Suspend Mode Device Media Content -->
                    <Grid x:Name="SuspendModePanel" Grid.Row="1" Visibility="Collapsed">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <!-- Device Media Header -->
                        <Grid Grid.Row="0" Padding="16" Background="{ThemeResource LayerFillColorDefaultBrush}">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            
                            <StackPanel Grid.Column="0" Orientation="Horizontal" Spacing="8">
                                <FontIcon Glyph="&#xE7C4;" VerticalAlignment="Center" FontSize="16"/>
                                <TextBlock Text="Device Suspend Media" 
                                           FontWeight="SemiBold" 
                                           VerticalAlignment="Center"/>
                                <TextBlock x:Name="DeviceMediaCountText" 
                                           Text="0 files" 
                                           FontSize="12"
                                           Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                           VerticalAlignment="Center"/>
                            </StackPanel>
                            
                            <Button x:Name="RefreshDeviceMediaButton" 
                                    Grid.Column="1"
                                    ToolTipService.ToolTip="Refresh Device Media"
                                    Padding="8,4"
                                    Click="RefreshDeviceMediaButton_Click">
                                <FontIcon Glyph="&#xE72C;" FontSize="12"/>
                            </Button>
                        </Grid>

                        <!-- Device Media List -->
                        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Padding="16">
                            <Grid>
                                <!-- Connected State -->
                                <ListView x:Name="DeviceMediaListView" 
                                          SelectionMode="Single"
                                          Background="Transparent">
                                    <ListView.ItemTemplate>
                                        <DataTemplate>
                                            <Grid Margin="0,4" 
                                                  Background="{ThemeResource SubtleFillColorTransparentBrush}"
                                                  CornerRadius="6"
                                                  Padding="12">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="Auto"/>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>

                                                <!-- Media Icon -->
                                                <Border Grid.Column="0" 
                                                        Width="40" Height="40"
                                                        CornerRadius="4"
                                                        Background="{ThemeResource AccentFillColorTertiaryBrush}"
                                                        Margin="0,0,12,0">
                                                    <FontIcon Glyph="&#xE91B;" 
                                                              FontSize="16"
                                                              Foreground="{ThemeResource AccentTextFillColorPrimaryBrush}"
                                                              HorizontalAlignment="Center"
                                                              VerticalAlignment="Center"/>
                                                </Border>

                                                <!-- Media Info -->
                                                <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                                    <TextBlock Text="{Binding MediaName}" 
                                                               FontWeight="SemiBold"
                                                               TextTrimming="CharacterEllipsis"/>
                                                    <StackPanel Orientation="Horizontal" Spacing="12">
                                                        <StackPanel Orientation="Horizontal" Spacing="4">
                                                            <FontIcon Glyph="&#xE8D6;" FontSize="10" 
                                                                      Foreground="{ThemeResource TextFillColorTertiaryBrush}"/>
                                                            <TextBlock Text="{Binding SlotIndex}" 
                                                                       FontSize="11"
                                                                       Foreground="{ThemeResource TextFillColorTertiaryBrush}"/>
                                                        </StackPanel>
                                                        <StackPanel Orientation="Horizontal" Spacing="4">
                                                            <FontIcon Glyph="&#xE916;" FontSize="10" 
                                                                      Foreground="{ThemeResource TextFillColorTertiaryBrush}"/>
                                                            <TextBlock Text="{Binding Status}" 
                                                                       FontSize="11"
                                                                       Foreground="{ThemeResource TextFillColorTertiaryBrush}"/>
                                                        </StackPanel>
                                                    </StackPanel>
                                                </StackPanel>

                                                <!-- Active Indicator -->
                                                <Border Grid.Column="2" 
                                                        Width="12" Height="12"
                                                        CornerRadius="6"
                                                        Background="{Binding ActiveColor}"
                                                        VerticalAlignment="Center"/>
                                            </Grid>
                                        </DataTemplate>
                                    </ListView.ItemTemplate>
                                </ListView>

                                <!-- Disconnected State -->
                                <StackPanel x:Name="DeviceDisconnectedPanel"
                                            HorizontalAlignment="Center"
                                            VerticalAlignment="Center"
                                            Spacing="16"
                                            Visibility="Collapsed">
                                    <FontIcon Glyph="&#xE7BA;" 
                                              FontSize="48" 
                                              Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                                    <TextBlock Text="Device Disconnected" 
                                               FontSize="18"
                                               FontWeight="SemiBold"
                                               Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                               HorizontalAlignment="Center"/>
                                    <TextBlock Text="Connect to device to view suspend media" 
                                               FontSize="14"
                                               Foreground="{ThemeResource TextFillColorTertiaryBrush}"
                                               HorizontalAlignment="Center"/>
                                </StackPanel>

                                <!-- No Media State -->
                                <StackPanel x:Name="NoDeviceMediaPanel"
                                            HorizontalAlignment="Center"
                                            VerticalAlignment="Center"
                                            Spacing="16"
                                            Visibility="Collapsed">
                                    <FontIcon Glyph="&#xE7C4;" 
                                              FontSize="48" 
                                              Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                                    <TextBlock Text="No Suspend Media" 
                                               FontSize="18"
                                               FontWeight="SemiBold"
                                               Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                               HorizontalAlignment="Center"/>
                                    <TextBlock Text="No media files found on device" 
                                               FontSize="14"
                                               Foreground="{ThemeResource TextFillColorTertiaryBrush}"
                                               HorizontalAlignment="Center"/>
                                </StackPanel>
                            </Grid>
                        </ScrollViewer>
                    </Grid>

                    <!-- Preview Info -->
                    <Grid x:Name="PreviewInfoPanel" Grid.Row="2" Padding="16">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        
                        <StackPanel Grid.Column="0" Spacing="4">
                            <TextBlock x:Name="PreviewInfoText" 
                                       Text="No file selected" 
                                       FontSize="12"
                                       Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                            <TextBlock x:Name="PreviewDetailsText" 
                                       Text="" 
                                       FontSize="11"
                                       Foreground="{ThemeResource TextFillColorTertiaryBrush}"/>
                        </StackPanel>
                        
                        <StackPanel Grid.Column="1" Orientation="Horizontal" Spacing="8">
                            <Button x:Name="FitToScreenButton" 
                                    ToolTipService.ToolTip="Fit to Screen"
                                    FontSize="12"
                                    Padding="8,4"
                                    Click="FitToScreenButton_Click">
                                <FontIcon Glyph="&#xE1A9;" FontSize="12"/>
                            </Button>
                            <Button x:Name="ActualSizeButton" 
                                    ToolTipService.ToolTip="Actual Size"
                                    FontSize="12"
                                    Padding="8,4"
                                    Click="ActualSizeButton_Click">
                                <FontIcon Glyph="&#xE8A9;" FontSize="12"/>
                            </Button>
                        </StackPanel>
                    </Grid>
                </Grid>
            </Border>

            <!-- Right Panel - Device Controls -->
            <Border Grid.Column="3" 
                    Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                    BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                    BorderThickness="1"
                    CornerRadius="8"
                    Margin="8,0,16,16">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel Spacing="8" Padding="16">
                        
                        <!-- Device Controls Header -->
                        <StackPanel Orientation="Horizontal" Spacing="8" Margin="0,0,0,8">
                            <FontIcon Glyph="&#xE7F4;" FontSize="18"/>
                            <TextBlock Text="Device Controls" 
                                       FontSize="18" 
                                       FontWeight="SemiBold"/>
                        </StackPanel>

                        <!-- Connection Status -->
                        <Border Background="{ThemeResource AccentFillColorTertiaryBrush}"
                                CornerRadius="6"
                                Padding="12">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                
                                <StackPanel Grid.Column="0" Orientation="Horizontal" Spacing="8">
                                    <FontIcon Glyph="&#xE968;" FontSize="16" VerticalAlignment="Center"/>
                                    <StackPanel>
                                        <TextBlock Text="Connection" FontWeight="SemiBold"/>
                                        <TextBlock x:Name="ConnectionStatusText" 
                                                   Text="Disconnected" 
                                                   FontSize="12"
                                                   Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                                    </StackPanel>
                                </StackPanel>
                                
                                <Button x:Name="ConnectButton" 
                                        Grid.Column="1"
                                        FontSize="12"
                                        Padding="12,4"
                                        Click="ConnectButton_Click"
                                        ToolTipService.ToolTip="Connect/Disconnect Device">
                                    <StackPanel Orientation="Horizontal" Spacing="6">
                                        <FontIcon x:Name="ConnectButtonIcon" Glyph="&#xE8C8;" FontSize="12"/>
                                        <TextBlock x:Name="ConnectButtonText" Text="Connect" FontSize="12"/>
                                    </StackPanel>
                                </Button>
                            </Grid>
                        </Border>

                        <!-- Display Controls -->
                        <toolkit:SettingsExpander Header="Display Controls"
                                                  Description="Brightness and rotation settings"
                                                  IsExpanded="True">
                            <toolkit:SettingsExpander.HeaderIcon>
                                <FontIcon Glyph="&#xE706;"/>
                            </toolkit:SettingsExpander.HeaderIcon>
                            <toolkit:SettingsExpander.Items>
                                <!-- Brightness Control -->
                                <toolkit:SettingsCard Header="Brightness" 
                                                      Description="Adjust display brightness">
                                    <toolkit:SettingsCard.HeaderIcon>
                                        <FontIcon Glyph="&#xE706;"/>
                                    </toolkit:SettingsCard.HeaderIcon>
                                    <Grid MinWidth="180">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        <Slider x:Name="BrightnessSlider"
                                                Grid.Column="0"
                                                Minimum="0" 
                                                Maximum="100" 
                                                Value="80"
                                                ValueChanged="BrightnessSlider_ValueChanged"
                                                Width="120"
                                                Margin="0,0,8,0" />
                                        <TextBlock x:Name="BrightnessValueText"
                                                   Grid.Column="1"
                                                   Text="80%" 
                                                   VerticalAlignment="Center" 
                                                   MinWidth="35"/>
                                    </Grid>
                                </toolkit:SettingsCard>

                                <!-- Rotation Control -->
                                <toolkit:SettingsCard Header="Rotation" 
                                                      Description="Display orientation">
                                    <toolkit:SettingsCard.HeaderIcon>
                                        <FontIcon Glyph="&#xE7AD;"/>
                                    </toolkit:SettingsCard.HeaderIcon>
                                    <StackPanel Orientation="Horizontal" Spacing="4">
                                        <RadioButton x:Name="Rotation0" Content="0°" GroupName="Rotation" IsChecked="True" Checked="RotationChanged" FontSize="11"/>
                                        <RadioButton x:Name="Rotation90" Content="90°" GroupName="Rotation" Checked="RotationChanged" FontSize="11"/>
                                        <RadioButton x:Name="Rotation180" Content="180°" GroupName="Rotation" Checked="RotationChanged" FontSize="11"/>
                                        <RadioButton x:Name="Rotation270" Content="270°" GroupName="Rotation" Checked="RotationChanged" FontSize="11"/>
                                    </StackPanel>
                                </toolkit:SettingsCard>
                            </toolkit:SettingsExpander.Items>
                        </toolkit:SettingsExpander>

                        <!-- Mode-specific Controls -->
                        <toolkit:SettingsExpander x:Name="ModeControlsExpander"
                                                  Header="Real-time Mode"
                                                  Description="Live display controls"
                                                  IsExpanded="False">
                            <toolkit:SettingsExpander.HeaderIcon>
                                <FontIcon x:Name="ModeControlsIcon" Glyph="&#xE8B3;"/>
                            </toolkit:SettingsExpander.HeaderIcon>
                            <toolkit:SettingsExpander.Items>
                                <!-- Real-time Mode Controls -->
                                <toolkit:SettingsCard x:Name="RealTimeModeCard"
                                                      Header="Live Display" 
                                                      Description="Enable real-time content streaming">
                                    <toolkit:SettingsCard.HeaderIcon>
                                        <FontIcon Glyph="&#xE8B3;"/>
                                    </toolkit:SettingsCard.HeaderIcon>
                                    <ToggleSwitch x:Name="LiveDisplayToggle"
                                                  Toggled="LiveDisplayToggle_Toggled"/>
                                </toolkit:SettingsCard>

                                <!-- Suspend Mode Controls -->
                                <toolkit:SettingsCard x:Name="SuspendModeCard"
                                                      Header="Suspend Media" 
                                                      Description="Manage device suspend media"
                                                      Visibility="Collapsed">
                                    <toolkit:SettingsCard.HeaderIcon>
                                        <FontIcon Glyph="&#xE7C4;"/>
                                    </toolkit:SettingsCard.HeaderIcon>
                                    <StackPanel Orientation="Horizontal" Spacing="8">
                                        <Button x:Name="ClearSuspendButton"
                                                ToolTipService.ToolTip="Clear All Suspend Media"
                                                FontSize="12"
                                                Padding="8,4"
                                                Click="ClearSuspendButton_Click">
                                            <StackPanel Orientation="Horizontal" Spacing="4">
                                                <FontIcon Glyph="&#xE74D;" FontSize="10"/>
                                                <TextBlock Text="Clear" FontSize="11"/>
                                            </StackPanel>
                                        </Button>
                                        <Button x:Name="RefreshSuspendButton"
                                                ToolTipService.ToolTip="Refresh Suspend Media"
                                                FontSize="12"
                                                Padding="8,4"
                                                Click="RefreshSuspendButton_Click">
                                            <StackPanel Orientation="Horizontal" Spacing="4">
                                                <FontIcon Glyph="&#xE72C;" FontSize="10"/>
                                                <TextBlock Text="Refresh" FontSize="11"/>
                                            </StackPanel>
                                        </Button>
                                    </StackPanel>
                                </toolkit:SettingsCard>
                            </toolkit:SettingsExpander.Items>
                        </toolkit:SettingsExpander>

                        <!-- Device Status -->
                        <toolkit:SettingsExpander Header="Device Status"
                                                  Description="Current device information">
                            <toolkit:SettingsExpander.HeaderIcon>
                                <FontIcon Glyph="&#xE946;"/>
                            </toolkit:SettingsExpander.HeaderIcon>
                            <toolkit:SettingsExpander.Items>
                                <toolkit:SettingsCard Header="Status" 
                                                      Description="Device operational state">
                                    <toolkit:SettingsCard.HeaderIcon>
                                        <FontIcon Glyph="&#xE7E6;"/>
                                    </toolkit:SettingsCard.HeaderIcon>
                                    <StackPanel Orientation="Horizontal" Spacing="8">
                                        <Ellipse x:Name="StatusIndicator" 
                                                 Width="12" Height="12" 
                                                 Fill="Gray" />
                                        <TextBlock x:Name="StatusText" 
                                                   Text="Unknown" 
                                                   VerticalAlignment="Center" />
                                    </StackPanel>
                                </toolkit:SettingsCard>

                                <toolkit:SettingsCard Header="Current Media" 
                                                      Description="Active content on device">
                                    <toolkit:SettingsCard.HeaderIcon>
                                        <FontIcon Glyph="&#xE8F1;"/>
                                    </toolkit:SettingsCard.HeaderIcon>
                                    <TextBlock x:Name="CurrentMediaText" 
                                               Text="None" 
                                               VerticalAlignment="Center" />
                                </toolkit:SettingsCard>

                                <toolkit:SettingsCard Header="Actions" 
                                                      Description="Device operations">
                                    <toolkit:SettingsCard.HeaderIcon>
                                        <FontIcon Glyph="&#xE713;"/>
                                    </toolkit:SettingsCard.HeaderIcon>
                                    <StackPanel Orientation="Horizontal" Spacing="8">
                                        <Button x:Name="RefreshStatusButton"
                                                ToolTipService.ToolTip="Refresh Device Status"
                                                FontSize="12"
                                                Padding="8,4"
                                                Click="RefreshStatusButton_Click">
                                            <FontIcon Glyph="&#xE72C;" FontSize="12"/>
                                        </Button>
                                        <Button x:Name="DeviceSettingsButton"
                                                ToolTipService.ToolTip="Open Device Settings"
                                                FontSize="12"
                                                Padding="8,4"
                                                Click="DeviceSettingsButton_Click">
                                            <FontIcon Glyph="&#xE115;" FontSize="12"/>
                                        </Button>
                                    </StackPanel>
                                </toolkit:SettingsCard>
                            </toolkit:SettingsExpander.Items>
                        </toolkit:SettingsExpander>

                    </StackPanel>
                </ScrollViewer>
            </Border>
        </Grid>
    </Grid>
</Page>
