<?xml version="1.0" encoding="utf-8" ?>
<UserControl x:Class="CDMDevicesManagerDevWinUI.Views.DeviceInfoCard"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="using:CDMDevicesManagerDevWinUI.Views"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d">

    <UserControl.Resources>
        <!-- Card Style -->
        <Style x:Key="DeviceCardStyle" TargetType="Border">
            <Setter Property="Background" Value="{ThemeResource CardBackgroundFillColorDefaultBrush}" />
            <Setter Property="BorderBrush" Value="{ThemeResource CardStrokeColorDefaultBrush}" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="CornerRadius" Value="8" />
            <Setter Property="Padding" Value="16" />
            <Setter Property="Margin" Value="8" />
            <Setter Property="MinWidth" Value="300" />
            <Setter Property="MaxWidth" Value="400" />
        </Style>

        <!-- Button Styles -->
        <Style x:Key="ActionButtonStyle" TargetType="Button">
            <Setter Property="Height" Value="32" />
            <Setter Property="MinWidth" Value="80" />
            <Setter Property="Margin" Value="4,0" />
            <Setter Property="CornerRadius" Value="4" />
        </Style>

        <Style x:Key="PrimaryActionButtonStyle" TargetType="Button" BasedOn="{StaticResource ActionButtonStyle}">
            <Setter Property="Background" Value="{ThemeResource AccentButtonBackground}" />
            <Setter Property="Foreground" Value="{ThemeResource AccentButtonForeground}" />
        </Style>

        <Style x:Key="SecondaryActionButtonStyle" TargetType="Button" BasedOn="{StaticResource ActionButtonStyle}">
            <Setter Property="Background" Value="{ThemeResource ButtonBackground}" />
            <Setter Property="Foreground" Value="{ThemeResource ButtonForeground}" />
        </Style>
    </UserControl.Resources>

    <Border Style="{StaticResource DeviceCardStyle}">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <!-- Header with Device Icon and Status -->
            <Grid Grid.Row="0" Margin="0,0,0,12">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <!-- Device Icon -->
                <Border Grid.Column="0" 
                        Background="{ThemeResource AccentButtonBackground}"
                        CornerRadius="20"
                        Width="40" 
                        Height="40" 
                        Margin="0,0,12,0">
                    <FontIcon Glyph="&#xE767;" 
                              FontSize="20" 
                              Foreground="White" 
                              HorizontalAlignment="Center" 
                              VerticalAlignment="Center"/>
                </Border>

                <!-- Device Name -->
                <StackPanel Grid.Column="1" VerticalAlignment="Center">
                    <TextBlock Text="{x:Bind ProductName, Mode=OneWay}" 
                               Style="{StaticResource BodyStrongTextBlockStyle}" 
                               TextWrapping="Wrap" />
                    <TextBlock Text="{x:Bind ManufacturerName, Mode=OneWay}" 
                               Style="{StaticResource CaptionTextBlockStyle}" 
                               Foreground="{ThemeResource TextFillColorSecondaryBrush}" />
                </StackPanel>

                <!-- Status Indicator -->
                <Border Grid.Column="2" 
                        Background="{x:Bind GetStatusBrush(IsConnected), Mode=OneWay}"
                        CornerRadius="6"
                        Width="12" 
                        Height="12" 
                        VerticalAlignment="Top" />
            </Grid>

            <!-- Device Information -->
            <StackPanel Grid.Row="1" Spacing="8" Margin="0,0,0,16">
                <!-- Serial Number -->
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Column="0" 
                               Text="Serial Number:" 
                               Style="{StaticResource CaptionTextBlockStyle}" 
                               Foreground="{ThemeResource TextFillColorSecondaryBrush}" 
                               Width="90" />
                    <TextBlock Grid.Column="1" 
                               Text="{x:Bind SerialNumber, Mode=OneWay}" 
                               Style="{StaticResource CaptionTextBlockStyle}" 
                               TextWrapping="Wrap" />
                </Grid>

                <!-- Connection Status -->
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Column="0" 
                               Text="Status:" 
                               Style="{StaticResource CaptionTextBlockStyle}" 
                               Foreground="{ThemeResource TextFillColorSecondaryBrush}" 
                               Width="90" />
                    <TextBlock Grid.Column="1" 
                               Text="{x:Bind GetStatusText(IsConnected), Mode=OneWay}" 
                               Style="{StaticResource CaptionTextBlockStyle}" 
                               Foreground="{x:Bind GetStatusBrush(IsConnected), Mode=OneWay}" />
                </Grid>
            </StackPanel>

            <!-- Quick Actions -->
            <StackPanel Grid.Row="2" Orientation="Horizontal" Spacing="8" Margin="0,0,0,12">
                <Button ToolTipService.ToolTip="Refresh Device"
                        Style="{StaticResource ActionButtonStyle}"
                        Click="RefreshButton_Click">
                    <FontIcon Glyph="&#xE72C;" FontSize="14" />
                </Button>

                <Button ToolTipService.ToolTip="Test Connection"
                        Style="{StaticResource ActionButtonStyle}"
                        Click="TestButton_Click">
                    <FontIcon Glyph="&#xE7C8;" FontSize="14" />
                </Button>
            </StackPanel>

            <!-- Main Action Buttons -->
            <StackPanel Grid.Row="3" Orientation="Horizontal" Spacing="8" Margin="0,0,0,8">
                <Button Style="{StaticResource PrimaryActionButtonStyle}"
                        Click="SettingsButton_Click"
                        IsEnabled="{x:Bind IsConnected, Mode=OneWay}">
                    <StackPanel Orientation="Horizontal" Spacing="6">
                        <FontIcon Glyph="&#xE713;" FontSize="14" />
                        <TextBlock Text="Settings" />
                    </StackPanel>
                </Button>

                <Button Style="{StaticResource SecondaryActionButtonStyle}"
                        Click="ConfigButton_Click"
                        IsEnabled="{x:Bind IsConnected, Mode=OneWay}">
                    <StackPanel Orientation="Horizontal" Spacing="6">
                        <FontIcon Glyph="&#xE70F;" FontSize="14" />
                        <TextBlock Text="Config" />
                    </StackPanel>
                </Button>
            </StackPanel>

            <!-- Advanced Actions (Collapsible) -->
            <Expander Grid.Row="4" 
                      Header="Advanced Actions" 
                      IsExpanded="False"
                      HorizontalAlignment="Stretch"
                      HorizontalContentAlignment="Stretch">
                <StackPanel Spacing="8" Margin="0,8,0,0">
                    <StackPanel Orientation="Horizontal" Spacing="8">
                        <Button Style="{StaticResource ActionButtonStyle}"
                                Click="LiveViewButton_Click"
                                IsEnabled="{x:Bind IsConnected, Mode=OneWay}"
                                MinWidth="100">
                            <StackPanel Orientation="Horizontal" Spacing="4">
                                <FontIcon Glyph="&#xE714;" FontSize="12" />
                                <TextBlock Text="Live View" FontSize="12" />
                            </StackPanel>
                        </Button>

                        <Button Style="{StaticResource ActionButtonStyle}"
                                Click="DiagnosticsButton_Click"
                                IsEnabled="{x:Bind IsConnected, Mode=OneWay}"
                                MinWidth="100">
                            <StackPanel Orientation="Horizontal" Spacing="4">
                                <FontIcon Glyph="&#xE9D9;" FontSize="12" />
                                <TextBlock Text="Diagnostics" FontSize="12" />
                            </StackPanel>
                        </Button>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" Spacing="8">
                        <Button Style="{StaticResource ActionButtonStyle}"
                                Click="FirmwareUpdateButton_Click"
                                IsEnabled="{x:Bind IsConnected, Mode=OneWay}"
                                MinWidth="100">
                            <StackPanel Orientation="Horizontal" Spacing="4">
                                <FontIcon Glyph="&#xE896;" FontSize="12" />
                                <TextBlock Text="Update" FontSize="12" />
                            </StackPanel>
                        </Button>

                        <Button Style="{StaticResource ActionButtonStyle}"
                                Click="ResetButton_Click"
                                IsEnabled="{x:Bind IsConnected, Mode=OneWay}"
                                MinWidth="100">
                            <StackPanel Orientation="Horizontal" Spacing="4">
                                <FontIcon Glyph="&#xE777;" FontSize="12" />
                                <TextBlock Text="Reset" FontSize="12" />
                            </StackPanel>
                        </Button>
                    </StackPanel>
                </StackPanel>
            </Expander>
        </Grid>
    </Border>
</UserControl>