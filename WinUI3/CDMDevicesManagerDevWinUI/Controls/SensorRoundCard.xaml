<?xml version="1.0" encoding="utf-8"?>
<UserControl
    x:Class="CDMDevicesManagerDevWinUI.Controls.SensorRoundCard"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:CDMDevicesManagerDevWinUI.Controls"
    xmlns:dev="using:DevWinUI"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <StackPanel Spacing="8" Width="180">
        <TextBlock Text="{x:Bind SensorData.Name}" FontSize="14" FontWeight="Bold" Foreground="White" HorizontalAlignment="Center"/>
        <TextBlock Text="{x:Bind SensorData.SubTitle}" FontSize="10" Foreground="#FF9E9E9E" HorizontalAlignment="Center" TextWrapping="Wrap"/>
        <Grid Width="120" Height="120" HorizontalAlignment="Center">
            <!-- Background Circle --><!--
            <Ellipse Stroke="#FF3E3E3E" StrokeThickness="6" Width="120" Height="120"/>
             --><!--Progress Circle--><!-- 
            <Ellipse Stroke="{x:Bind StrokeColor, FallbackValue=#FF00BCD4}" StrokeThickness="6" Width="120" Height="120"
                    StrokeDashArray="251.2" 
                    StrokeDashOffset="{x:Bind CalculateStrokeDashOffset(SensorData.Value), Mode=OneWay}"
                    RenderTransformOrigin="0.5,0.5">
                <Ellipse.RenderTransform>
                    <RotateTransform Angle="-90"/>
                </Ellipse.RenderTransform>
            </Ellipse>-->
            <ProgressRing Width="120" Height="120" Value="{x:Bind SensorData.Value}"
              IsIndeterminate="False"
              Background="LightGray">
                <ProgressRing.RenderTransform>
                    <RotateTransform Angle="0"/>
                </ProgressRing.RenderTransform>
            </ProgressRing>
            <!--<dev:StorageRing StartAngle="180" ValueRingThickness="5" TrackRingThickness="2"  Percent="10"  PercentCaution="30" PercentCritical="60"  Width="120" Height="120" Value="{x:Bind SensorData.Value}" />
            <dev:WaveProgressBar  Width="120" Height="120" Minimum="0" Maximum="100"  Value="{x:Bind SensorData.Value}"/>-->
            <!-- Percentage Text -->
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                <TextBlock Text="{x:Bind SensorData.Value, Mode=OneWay}" FontSize="24" FontWeight="Bold" Foreground="White" HorizontalAlignment="Center"/>
                <TextBlock Text="{x:Bind SensorData.Unit}" FontSize="12" Foreground="#FF9E9E9E" HorizontalAlignment="Center" Margin="0,-4,0,0"/>
            </StackPanel>
        </Grid>
    </StackPanel>
</UserControl>
