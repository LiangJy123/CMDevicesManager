<Window x:Class="CMDevicesManager.Windows.ConfigSelectionDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:CMDevicesManager.Windows"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        AllowsTransparency="True"
        WindowStyle="None"
        ResizeMode="NoResize"
		 WindowStartupLocation="CenterOwner"
        ShowInTaskbar="False"
        Width="620" Height="520"
        Background="Transparent"
        PreviewKeyDown="Window_PreviewKeyDown">

    <Window.Resources>
        <!-- Basic Colors -->
        <Color x:Key="DlgBgColor">#1E242A</Color>
        <Color x:Key="DlgCardColor">#262D35</Color>
        <Color x:Key="DlgBorderColor">#393F47</Color>
        <Color x:Key="DlgAccentColor">#4D79F6</Color>
        <Color x:Key="DlgAccentColorLight">#6A93FF</Color>
        <Color x:Key="DlgTextColor">#F2F4F6</Color>
        <Color x:Key="DlgSubTextColor">#9AA2AD</Color>
        <Color x:Key="DlgHoverColor">#14FFFFFF</Color>
        <Color x:Key="DlgSelectedBg">#334D79F6</Color>

        <!-- Brushes -->
        <SolidColorBrush x:Key="DlgBgBrush" Color="{StaticResource DlgBgColor}"/>
        <SolidColorBrush x:Key="DlgCardBrush" Color="{StaticResource DlgCardColor}"/>
        <SolidColorBrush x:Key="DlgBorderBrush" Color="{StaticResource DlgBorderColor}"/>
        <SolidColorBrush x:Key="DlgAccentBrush" Color="{StaticResource DlgAccentColor}"/>
        <SolidColorBrush x:Key="DlgAccentBrushLight" Color="{StaticResource DlgAccentColorLight}"/>
        <SolidColorBrush x:Key="DlgTextBrush" Color="{StaticResource DlgTextColor}"/>
        <SolidColorBrush x:Key="DlgSubTextBrush" Color="{StaticResource DlgSubTextColor}"/>
        <SolidColorBrush x:Key="DlgHoverBrush" Color="{StaticResource DlgHoverColor}"/>
        <SolidColorBrush x:Key="DlgSelectedBgBrush" Color="{StaticResource DlgSelectedBg}"/>

        <BooleanToVisibilityConverter x:Key="BoolToVis"/>

        <!-- Button Style -->
        <Style x:Key="DlgPrimaryButton" TargetType="Button">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Background" Value="{StaticResource DlgAccentBrush}"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="10,4"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border CornerRadius="8"
                                Background="{TemplateBinding Background}">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Opacity" Value="0.88"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Opacity" Value="0.72"/>
                </Trigger>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Background" Value="#444"/>
                    <Setter Property="Opacity" Value="0.5"/>
                    <Setter Property="Cursor" Value="Arrow"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="DlgSecondaryButton" TargetType="Button" BasedOn="{StaticResource DlgPrimaryButton}">
            <Setter Property="Background" Value="#283038"/>
            <Setter Property="Foreground" Value="{StaticResource DlgTextBrush}"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#32404A"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Opacity" Value="0.75"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- ListViewItem Style -->
        <Style TargetType="ListViewItem">
            <Setter Property="Padding" Value="4"/>
            <Setter Property="Margin" Value="0,4,0,0"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Foreground" Value="{StaticResource DlgTextBrush}"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ListViewItem">
                        <Border x:Name="Root"
                                CornerRadius="10"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}">
                            <ContentPresenter Margin="0" />
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Root" Property="Background" Value="{StaticResource DlgHoverBrush}"/>
                            </Trigger>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter TargetName="Root" Property="Background" Value="{StaticResource DlgSelectedBgBrush}"/>
                                <Setter Property="BorderBrush" Value="{StaticResource DlgAccentBrushLight}"/>
                                <Setter Property="BorderThickness" Value="1"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Opacity" Value="0.55"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

    </Window.Resources>

    <Grid>
        <Border CornerRadius="18"
                Background="{StaticResource DlgBgBrush}"
                Padding="0"
                BorderBrush="{StaticResource DlgBorderBrush}"
                BorderThickness="1">
            <Border.Effect>
                <DropShadowEffect BlurRadius="28" ShadowDepth="0" Opacity="0.55" Color="#000000"/>
            </Border.Effect>

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Title bar -->
                <Grid Grid.Row="0" Height="48" Background="{StaticResource DlgCardBrush}" MouseLeftButtonDown="TitleBar_MouseLeftButtonDown">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="Select Configuration"
                               FontSize="16"
                               FontWeight="SemiBold"
                               VerticalAlignment="Center"
                               Margin="18,0,0,0"
                               Foreground="{StaticResource DlgTextBrush}"/>
                    <Button Grid.Column="1"
                            Width="36" Height="36"
                            Margin="0,6,10,6"
                            Click="BtnClose_Click"
                            Background="Transparent"
                            BorderThickness="0"
                            ToolTip="Close"
                            Cursor="Hand">
                        <Path Data="M6,6 L12,12 M12,6 L6,12"
                              StrokeThickness="2"
                              Stroke="{StaticResource DlgSubTextBrush}"
                              StrokeEndLineCap="Round"
                              StrokeStartLineCap="Round"/>
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Grid Background="{TemplateBinding Background}">
                                                <ContentPresenter HorizontalAlignment="Center"
                                                                  VerticalAlignment="Center"/>
                                            </Grid>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#1FFFFFFF"/>
                                    </Trigger>
                                    <Trigger Property="IsPressed" Value="True">
                                        <Setter Property="Background" Value="#33FFFFFF"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                </Grid>

                <!-- Search box -->
                <DockPanel Grid.Row="1" Margin="18,10,18,4">
                    <Border CornerRadius="10"
                            Background="{StaticResource DlgCardBrush}"
                            Padding="10,6"
                            Height="40"
                            BorderBrush="{StaticResource DlgBorderBrush}"
                            BorderThickness="1">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Path Data="M12,11 L16,15 M9,3 A6,6 0 1 1 8.999,3.01"
                                  Stroke="{StaticResource DlgSubTextBrush}"
                                  StrokeThickness="2"
                                  StrokeStartLineCap="Round"
                                  StrokeEndLineCap="Round"
                                  Width="18" Height="18"
                                  VerticalAlignment="Center"
                                  Margin="2,0,8,0"/>
                            <TextBox x:Name="SearchBox"
                                     Grid.Column="1"
                                     BorderThickness="0"
                                     Background="Transparent"
                                     Foreground="{StaticResource DlgTextBrush}"
                                     FontSize="14"
                                     VerticalContentAlignment="Center"
                                     TextChanged="SearchBox_TextChanged"
                                     ToolTip="Search"
                                     />
                        </Grid>
                    </Border>
                </DockPanel>

                <!-- List -->
                <ListView x:Name="ListViewConfigs"
                          Grid.Row="2"
                          Margin="18,4,18,10"
                          BorderThickness="0"
                          Background="Transparent"
                          Foreground="{StaticResource DlgTextBrush}"
                          ScrollViewer.VerticalScrollBarVisibility="Auto"
                          SelectionMode="Single"
                          MouseDoubleClick="ListViewConfigs_MouseDoubleClick">
                    <ListView.ItemTemplate>
                        <!-- NOTE: '+' used for nested type -->
                        <DataTemplate DataType="{x:Type local:ConfigSelectionDialog+ConfigListItem}">
                            <Grid Margin="4,2,4,6" ToolTip="{Binding Path}">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="104"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <Border Grid.Column="0"
                                        CornerRadius="10"
                                        Background="#20262C"
                                        Height="76"
                                        SnapsToDevicePixels="True"
                                        BorderBrush="{StaticResource DlgBorderBrush}"
                                        BorderThickness="1">
                                    <Image Source="{Binding PreviewImage}"
                                           Stretch="UniformToFill"
                                           SnapsToDevicePixels="True"
                                           RenderOptions.BitmapScalingMode="HighQuality"/>
                                </Border>

                                <StackPanel Grid.Column="1"
                                            Margin="14,4,4,4"
                                            VerticalAlignment="Center">
                                    <TextBlock Text="{Binding DisplayName}"
                                               FontSize="15"
                                               FontWeight="SemiBold"
                                               TextTrimming="CharacterEllipsis"
                                               Foreground="{StaticResource DlgTextBrush}"/>
                                    <TextBlock Text="{Binding Path}"
                                               FontSize="11"
                                               Foreground="{StaticResource DlgSubTextBrush}"
                                               Margin="0,6,0,0"
                                               TextTrimming="CharacterEllipsis"
                                               Visibility="{Binding RelativeSource={RelativeSource AncestorType=Window}, Path=ShowPathInList, Converter={StaticResource BoolToVis}}"/>
                                </StackPanel>
                            </Grid>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>

                <!-- Buttons -->
                <StackPanel Grid.Row="3"
                            Margin="18,4,18,18"
                            Orientation="Horizontal"
                            HorizontalAlignment="Right">
                    <Button x:Name="BtnLoad"
                            Width="120" Height="40"
                            Margin="0,0,14,0"
                            Click="BtnLoad_Click"
                            Content="Load"
                            Style="{StaticResource DlgPrimaryButton}"/>
                    <Button x:Name="BtnCancel"
                            Width="100" Height="40"
                            Click="BtnCancel_Click"
                            Content="Cancel"
                            Style="{StaticResource DlgSecondaryButton}"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>