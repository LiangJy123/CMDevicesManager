<Window x:Class="CMDevicesManager.Windows.PlayModePromptDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="{DynamicResource PlayModePrompt_Title}"
        Width="460" Height="270"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        ShowInTaskbar="False"
        FontFamily="{DynamicResource AppFontFamily}"
        FocusManager.FocusedElement="{Binding ElementName=GoButton}">

    <Window.Resources>
        <!-- ✅ 深蓝紫渐变配色方案 - 与 ColorPickerWindow 一致 -->
        <LinearGradientBrush x:Key="WindowBg" StartPoint="0,0" EndPoint="1,1" Opacity="0.98">
            <GradientStop Color="#1A1F3A" Offset="0.0"/>
            <GradientStop Color="#2D1B3D" Offset="1.0"/>
        </LinearGradientBrush>

        <LinearGradientBrush x:Key="CardBg" StartPoint="0,0" EndPoint="1,1" Opacity="0.6">
            <GradientStop Color="#1A1F3A" Offset="0.0"/>
            <GradientStop Color="#2A2045" Offset="1.0"/>
        </LinearGradientBrush>

        <SolidColorBrush x:Key="CardBorder" Color="#5B7FFF" Opacity="0.5"/>
        <SolidColorBrush x:Key="TitleBrush" Color="#FFFFFF"/>
        <SolidColorBrush x:Key="SubtitleBrush" Color="#B8C5FF"/>
        <SolidColorBrush x:Key="AccentBrush" Color="#5B7FFF"/>
        <SolidColorBrush x:Key="AccentHoverBrush" Color="#7B8FFF"/>
        <SolidColorBrush x:Key="CyanAccentBrush" Color="#00D9FF"/>

        <!-- ✅ 紫色光晕阴影 -->
        <DropShadowEffect x:Key="WindowShadow" 
                          Color="#6B4FFF"
                          Direction="270" 
                          ShadowDepth="8"
                          Opacity="0.5" 
                          BlurRadius="20"/>

        <!-- ✅ 主按钮样式 - 蓝紫渐变 -->
        <Style x:Key="ActionButtonStyle" TargetType="Button">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="14,8"/>
            <Setter Property="Margin" Value="10,0,0,0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <Setter Property="Background">
                <Setter.Value>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                        <GradientStop Color="#5B7FFF" Offset="0"/>
                        <GradientStop Color="#7B8FFF" Offset="1"/>
                    </LinearGradientBrush>
                </Setter.Value>
            </Setter>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="bd"
                                CornerRadius="8"
                                Background="{TemplateBinding Background}"
                                Padding="{TemplateBinding Padding}">
                            <Border.Effect>
                                <DropShadowEffect Color="#5B7FFF" BlurRadius="8" ShadowDepth="0" Opacity="0.4"/>
                            </Border.Effect>
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="bd" Property="Background">
                                    <Setter.Value>
                                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                            <GradientStop Color="#7B8FFF" Offset="0"/>
                                            <GradientStop Color="#8B9FFF" Offset="1"/>
                                        </LinearGradientBrush>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="bd" Property="Background">
                                    <Setter.Value>
                                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                            <GradientStop Color="#4B6FEF" Offset="0"/>
                                            <GradientStop Color="#5B7FFF" Offset="1"/>
                                        </LinearGradientBrush>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="bd" Property="Opacity" Value="0.5"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- ✅ 次要按钮样式 -->
        <Style x:Key="SecondaryButtonStyle" TargetType="Button" BasedOn="{StaticResource ActionButtonStyle}">
            <Setter Property="Background" Value="#30FFFFFF"/>
            <Setter Property="Foreground" Value="{StaticResource SubtitleBrush}"/>
            <Setter Property="FontWeight" Value="Normal"/>
        </Style>

        <!-- ✅ CheckBox 样式 -->
        <Style TargetType="CheckBox">
            <Setter Property="Foreground" Value="{StaticResource SubtitleBrush}"/>
            <Setter Property="FontSize" Value="13"/>
        </Style>
    </Window.Resources>

    <!-- ✅ 外层容器 - 深蓝紫渐变 + 紫色光晕 -->
    <Border CornerRadius="16"
            Background="{StaticResource WindowBg}"
            BorderBrush="{StaticResource CardBorder}"
            BorderThickness="1.5"
            Effect="{StaticResource WindowShadow}"
            SnapsToDevicePixels="True">
        <Grid Margin="18" MouseLeftButtonDown="WindowDragArea_MouseLeftButtonDown">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- ✅ 标题栏 -->
            <Grid Grid.Row="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <TextBlock Text="{DynamicResource PlayModePrompt_Title}"
                           FontSize="20"
                           FontWeight="Bold"
                           Foreground="{StaticResource TitleBrush}"
                           VerticalAlignment="Center"
                           Margin="0,0,0,12">
                    <TextBlock.Effect>
                        <DropShadowEffect Color="#00D9FF" 
                                          ShadowDepth="0" 
                                          BlurRadius="10" 
                                          Opacity="0.5"/>
                    </TextBlock.Effect>
                </TextBlock>
                <Button Grid.Column="1"
                        Width="32" Height="28"
                        Content="✕"
                        Padding="0"
                        Style="{StaticResource SecondaryButtonStyle}"
                        Margin="0,0,0,12"
                        Click="LaterButton_Click"
                        ToolTip="{DynamicResource CloseTooltip}"/>
            </Grid>

            <!-- ✅ 内容区 -->
            <StackPanel Grid.Row="1" Margin="0,0,0,0">
                <TextBlock Text="{DynamicResource PlayModePrompt_Message}"
                           TextWrapping="Wrap"
                           Foreground="{StaticResource SubtitleBrush}"
                           FontSize="15"
                           Margin="0,0,0,14"/>

                <!-- ✅ 说明卡片 -->
                <Border Background="{StaticResource CardBg}"
                        BorderBrush="{StaticResource CardBorder}"
                        BorderThickness="1.5"
                        CornerRadius="10"
                        Padding="14"
                        Margin="0,0,0,14">
                    <StackPanel>
                        <TextBlock Text="{DynamicResource PlayModePrompt_DescriptionTitle}"
                                   Foreground="{StaticResource TitleBrush}"
                                   FontSize="14"
                                   FontWeight="SemiBold"/>
                        <TextBlock Text="{DynamicResource PlayModePrompt_DescriptionBody}"
                                   Margin="0,6,0,0"
                                   TextWrapping="Wrap"
                                   Foreground="{StaticResource SubtitleBrush}"
                                   FontSize="12"/>
                    </StackPanel>
                </Border>

                <CheckBox x:Name="DontRemindCheck"
                          Content="{DynamicResource PlayModePrompt_DontRemind}"
                          Margin="0,0,0,0"/>
            </StackPanel>

            <!-- ✅ 底部按钮 -->
            <StackPanel Grid.Row="2"
                        Orientation="Horizontal"
                        HorizontalAlignment="Right"
                        Margin="0,18,0,0">
                <Button x:Name="GoButton"
                        Content="{DynamicResource PlayModePrompt_GoButton}"
                        Width="110"
                        Style="{StaticResource ActionButtonStyle}"
                        IsDefault="True"
                        Click="GoButton_Click"/>
                <Button Content="{DynamicResource PlayModePrompt_LaterButton}"
                        Width="110"
                        Style="{StaticResource SecondaryButtonStyle}"
                        IsCancel="True"
                        Click="LaterButton_Click"/>
            </StackPanel>
        </Grid>
    </Border>
</Window>