<Window x:Class="CMDevicesManager.Windows.ColorPickerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="{DynamicResource ColorPicker_Title}"
        Width="650" Height="450"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        FontFamily="{DynamicResource AppFontFamily}"
        FocusManager.FocusedElement="{Binding ElementName=TxtHex}">

    <Window.Resources>
        <!-- ✅ 深蓝紫渐变配色方案 -->
        <LinearGradientBrush x:Key="CardBg" StartPoint="0,0" EndPoint="1,1" Opacity="0.95">
            <GradientStop Color="#1A1F3A" Offset="0.0"/>
            <GradientStop Color="#2D1B3D" Offset="1.0"/>
        </LinearGradientBrush>

        <LinearGradientBrush x:Key="SubPanelBg" StartPoint="0,0" EndPoint="1,1" Opacity="0.6">
            <GradientStop Color="#1A1F3A" Offset="0.0"/>
            <GradientStop Color="#2A2045" Offset="1.0"/>
        </LinearGradientBrush>

        <SolidColorBrush x:Key="CardBorder" Color="#5B7FFF" Opacity="0.5"/>
        <SolidColorBrush x:Key="TitleBrush" Color="#FFFFFF"/>
        <SolidColorBrush x:Key="SubtitleBrush" Color="#B8C5FF"/>
        <SolidColorBrush x:Key="AccentBrush" Color="#5B7FFF"/>
        <SolidColorBrush x:Key="AccentHoverBrush" Color="#7B8FFF"/>
        <SolidColorBrush x:Key="CyanAccentBrush" Color="#00D9FF"/>

        <!-- ✅ 紫色光晕阴影 -->
        <DropShadowEffect x:Key="CardShadow" 
                          Color="#6B4FFF"
                          Direction="270" 
                          ShadowDepth="8"
                          Opacity="0.5" 
                          BlurRadius="20"/>

        <DropShadowEffect x:Key="SmallShadow" 
                          Color="#5B7FFF"
                          Direction="270" 
                          ShadowDepth="2"
                          Opacity="0.3" 
                          BlurRadius="8"/>

        <!-- ✅ 卡片边框样式 -->
        <Style x:Key="CardBorderStyle" TargetType="Border">
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Background" Value="{StaticResource SubPanelBg}"/>
            <Setter Property="BorderBrush" Value="{StaticResource CardBorder}"/>
            <Setter Property="BorderThickness" Value="1.5"/>
            <Setter Property="SnapsToDevicePixels" Value="True"/>
            <Setter Property="Padding" Value="12"/>
            <Setter Property="Effect" Value="{StaticResource SmallShadow}"/>
        </Style>

        <!-- ✅ 主按钮样式 - 蓝紫渐变 -->
        <Style x:Key="ActionButtonStyle" TargetType="Button">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="10,6"/>
            <Setter Property="Margin" Value="6,0,0,0"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Background">
                <Setter.Value>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                        <GradientStop Color="#5B7FFF" Offset="0"/>
                        <GradientStop Color="#7B8FFF" Offset="1"/>
                    </LinearGradientBrush>
                </Setter.Value>
            </Setter>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="bd"
                                CornerRadius="8"
                                Background="{TemplateBinding Background}"
                                Padding="{TemplateBinding Padding}">
                            <Border.Effect>
                                <DropShadowEffect Color="#5B7FFF" BlurRadius="8" ShadowDepth="0" Opacity="0.4"/>
                            </Border.Effect>
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="bd" Property="Background">
                                    <Setter.Value>
                                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                            <GradientStop Color="#7B8FFF" Offset="0"/>
                                            <GradientStop Color="#8B9FFF" Offset="1"/>
                                        </LinearGradientBrush>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="bd" Property="Background">
                                    <Setter.Value>
                                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                            <GradientStop Color="#4B6FEF" Offset="0"/>
                                            <GradientStop Color="#5B7FFF" Offset="1"/>
                                        </LinearGradientBrush>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="bd" Property="Opacity" Value="0.45"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- ✅ 次要按钮样式 -->
        <Style x:Key="SecondaryButtonStyle" TargetType="Button" BasedOn="{StaticResource ActionButtonStyle}">
            <Setter Property="Background" Value="#30FFFFFF"/>
            <Setter Property="Foreground" Value="{StaticResource SubtitleBrush}"/>
        </Style>

        <!-- ✅ 输入框样式 -->
        <Style x:Key="InputBoxStyle" TargetType="TextBox">
            <Setter Property="Foreground" Value="{StaticResource TitleBrush}"/>
            <Setter Property="Background">
                <Setter.Value>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1" Opacity="0.4">
                        <GradientStop Color="#1A1F3A" Offset="0.0"/>
                        <GradientStop Color="#2A2045" Offset="1.0"/>
                    </LinearGradientBrush>
                </Setter.Value>
            </Setter>
            <Setter Property="BorderBrush" Value="{StaticResource CardBorder}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="6,4"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <Setter Property="CaretBrush" Value="{StaticResource CyanAccentBrush}"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="6">
                            <ScrollViewer x:Name="PART_ContentHost" 
                                          Padding="{TemplateBinding Padding}"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <!-- ✅ 外层容器 - 深蓝紫渐变 + 紫色光晕 -->
    <Border CornerRadius="16"
            BorderThickness="1.5"
            SnapsToDevicePixels="True"
            Effect="{StaticResource CardShadow}">
        <Border.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1" Opacity="0.98">
                <GradientStop Color="#1A1F3A" Offset="0.0"/>
                <GradientStop Color="#2D1B3D" Offset="1.0"/>
            </LinearGradientBrush>
        </Border.Background>
        <Border.BorderBrush>
            <SolidColorBrush Color="#5B7FFF" Opacity="0.6"/>
        </Border.BorderBrush>

        <Grid Margin="16" MouseLeftButtonDown="WindowDragArea_MouseLeftButtonDown">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- ✅ 标题栏 -->
            <Grid Grid.Row="0" Margin="0,0,0,12">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <TextBlock Text="{DynamicResource ColorPicker_Title}"
                           FontSize="20"
                           FontWeight="Bold"
                           Foreground="{StaticResource TitleBrush}"
                           VerticalAlignment="Center">
                    <TextBlock.Effect>
                        <DropShadowEffect Color="#00D9FF" 
                                          ShadowDepth="0" 
                                          BlurRadius="10" 
                                          Opacity="0.5"/>
                    </TextBlock.Effect>
                </TextBlock>
                <Button Grid.Column="1"
                        Width="32" Height="28"
                        Content="✕"
                        Style="{StaticResource SecondaryButtonStyle}"
                        Click="CloseButton_Click"
                        ToolTip="{DynamicResource CloseTooltip}"
                        Margin="0"/>
            </Grid>

            <!-- ✅ 主内容区 -->
            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="360"/>
                    <ColumnDefinition Width="12"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- ✅ 色轮面板 -->
                <Border x:Name="WheelBorder"
                        Grid.Column="0"
                        Style="{StaticResource CardBorderStyle}"
                        Padding="0"
                        VerticalAlignment="Stretch"
                        SizeChanged="WheelBorder_SizeChanged">
                    <Grid x:Name="WheelContainer">
                        <Image x:Name="ColorWheel"
                               Stretch="Uniform"
                               MouseDown="ColorWheel_MouseDown"
                               MouseMove="ColorWheel_MouseMove"
                               MouseUp="ColorWheel_MouseUp"
                               Cursor="Cross"
                               SnapsToDevicePixels="True"
                               RenderOptions.BitmapScalingMode="HighQuality"
                               Source="/Resources/ColorWheelPicker.png"/>
                        <Canvas x:Name="MarkerLayer" IsHitTestVisible="False">
                            <Ellipse x:Name="Marker"
                                     Width="20" Height="20"
                                     Stroke="#FFFFFF"
                                     StrokeThickness="2.5"
                                     Fill="#40FFFFFF"
                                     Visibility="Collapsed">
                                <Ellipse.Effect>
                                    <DropShadowEffect Color="#00D9FF" BlurRadius="12" ShadowDepth="0" Opacity="0.7"/>
                                </Ellipse.Effect>
                            </Ellipse>
                        </Canvas>
                    </Grid>
                </Border>

                <!-- ✅ RGB/HEX 面板 -->
                <Border Grid.Column="2" 
                        Style="{StaticResource CardBorderStyle}"
                        VerticalAlignment="Stretch">
                    <StackPanel VerticalAlignment="Center">
                        <TextBlock Text="{DynamicResource ColorPicker_RGB}" 
                                   FontSize="14" 
                                   FontWeight="SemiBold" 
                                   Foreground="{StaticResource SubtitleBrush}"
                                   Margin="0,0,0,8"/>

                        <Grid Margin="0,0,0,0">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="28"/>
                                <ColumnDefinition Width="70"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <!-- R -->
                            <TextBlock Text="R" Grid.Row="0" Grid.Column="0" 
                                       VerticalAlignment="Center" 
                                       Foreground="{StaticResource SubtitleBrush}"/>
                            <TextBox x:Name="TxtR" Grid.Row="0" Grid.Column="1" 
                                     Style="{StaticResource InputBoxStyle}"
                                     PreviewTextInput="Rgb_PreviewTextInput" 
                                     TextChanged="Rgb_TextChanged"/>
                            <Border x:Name="BarRHost" Grid.Row="0" Grid.Column="2" 
                                    Height="8" Margin="8,0,0,0" CornerRadius="4" 
                                    Background="#20FFFFFF" 
                                    SizeChanged="BarHost_SizeChanged">
                                <Grid ClipToBounds="True">
                                    <Border x:Name="BarR" CornerRadius="4" 
                                            Background="#FF5B7FFF" 
                                            HorizontalAlignment="Left" Width="0"/>
                                </Grid>
                            </Border>

                            <!-- G -->
                            <TextBlock Text="G" Grid.Row="1" Grid.Column="0" 
                                       VerticalAlignment="Center" 
                                       Foreground="{StaticResource SubtitleBrush}" 
                                       Margin="0,6,0,0"/>
                            <TextBox x:Name="TxtG" Grid.Row="1" Grid.Column="1" 
                                     Style="{StaticResource InputBoxStyle}" 
                                     Margin="0,6,0,0"
                                     PreviewTextInput="Rgb_PreviewTextInput" 
                                     TextChanged="Rgb_TextChanged"/>
                            <Border x:Name="BarGHost" Grid.Row="1" Grid.Column="2" 
                                    Height="8" Margin="8,6,0,0" CornerRadius="4" 
                                    Background="#20FFFFFF" 
                                    SizeChanged="BarHost_SizeChanged">
                                <Grid ClipToBounds="True">
                                    <Border x:Name="BarG" CornerRadius="4" 
                                            Background="#5BFF7F" 
                                            HorizontalAlignment="Left" Width="0"/>
                                </Grid>
                            </Border>

                            <!-- B -->
                            <TextBlock Text="B" Grid.Row="2" Grid.Column="0" 
                                       VerticalAlignment="Center" 
                                       Foreground="{StaticResource SubtitleBrush}" 
                                       Margin="0,6,0,0"/>
                            <TextBox x:Name="TxtB" Grid.Row="2" Grid.Column="1" 
                                     Style="{StaticResource InputBoxStyle}" 
                                     Margin="0,6,0,0"
                                     PreviewTextInput="Rgb_PreviewTextInput" 
                                     TextChanged="Rgb_TextChanged"/>
                            <Border x:Name="BarBHost" Grid.Row="2" Grid.Column="2" 
                                    Height="8" Margin="8,6,0,0" CornerRadius="4" 
                                    Background="#20FFFFFF" 
                                    SizeChanged="BarHost_SizeChanged">
                                <Grid ClipToBounds="True">
                                    <Border x:Name="BarB" CornerRadius="4" 
                                            Background="#00D9FF" 
                                            HorizontalAlignment="Left" Width="0"/>
                                </Grid>
                            </Border>
                        </Grid>

                        <Rectangle Height="1" 
                                   Fill="{StaticResource CardBorder}" 
                                   Margin="0,10,0,10"/>

                        <!-- HEX 输入 -->
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                            <TextBlock Text="{DynamicResource ColorPicker_Hex}" 
                                       Foreground="{StaticResource SubtitleBrush}" 
                                       VerticalAlignment="Center"/>
                            <TextBox x:Name="TxtHex" 
                                     Width="90" 
                                     Margin="8,0,0,0"
                                     Style="{StaticResource InputBoxStyle}"
                                     CharacterCasing="Upper"
                                     MaxLength="6"
                                     TextChanged="TxtHex_TextChanged"/>
                            <Border Width="28" Height="28" 
                                    Margin="12,0,0,0"
                                    CornerRadius="8"
                                    BorderBrush="{StaticResource CardBorder}" 
                                    BorderThickness="1.5">
                                <Border.Background>
                                    <SolidColorBrush x:Name="SmallPreviewBrush" Color="#FF0000"/>
                                </Border.Background>
                                <Border.Effect>
                                    <DropShadowEffect Color="{Binding Color, ElementName=SmallPreviewBrush}" 
                                                      BlurRadius="8" 
                                                      ShadowDepth="0" 
                                                      Opacity="0.6"/>
                                </Border.Effect>
                            </Border>
                        </StackPanel>

                        <TextBlock Margin="0,10,0,0"
                                   Text="{DynamicResource ColorPicker_Hint}"
                                   Foreground="{StaticResource SubtitleBrush}"
                                   FontSize="10"
                                   TextWrapping="Wrap" 
                                   Opacity="0.7"/>

                        <!-- 当前颜色预览 -->
                        <TextBlock Text="{DynamicResource ColorPicker_CurrentColor}" 
                                   Margin="0,10,0,6" 
                                   Foreground="{StaticResource SubtitleBrush}"
                                   FontSize="12"/>
                        <Border Height="60" 
                                CornerRadius="10" 
                                BorderBrush="{StaticResource CardBorder}" 
                                BorderThickness="1.5">
                            <Border.Background>
                                <SolidColorBrush x:Name="LargePreviewBrush" Color="#FFA000"/>
                            </Border.Background>
                            <Border.Effect>
                                <DropShadowEffect Color="{Binding Color, ElementName=LargePreviewBrush}" 
                                                  BlurRadius="12" 
                                                  ShadowDepth="0" 
                                                  Opacity="0.5"/>
                            </Border.Effect>
                            <TextBlock x:Name="PreviewLabel"
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Center"
                                       FontWeight="Bold"
                                       FontSize="16"
                                       Foreground="{StaticResource TitleBrush}"/>
                        </Border>
                    </StackPanel>
                </Border>
            </Grid>

            <!-- ✅ 底部按钮 -->
            <StackPanel Grid.Row="2" 
                        Orientation="Horizontal" 
                        HorizontalAlignment="Right" 
                        Margin="0,14,0,0">
                <Button Content="{DynamicResource ColorPicker_ApplyButton}" 
                        Width="100" 
                        Style="{StaticResource ActionButtonStyle}" 
                        Click="Apply_Click"/>
                <Button Content="{DynamicResource ColorPicker_CancelButton}" 
                        Width="100" 
                        Style="{StaticResource SecondaryButtonStyle}" 
                        Click="Cancel_Click"/>
            </StackPanel>
        </Grid>
    </Border>
</Window>